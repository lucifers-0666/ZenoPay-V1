<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= pageTitle %></title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        
        :root {
            /* Colors */
            --color-primary-blue: #6366F1;
            --color-primary-purple: #8B5CF6;
            --color-light-blue: #3B82F6;
            --color-green: #10B981;
            --color-yellow: #F59E0B;
            --color-red: #EF4444;
            --color-background: #F3F4F6;
            --color-card: #FFFFFF;
            --color-text-dark: #1F2937;
            --color-text-gray: #6B7280;
            --color-text-light: #9CA3AF;
            --color-border: #E5E7EB;
            --color-divider: #D1D5DB;

            /* Gradients */
            --gradient-main: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            --gradient-blue-purple: linear-gradient(135deg, #6366F1, #8B5CF6);
            --gradient-blue-accent: linear-gradient(135deg, #3B82F6, #8B5CF6);
            --gradient-green: linear-gradient(135deg, #10B981, #059669);
            --gradient-orange: linear-gradient(135deg, #F59E0B, #D97706);
            --gradient-purple: linear-gradient(135deg, #8B5CF6, #6D28D9);

            /* Shadows */
            --shadow-sm: 0 2px 8px rgba(0, 0, 0, 0.06);
            --shadow-md: 0 4px 12px rgba(0, 0, 0, 0.08);
            --shadow-lg: 0 8px 24px rgba(0, 0, 0, 0.12);
            --shadow-xl: 0 20px 60px rgba(0, 0, 0, 0.15);
        }
        
        body {
            font-family: 'Inter', sans-serif;
            background: var(--color-background);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px;
            position: relative;
            overflow: hidden;
            transition: background 0.4s ease;
        }
        
        /* Animated Background Mesh */
        .bg-gradient {
            position: absolute;
            inset: 0;
            background: radial-gradient(circle at 20% 50%, rgba(99, 102, 241, 0.08) 0%, transparent 50%),
                        radial-gradient(circle at 80% 80%, rgba(139, 92, 246, 0.08) 0%, transparent 50%),
                        radial-gradient(circle at 40% 20%, rgba(59, 130, 246, 0.06) 0%, transparent 50%);
            animation: gradientShift 15s ease infinite;
            z-index: 0;
        }
        
        @keyframes gradientShift {
            0%, 100% { transform: translate(0, 0) scale(1); }
            33% { transform: translate(30px, -30px) scale(1.05); }
            66% { transform: translate(-20px, 20px) scale(0.95); }
        }
        
        /* Floating Shapes */
        .floating-shape {
            position: absolute;
            border-radius: 50%;
            opacity: 0.1;
            animation: float 20s infinite ease-in-out;
            z-index: 0;
        }
        
        .shape-1 {
            width: 300px;
            height: 300px;
            background: var(--gradient-blue-purple);
            top: -100px;
            left: -100px;
            animation-delay: 0s;
        }
        
        .shape-2 {
            width: 200px;
            height: 200px;
            background: var(--gradient-blue-accent);
            bottom: -50px;
            right: -50px;
            animation-delay: 5s;
        }
        
        .shape-3 {
            width: 150px;
            height: 150px;
            background: var(--gradient-orange);
            top: 50%;
            right: 10%;
            animation-delay: 10s;
        }
        
        @keyframes float {
            0%, 100% { transform: translate(0, 0) rotate(0deg); }
            25% { transform: translate(30px, -30px) rotate(90deg); }
            50% { transform: translate(-20px, 20px) rotate(180deg); }
            75% { transform: translate(20px, 30px) rotate(270deg); }
        }
        
        /* Main Container */
        .reset-wrapper {
            position: relative;
            z-index: 1;
            max-width: 550px;
            width: 100%;
            background: var(--color-card);
            backdrop-filter: blur(40px) saturate(120%);
            border: 2px solid var(--color-border);
            border-radius: 20px;
            padding: 50px;
            box-shadow: var(--shadow-xl);
            animation: slideUp 0.8s cubic-bezier(0.16, 1, 0.3, 1);
        }
        
        @keyframes slideUp {
            from { opacity: 0; transform: translateY(40px) scale(0.96); }
            to { opacity: 1; transform: translateY(0) scale(1); }
        }
        
        /* Theme Toggle */
        .theme-toggle {
            position: absolute;
            top: 30px;
            right: 30px;
            width: 44px;
            height: 44px;
            background: var(--color-background);
            border: 2px solid var(--color-border);
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            transition: all 0.3s ease;
            font-size: 18px;
            color: var(--color-text-gray);
        }
        
        .theme-toggle:hover {
            background: var(--color-border);
            transform: rotate(180deg);
        }
        
        /* Back Button */
        .back-button {
            display: inline-flex;
            align-items: center;
            gap: 8px;
            color: var(--color-text-gray);
            text-decoration: none;
            font-size: 14px;
            font-weight: 600;
            margin-bottom: 30px;
            transition: all 0.3s ease;
            padding: 8px 12px;
            border-radius: 10px;
        }
        
        .back-button:hover {
            color: var(--color-primary-blue);
            background: var(--color-background);
            transform: translateX(-4px);
        }
        
        .back-button i {
            font-size: 18px;
            transition: transform 0.3s ease;
        }
        
        .back-button:hover i {
            transform: translateX(-4px);
        }
        
        /* Email Icon Animation */
        .icon-container {
            width: 100px;
            height: 100px;
            margin: 0 auto 30px;
            position: relative;
        }
        
        .email-icon {
            width: 100%;
            height: 100%;
            background: var(--gradient-blue-purple);
            border-radius: 24px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 44px;
            color: white;
            filter: drop-shadow(0 10px 30px rgba(99, 102, 241, 0.4));
            animation: breathe 3s ease-in-out infinite;
            position: relative;
        }
        
        @keyframes breathe {
            0%, 100% { transform: scale(1); }
            50% { transform: scale(1.05); }
        }
        
        .pulse-ring {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            width: 100%;
            height: 100%;
            border: 3px solid var(--color-primary-blue);
            border-radius: 24px;
            animation: pulseRing 2s ease-out infinite;
        }
        
        @keyframes pulseRing {
            0% {
                transform: translate(-50%, -50%) scale(1);
                opacity: 0.8;
            }
            100% {
                transform: translate(-50%, -50%) scale(1.3);
                opacity: 0;
            }
        }
        
        /* Header */
        .form-header {
            text-align: center;
            margin-bottom: 40px;
        }
        
        .form-title {
            font-size: 32px;
            font-weight: 700;
            color: var(--color-text-dark);
            margin-bottom: 12px;
            letter-spacing: -0.5px;
        }
        
        .form-subtitle {
            font-size: 15px;
            color: var(--color-text-gray);
            line-height: 1.6;
            max-width: 400px;
            margin: 0 auto;
        }
        
        /* Step Indicator */
        .step-indicator {
            display: flex;
            justify-content: center;
            gap: 12px;
            margin-bottom: 30px;
        }
        
        .step {
            width: 40px;
            height: 40px;
            border-radius: 12px;
            background: var(--color-background);
            border: 2px solid var(--color-border);
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: 700;
            color: var(--color-text-light);
            transition: all 0.4s cubic-bezier(0.16, 1, 0.3, 1);
            position: relative;
        }
        
        .step.active {
            background: var(--gradient-blue-purple);
            border-color: var(--color-primary-blue);
            color: white;
            transform: scale(1.1);
            box-shadow: 0 8px 20px rgba(99, 102, 241, 0.4);
        }
        
        .step.completed {
            background: var(--color-green);
            border-color: var(--color-green);
            color: white;
        }
        
        .step.completed::after {
            content: '\F26B';
            font-family: 'bootstrap-icons';
            position: absolute;
            font-size: 16px;
        }
        
        /* Success/Error Alert */
        .alert {
            border-radius: 12px;
            padding: 16px 20px;
            margin-bottom: 24px;
            display: flex;
            align-items: center;
            gap: 12px;
            animation: slideIn 0.5s cubic-bezier(0.16, 1, 0.3, 1);
        }
        
        @keyframes slideIn {
            from { opacity: 0; transform: translateY(-10px); }
            to { opacity: 1; transform: translateY(0); }
        }
        
        .alert-success {
            background: rgba(16, 185, 129, 0.1);
            border: 2px solid var(--color-green);
            border-left-width: 6px;
        }
        
        .alert-success i {
            font-size: 22px;
            color: var(--color-green);
        }
        
        .alert-error {
            background: rgba(239, 68, 68, 0.1);
            border: 2px solid var(--color-red);
            border-left-width: 6px;
            animation: shake 0.5s ease;
        }
        
        @keyframes shake {
            0%, 100% { transform: translateX(0); }
            10%, 30%, 50%, 70%, 90% { transform: translateX(-8px); }
            20%, 40%, 60%, 80% { transform: translateX(8px); }
        }
        
        .alert-error i {
            font-size: 22px;
            color: var(--color-red);
        }
        
        .alert-text {
            flex: 1;
            margin: 0;
        }
        
        .alert-title {
            font-size: 15px;
            font-weight: 700;
            color: var(--color-text-dark);
            margin-bottom: 4px;
        }
        
        .alert-message {
            font-size: 14px;
            color: var(--color-text-gray);
            margin: 0;
        }
        
        /* Form Fields */
        .form-field {
            margin-bottom: 24px;
            opacity: 0;
            animation: revealField 0.6s cubic-bezier(0.16, 1, 0.3, 1) forwards;
            animation-delay: 0.2s;
        }
        
        @keyframes revealField {
            from { opacity: 0; transform: translateY(20px); }
            to { opacity: 1; transform: translateY(0); }
        }
        
        .input-group {
            position: relative;
        }
        
        .form-input {
            width: 100%;
            height: 56px;
            background: var(--color-background);
            border: 2px solid var(--color-border);
            border-radius: 12px;
            padding: 20px 50px 8px 18px;
            font-size: 16px;
            color: var(--color-text-dark);
            transition: all 0.3s cubic-bezier(0.16, 1, 0.3, 1);
            outline: none;
        }
        
        .form-input:focus {
            border-color: var(--color-primary-blue);
            background: rgba(99, 102, 241, 0.05);
            box-shadow: 0 0 0 4px rgba(99, 102, 241, 0.1);
        }
        
        .form-input.valid {
            border-color: var(--color-green);
            background: rgba(16, 185, 129, 0.05);
        }
        
        .form-input.error {
            border-color: var(--color-red);
            background: rgba(239, 68, 68, 0.05);
            animation: shake 0.5s ease;
        }
        
        .floating-label {
            position: absolute;
            left: 18px;
            top: 50%;
            transform: translateY(-50%);
            font-size: 16px;
            color: var(--color-text-light);
            pointer-events: none;
            transition: all 0.3s cubic-bezier(0.16, 1, 0.3, 1);
        }
        
        .form-input:focus ~ .floating-label,
        .form-input:not(:placeholder-shown) ~ .floating-label {
            top: 12px;
            font-size: 11px;
            font-weight: 600;
            color: var(--color-primary-blue);
            transform: translateY(0);
        }
        
        .input-icon {
            position: absolute;
            right: 18px;
            top: 50%;
            transform: translateY(-50%);
            color: var(--color-text-gray);
            font-size: 20px;
            transition: all 0.3s ease;
        }
        
        .input-icon.valid-check {
            color: var(--color-green);
            animation: checkPop 0.4s cubic-bezier(0.16, 1, 0.3, 1);
        }
        
        @keyframes checkPop {
            0% { transform: translateY(-50%) scale(0); }
            50% { transform: translateY(-50%) scale(1.3); }
            100% { transform: translateY(-50%) scale(1); }
        }
        
        /* Buttons */
        .btn-primary {
            width: 100%;
            height: 56px;
            background: var(--gradient-blue-purple);
            border: none;
            border-radius: 12px;
            font-size: 16px;
            font-weight: 700;
            color: white;
            letter-spacing: 0.5px;
            cursor: pointer;
            transition: all 0.3s cubic-bezier(0.16, 1, 0.3, 1);
            box-shadow: var(--shadow-md);
            margin-bottom: 16px;
            position: relative;
            overflow: hidden;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 10px;
        }
        
        .btn-primary::before {
            content: '';
            position: absolute;
            inset: 0;
            background: linear-gradient(135deg, rgba(255, 255, 255, 0.2), transparent);
            opacity: 0;
            transition: opacity 0.3s ease;
        }
        
        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: var(--shadow-lg);
        }
        
        .btn-primary:hover::before {
            opacity: 1;
        }
        
        .btn-primary:active {
            transform: translateY(0);
        }
        
        .btn-primary:disabled {
            opacity: 0.6;
            cursor: not-allowed;
            transform: none;
        }
        
        .btn-loading {
            pointer-events: none;
        }
        
        .spinner {
            width: 20px;
            height: 20px;
            border: 3px solid rgba(255, 255, 255, 0.3);
            border-top-color: white;
            border-radius: 50%;
            animation: spin 0.8s linear infinite;
        }
        
        @keyframes spin {
            to { transform: rotate(360deg); }
        }
        
        .btn-secondary {
            width: 100%;
            height: 56px;
            background: transparent;
            border: 2px solid var(--color-border);
            border-radius: 12px;
            font-size: 15px;
            font-weight: 600;
            color: var(--color-text-gray);
            cursor: pointer;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 8px;
        }
        
        .btn-secondary:hover {
            border-color: var(--color-primary-blue);
            background: rgba(99, 102, 241, 0.05);
            color: var(--color-primary-blue);
        }
        
        /* Info Box */
        .info-box {
            background: rgba(245, 158, 11, 0.08);
            border: 2px solid var(--color-yellow);
            border-left-width: 4px;
            border-radius: 12px;
            padding: 16px 18px;
            margin-top: 24px;
            display: flex;
            gap: 12px;
        }
        
        .info-box i {
            font-size: 20px;
            color: var(--color-yellow);
            margin-top: 2px;
        }
        
        .info-content {
            flex: 1;
        }
        
        .info-title {
            font-size: 14px;
            font-weight: 700;
            color: var(--color-text-dark);
            margin-bottom: 6px;
        }
        
        .info-list {
            list-style: none;
            padding: 0;
            margin: 0;
        }
        
        .info-list li {
            font-size: 13px;
            color: var(--color-text-gray);
            padding: 4px 0;
            padding-left: 20px;
            position: relative;
        }
        
        .info-list li::before {
            content: 'â€¢';
            position: absolute;
            left: 8px;
            color: var(--color-yellow);
            font-weight: bold;
        }
        
        /* Success Screen */
        .success-screen {
            text-align: center;
            display: none;
        }
        
        .success-screen.active {
            display: block;
            animation: fadeIn 0.6s ease;
        }
        
        @keyframes fadeIn {
            from { opacity: 0; }
            to { opacity: 1; }
        }
        
        .success-icon-large {
            width: 120px;
            height: 120px;
            background: linear-gradient(135deg, #10B981 0%, #059669 100%);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 60px;
            color: white;
            margin: 0 auto 30px;
            filter: drop-shadow(0 15px 40px rgba(16, 185, 129, 0.4));
            animation: successPop 0.6s cubic-bezier(0.16, 1, 0.3, 1);
        }
        
        @keyframes successPop {
            0% { transform: scale(0); opacity: 0; }
            50% { transform: scale(1.2); }
            100% { transform: scale(1); opacity: 1; }
        }
        
        .success-title {
            font-size: 28px;
            font-weight: 700;
            color: var(--color-text-dark);
            margin-bottom: 12px;
        }
        
        .success-message {
            font-size: 15px;
            color: var(--color-text-gray);
            line-height: 1.6;
            margin-bottom: 30px;
        }
        
        .email-highlight {
            font-weight: 700;
            color: var(--color-primary-blue);
        }
        
        /* Timer */
        .timer-display {
            display: inline-flex;
            align-items: center;
            gap: 8px;
            padding: 12px 20px;
            background: var(--color-background);
            border: 2px solid var(--color-border);
            border-radius: 12px;
            font-size: 14px;
            color: var(--color-text-gray);
            margin: 20px 0;
        }
        
        .timer-display i {
            font-size: 18px;
            color: var(--color-yellow);
        }
        
        .timer-value {
            font-weight: 700;
            color: var(--color-text-dark);
            font-family: 'Courier New', monospace;
        }
        
        /* Responsive */
        @media (max-width: 640px) {
            .reset-wrapper {
                padding: 40px 24px;
            }
            
            .form-title {
                font-size: 26px;
            }
            
            .icon-container {
                width: 80px;
                height: 80px;
            }
            
            .email-icon {
                font-size: 36px;
            }
            
            .theme-toggle {
                top: 20px;
                right: 20px;
            }
        }
    </style>
</head>
<body>
    
    <!-- Animated Background -->
    <div class="bg-gradient"></div>
    <div class="floating-shape shape-1"></div>
    <div class="floating-shape shape-2"></div>
    <div class="floating-shape shape-3"></div>
    
    <!-- Main Container -->
    <div class="reset-wrapper" 
         data-show-success="<%= typeof showSuccess !== 'undefined' ? showSuccess : false %>" 
         data-email="<%= typeof email !== 'undefined' ? email : '' %>">
        
        <!-- Theme Toggle -->
        <div class="theme-toggle" onclick="toggleTheme()" title="Toggle theme">
            <i class="bi bi-moon-stars" id="themeIcon"></i>
        </div>
        
        <!-- Request Form Screen -->
        <div id="requestScreen">
            
            <!-- Back Button -->
            <a href="/admin/login" class="back-button">
                <i class="bi bi-arrow-left"></i>
                <span>Back to Login</span>
            </a>
            
            <!-- Icon -->
            <div class="icon-container">
                <div class="pulse-ring"></div>
                <div class="email-icon">
                    <i class="bi bi-envelope-fill"></i>
                </div>
            </div>
            
            <!-- Header -->
            <div class="form-header">
                <h1 class="form-title">Reset Your Password</h1>
                <p class="form-subtitle">
                    Enter your admin email address and we'll send you a link to reset your password.
                </p>
            </div>
            
            <!-- Step Indicator -->
            <div class="step-indicator">
                <div class="step active">1</div>
                <div class="step">2</div>
            </div>
            
            <!-- Error Alert -->
            <% if (typeof error !== 'undefined' && error) { %>
            <div class="alert alert-error">
                <i class="bi bi-exclamation-triangle-fill"></i>
                <div class="alert-text">
                    <p class="alert-message"><%= error %></p>
                </div>
            </div>
            <% } %>
            
            <!-- Success Alert -->
            <% if (typeof success !== 'undefined' && success) { %>
            <div class="alert alert-success">
                <i class="bi bi-check-circle-fill"></i>
                <div class="alert-text">
                    <p class="alert-message"><%= success %></p>
                </div>
            </div>
            <% } %>
            
            <!-- Form -->
            <form id="resetForm" action="/admin/forgot-password" method="POST">
                
                <!-- Email Field -->
                <div class="form-field">
                    <div class="input-group">
                        <input 
                            type="email" 
                            id="emailInput"
                            name="email"
                            class="form-input"
                            placeholder=" "
                            required
                            autocomplete="email"
                            autofocus
                            value="<%= typeof email !== 'undefined' ? email : '' %>">
                        <label class="floating-label">Admin Email Address</label>
                        <i class="bi input-icon" id="emailIcon"></i>
                    </div>
                </div>
                
                <!-- Submit Button -->
                <button type="submit" class="btn-primary" id="submitBtn">
                    <span id="btnText">Send Reset Link</span>
                </button>
                
                <!-- Back to Login -->
                <a href="/admin/login" style="text-decoration: none;">
                    <button type="button" class="btn-secondary">
                        <i class="bi bi-arrow-left"></i>
                        <span>Return to Login</span>
                    </button>
                </a>
                
            </form>
            
            <!-- Info Box -->
            <div class="info-box">
                <i class="bi bi-info-circle-fill"></i>
                <div class="info-content">
                    <div class="info-title">Important Information</div>
                    <ul class="info-list">
                        <li>Reset link is valid for 15 minutes only</li>
                        <li>Check your spam folder if you don't see the email</li>
                        <li>Only admin accounts can request password reset</li>
                    </ul>
                </div>
            </div>
            
        </div>
        
        <!-- Success Screen -->
        <div class="success-screen" id="successScreen">
            
            <!-- Success Icon -->
            <div class="success-icon-large">
                <i class="bi bi-check-lg"></i>
            </div>
            
            <!-- Header -->
            <div class="form-header">
                <h1 class="success-title">Check Your Email</h1>
                <p class="success-message">
                    We've sent a password reset link to<br>
                    <span class="email-highlight" id="displayEmail"></span>
                </p>
            </div>
            
            <!-- Step Indicator -->
            <div class="step-indicator">
                <div class="step completed">1</div>
                <div class="step active">2</div>
            </div>
            
            <!-- Timer -->
            <div class="timer-display">
                <i class="bi bi-clock-fill"></i>
                <span>Link expires in: <span class="timer-value" id="timerValue">15:00</span></span>
            </div>
            
            <!-- Instructions -->
            <div class="info-box">
                <i class="bi bi-lightbulb-fill"></i>
                <div class="info-content">
                    <div class="info-title">Next Steps</div>
                    <ul class="info-list">
                        <li>Open the email from ZenoPay Admin</li>
                        <li>Click the "Reset Password" button</li>
                        <li>Create a new secure password</li>
                        <li>Sign in with your new credentials</li>
                    </ul>
                </div>
            </div>
            
            <!-- Actions -->
            <a href="/admin/login" style="text-decoration: none; margin-top: 24px; display: block;">
                <button type="button" class="btn-primary">
                    <i class="bi bi-arrow-left-circle"></i>
                    <span>Back to Login</span>
                </button>
            </a>
            
            <button type="button" class="btn-secondary" onclick="location.reload()">
                <i class="bi bi-arrow-clockwise"></i>
                <span>Resend Email</span>
            </button>
            
        </div>
        
    </div>
    
    <script>
        // Email Validation
        const emailInput = document.getElementById('emailInput');
        const emailIcon = document.getElementById('emailIcon');
        
        emailInput?.addEventListener('input', function() {
            const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
            
            if (emailRegex.test(this.value)) {
                this.classList.add('valid');
                this.classList.remove('error');
                emailIcon.className = 'bi bi-check-circle-fill input-icon valid-check';
            } else {
                this.classList.remove('valid');
                emailIcon.className = 'bi input-icon';
            }
        });
        
        // Form Submission
        const resetForm = document.getElementById('resetForm');
        const submitBtn = document.getElementById('submitBtn');
        const btnText = document.getElementById('btnText');
        
        resetForm?.addEventListener('submit', function(e) {
            if (!emailInput.value || !emailInput.classList.contains('valid')) {
                e.preventDefault();
                emailInput.classList.add('error');
                return;
            }
            
            // Show loading state
            submitBtn.disabled = true;
            submitBtn.classList.add('btn-loading');
            btnText.textContent = 'Sending...';
            
            // Add spinner
            const spinner = document.createElement('div');
            spinner.className = 'spinner';
            btnText.insertAdjacentElement('beforebegin', spinner);
        });
        
        // Show Success Screen (if redirected from backend)
        window.addEventListener('DOMContentLoaded', function() {
            const wrapper = document.querySelector('.reset-wrapper');
            const showSuccess = wrapper.getAttribute('data-show-success') === 'true';
            const email = wrapper.getAttribute('data-email');
            
            if (showSuccess) {
                document.getElementById('requestScreen').style.display = 'none';
                document.getElementById('successScreen').classList.add('active');
                document.getElementById('displayEmail').textContent = email;
                startTimer();
            }
        });
        
        // Timer Function
        function startTimer() {
            let timeLeft = 15 * 60; // 15 minutes in seconds
            const timerValue = document.getElementById('timerValue');
            
            const interval = setInterval(() => {
                const minutes = Math.floor(timeLeft / 60);
                const seconds = timeLeft % 60;
                
                timerValue.textContent = `${minutes.toString().padStart(2, '0')}:${seconds.toString().padStart(2, '0')}`;
                
                if (timeLeft <= 0) {
                    clearInterval(interval);
                    timerValue.textContent = 'EXPIRED';
                    timerValue.style.color = 'var(--error)';
                }
                
                timeLeft--;
            }, 1000);
        }
        
        // Theme Toggle
        function toggleTheme() {
            const body = document.body;
            const themeIcon = document.getElementById('themeIcon');
            
            if (body.hasAttribute('data-theme')) {
                body.removeAttribute('data-theme');
                themeIcon.classList.remove('bi-sun');
                themeIcon.classList.add('bi-moon-stars');
                localStorage.setItem('theme', 'dark');
            } else {
                body.setAttribute('data-theme', 'light');
                themeIcon.classList.remove('bi-moon-stars');
                themeIcon.classList.add('bi-sun');
                localStorage.setItem('theme', 'light');
            }
        }
        
        // Load Saved Theme
        window.addEventListener('DOMContentLoaded', () => {
            const savedTheme = localStorage.getItem('theme');
            const themeIcon = document.getElementById('themeIcon');
            
            if (savedTheme === 'light') {
                document.body.setAttribute('data-theme', 'light');
                themeIcon.classList.remove('bi-moon-stars');
                themeIcon.classList.add('bi-sun');
            }
        });
        
        // Mouse Movement Effect
        document.addEventListener('mousemove', function(e) {
            const shapes = document.querySelectorAll('.floating-shape');
            const x = e.clientX / window.innerWidth;
            const y = e.clientY / window.innerHeight;
            
            shapes.forEach((shape, index) => {
                const speed = (index + 1) * 20;
                const xMove = (x - 0.5) * speed;
                const yMove = (y - 0.5) * speed;
                
                shape.style.transform = `translate(${xMove}px, ${yMove}px)`;
            });
        });
    </script>
    
</body>
</html>
