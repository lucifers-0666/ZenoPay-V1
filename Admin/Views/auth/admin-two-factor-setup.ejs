                <p class="alert-text" id="errorText"></p>
            </div>
            
            <div class="verification-container">
                <div class="code-inputs" id="codeInputs">
                    <input type="text" class="code-input" maxlength="1" pattern="[0-9]" inputmode="numeric" id="digit1">
                    <input type="text" class="code-input" maxlength="1" pattern="[0-9]" inputmode="numeric" id="digit2">
                    <input type="text" class="code-input" maxlength="1" pattern="[0-9]" inputmode="numeric" id="digit3">
                    <input type="text" class="code-input" maxlength="1" pattern="[0-9]" inputmode="numeric" id="digit4">
                    <input type="text" class="code-input" maxlength="1" pattern="[0-9]" inputmode="numeric" id="digit5">
                    <input type="text" class="code-input" maxlength="1" pattern="[0-9]" inputmode="numeric" id="digit6">
