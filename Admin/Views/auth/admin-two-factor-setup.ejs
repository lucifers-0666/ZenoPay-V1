    <script>
        let currentStep = 1;
        let secret = '';
        let qrCodeUrl = '';
        let backupCodes = [];
        
        // Initialize on page load
        window.addEventListener('DOMContentLoaded', function() {
            const savedTheme = localStorage.getItem('theme');
            if (savedTheme === 'light') {
                document.body.setAttribute('data-theme', 'light');
                document.getElementById('themeIcon').classList.remove('bi-moon-stars');
                document.getElementById('themeIcon').classList.add('bi-sun');
            }
            
            // Generate 2FA data
            generate2FAData();
            
            // Setup code inputs
            setupCodeInputs();

            // Initialize stepper state
            updateStep();
        });
        
        // Generate 2FA Secret and QR Code
        async function generate2FAData() {
            try {
                const response = await fetch('/admin/2fa/generate', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' }
                });
                
                const data = await response.json();
                
                if (data.success) {
                    secret = data.secret;
                    qrCodeUrl = data.qrCode;
                    backupCodes = data.backupCodes;
                    
                    // Display QR Code
                    setTimeout(() => {
                        document.getElementById('qrSkeleton').style.display = 'none';
                        const qrImage = document.getElementById('qrImage');
                        qrImage.src = qrCodeUrl;
                        qrImage.style.display = 'block';
                    }, 1000);
                    
                    // Display manual code
                    document.getElementById('manualCode').textContent = secret;
                    
                    // Display backup codes
                    const grid = document.getElementById('backupCodesGrid');
                    grid.innerHTML = '';
                    backupCodes.forEach(code => {
                        const div = document.createElement('div');
                        div.className = 'backup-code-item';
                        div.textContent = code;
                        grid.appendChild(div);
                    });
                }
            } catch (error) {
                console.error('Error generating 2FA data:', error);
            }
        }
        
        // Navigation
        function nextStep() {
            if (currentStep < 4) {
                currentStep++;
                updateStep();
            }
        }
        
        function prevStep() {
            if (currentStep > 1) {
                currentStep--;
                updateStep();
            }
        }
        
        function updateStep() {
            // Hide all steps
            document.querySelectorAll('.step-container').forEach(el => {
                el.classList.remove('active');
            });
            
            // Show current step
            document.getElementById(`step${currentStep}`).classList.add('active');
            
            // Update progress
            const progressSteps = document.querySelectorAll('.progress-step');
            const progressLabels = document.querySelectorAll('.progress-label');
            
            progressSteps.forEach((step, index) => {
                const stepNum = index + 1;
                if (stepNum < currentStep) {
                    step.classList.add('completed');
                    step.classList.remove('active');
                } else if (stepNum === currentStep) {
                    step.classList.add('active');
                    step.classList.remove('completed');
                } else {
                    step.classList.remove('active', 'completed');
                }
            });
            
            progressLabels.forEach((label, index) => {
                if (index + 1 === currentStep) {
                    label.classList.add('active');
                } else {
                    label.classList.remove('active');
                }
            });
            
            // Update progress bar
            const progress = ((currentStep - 1) / 3) * 100;
            document.getElementById('progressFill').style.width = `${progress}%`;

            // Show Back to Login only on first step
            const backToLogin = document.getElementById('backToLogin');
            if (backToLogin) {
                backToLogin.style.visibility = currentStep === 1 ? 'visible' : 'hidden';
            }
            
            // Auto-focus on code input in step 3
            if (currentStep === 3) {
                setTimeout(() => {
                    document.getElementById('digit1').focus();
                }, 300);
            }
        }
        
        // Code Input Handling
        function setupCodeInputs() {
            const inputs = document.querySelectorAll('.code-input');
            
            inputs.forEach((input, index) => {
                input.addEventListener('input', function(e) {
                    const value = e.target.value;
                    
                    // Only allow numbers
                    if (!/^\d*$/.test(value)) {
                        e.target.value = '';
                        return;
                    }
                    
                    // Move to next input
                    if (value && index < inputs.length - 1) {
                        inputs[index + 1].focus();
                    }
                    
                    // Auto-submit when all filled
                    if (index === inputs.length - 1 && value) {
                        const code = Array.from(inputs).map(i => i.value).join('');
                        if (code.length === 6) {
                            setTimeout(() => verifyCode(), 300);
                        }
                    }
                    
                    // Remove error state
                    input.classList.remove('error');
                    document.getElementById('errorAlert').style.display = 'none';
                });
                
                // Handle backspace
                input.addEventListener('keydown', function(e) {
                    if (e.key === 'Backspace' && !e.target.value && index > 0) {
                        inputs[index - 1].focus();
                    }
                });
                
                // Handle paste
                input.addEventListener('paste', function(e) {
                    e.preventDefault();
                    const pastedData = e.clipboardData.getData('text').replace(/\D/g, '');
                    
                    if (pastedData.length === 6) {
                        inputs.forEach((inp, idx) => {
                            inp.value = pastedData[idx] || '';
                        });
                        inputs[5].focus();
                    }
                });
            });
        }
        
        // Verify Code
        async function verifyCode() {
            const inputs = document.querySelectorAll('.code-input');
            const code = Array.from(inputs).map(i => i.value).join('');
            
            if (code.length !== 6) {
                showError('Please enter all 6 digits');
                return;
            }
            
            const verifyBtn = document.getElementById('verifyBtn');
            verifyBtn.disabled = true;
            verifyBtn.innerHTML = '<div class="spinner" style="width: 20px; height: 20px; border: 3px solid rgba(255,255,255,0.3); border-top-color: white; border-radius: 50%; animation: spin 0.8s linear infinite;"></div> Verifying...';
            
            try {
                const response = await fetch('/admin/2fa/verify', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ code, secret })
                });
                
                const data = await response.json();
                
                if (data.success) {
                    inputs.forEach(input => input.classList.add('valid'));
                    setTimeout(() => {
                        currentStep = 4;
                        updateStep();
                    }, 500);
                } else {
                    showError('Invalid code. Please try again.');
                    inputs.forEach(input => {
                        input.classList.add('error');
                        input.value = '';
                    });
                    inputs[0].focus();
                }
            } catch (error) {
                showError('Verification failed. Please try again.');
            } finally {
                verifyBtn.disabled = false;
                verifyBtn.innerHTML = '<span>Verify & Enable 2FA</span><i class="bi bi-check-lg"></i>';
            }
        }
        
        function showError(message) {
            const errorAlert = document.getElementById('errorAlert');
            const errorText = document.getElementById('errorText');
            errorText.textContent = message;
            errorAlert.style.display = 'flex';
            
            setTimeout(() => {
                errorAlert.style.display = 'none';
            }, 5000);
        }
        
        // Copy Functions
        function copyCode(type) {
            const code = document.getElementById('manualCode').textContent;
            navigator.clipboard.writeText(code);
            
            const btn = document.getElementById('copyBtnText1');
            const originalText = btn.textContent;
            btn.textContent = 'Copied!';
            btn.parentElement.classList.add('copied');
            
            showToast('Code copied to clipboard!');
            
            setTimeout(() => {
                btn.textContent = originalText;
                btn.parentElement.classList.remove('copied');
            }, 2000);
        }
        
        function copyBackupCodes() {
            const codes = backupCodes.join('\n');
            navigator.clipboard.writeText(codes);
            
            const btn = document.getElementById('copyBtnText2');
            btn.textContent = 'Copied!';
            
            showToast('Backup codes copied to clipboard!');
            
            setTimeout(() => {
                btn.textContent = 'Download Backup Codes';
            }, 2000);
        }
        
        function downloadBackupCodes() {
            const codes = backupCodes.join('\n');
            const blob = new Blob([codes], { type: 'text/plain' });
            const url = URL.createObjectURL(blob);
            const a = document.createElement('a');
            a.href = url;
            a.download = 'zenopay-backup-codes.txt';
            a.click();
            URL.revokeObjectURL(url);
            
            showToast('Backup codes downloaded!');
        }
        
        // Toast Notification
        function showToast(message) {
            const toast = document.createElement('div');
            toast.className = 'toast success';
            toast.innerHTML = `
                <div class="toast-icon">
                    <i class="bi bi-check-lg"></i>
                </div>
                <div class="toast-text">${message}</div>
            `;
            
            document.body.appendChild(toast);
            
            setTimeout(() => {
                toast.style.animation = 'toastIn 0.4s cubic-bezier(0.16, 1, 0.3, 1) reverse';
                setTimeout(() => toast.remove(), 400);
            }, 3000);
        }
        
        // Regenerate QR
        function regenerateQR() {
            currentStep = 1;
            updateStep();
            generate2FAData();
            showToast('Generating new QR code...');
        }
        
        // Go to Dashboard
        function goToDashboard() {
            window.location.href = '/admin/dashboard';
        }

        // Back to Login
        function goToLogin() {
            window.location.href = '/admin/login';
        }
        
        // Theme Toggle
        function toggleTheme() {
            const body = document.body;
            const themeIcon = document.getElementById('themeIcon');
            
            if (body.hasAttribute('data-theme')) {
                body.removeAttribute('data-theme');
                themeIcon.classList.remove('bi-sun');
                themeIcon.classList.add('bi-moon-stars');
                localStorage.setItem('theme', 'dark');
            } else {
                body.setAttribute('data-theme', 'light');
                themeIcon.classList.remove('bi-moon-stars');
                themeIcon.classList.add('bi-sun');
                localStorage.setItem('theme', 'light');
            }
        }
    </script>
    
