<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= pageTitle %></title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        
        :root {
            --bg-dark: #0F172A;
            --bg-darker: #020617;
            --card-bg: rgba(255, 255, 255, 0.06);
            --card-border: rgba(255, 255, 255, 0.1);
            --text-primary: #F8FAFC;
            --text-secondary: #CBD5E1;
            --text-muted: #64748B;
            --input-bg: rgba(255, 255, 255, 0.04);
            --input-border: rgba(255, 255, 255, 0.08);
            --primary: #0EA5E9;
            --primary-dark: #0284C7;
            --success: #10B981;
            --error: #EF4444;
            --warning: #F59E0B;
            --gradient-1: linear-gradient(135deg, #667EEA 0%, #764BA2 100%);
            --gradient-2: linear-gradient(135deg, #0EA5E9 0%, #06B6D4 100%);
        }
        
        [data-theme="light"] {
            --bg-dark: #F1F5F9;
            --bg-darker: #E2E8F0;
            --card-bg: rgba(255, 255, 255, 0.9);
            --card-border: rgba(15, 23, 42, 0.1);
            --text-primary: #0F172A;
            --text-secondary: #475569;
            --text-muted: #94A3B8;
            --input-bg: rgba(15, 23, 42, 0.04);
            --input-border: rgba(15, 23, 42, 0.1);
        }
        
        body {
            font-family: 'Inter', sans-serif;
            background: var(--bg-dark);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px;
            position: relative;
            overflow: hidden;
            transition: background 0.4s ease;
        }
        
        /* Animated Background */
        .bg-gradient {
            position: absolute;
            inset: 0;
            background: radial-gradient(circle at 20% 50%, rgba(102, 126, 234, 0.15) 0%, transparent 50%),
                        radial-gradient(circle at 80% 80%, rgba(6, 182, 212, 0.15) 0%, transparent 50%),
                        radial-gradient(circle at 40% 20%, rgba(14, 165, 233, 0.1) 0%, transparent 50%);
            animation: gradientShift 15s ease infinite;
            z-index: 0;
        }
        
        @keyframes gradientShift {
            0%, 100% { transform: translate(0, 0) scale(1); }
            33% { transform: translate(30px, -30px) scale(1.05); }
            66% { transform: translate(-20px, 20px) scale(0.95); }
        }
        
        /* Floating Shapes */
        .floating-shape {
            position: absolute;
            border-radius: 50%;
            opacity: 0.1;
            animation: float 20s infinite ease-in-out;
            z-index: 0;
        }
        
        .shape-1 {
            width: 300px;
            height: 300px;
            background: var(--gradient-1);
            top: -100px;
            left: -100px;
        }
        
        .shape-2 {
            width: 200px;
            height: 200px;
            background: var(--gradient-2);
            bottom: -50px;
            right: -50px;
            animation-delay: 5s;
        }
        
        @keyframes float {
            0%, 100% { transform: translate(0, 0) rotate(0deg); }
            25% { transform: translate(30px, -30px) rotate(90deg); }
            50% { transform: translate(-20px, 20px) rotate(180deg); }
            75% { transform: translate(20px, 30px) rotate(270deg); }
        }
        
        /* Main Container */
        .reset-wrapper {
            position: relative;
            z-index: 1;
            max-width: 550px;
            width: 100%;
            background: var(--card-bg);
            backdrop-filter: blur(40px) saturate(120%);
            border: 1px solid var(--card-border);
            border-radius: 32px;
            padding: 50px;
            box-shadow: 0 25px 80px rgba(0, 0, 0, 0.3);
            animation: slideUp 0.8s cubic-bezier(0.16, 1, 0.3, 1);
        }
        
        @keyframes slideUp {
            from { opacity: 0; transform: translateY(40px) scale(0.96); }
            to { opacity: 1; transform: translateY(0) scale(1); }
        }
        
        /* Theme Toggle */
        .theme-toggle {
            position: absolute;
            top: 30px;
            right: 30px;
            width: 44px;
            height: 44px;
            background: var(--input-bg);
            border: 1px solid var(--input-border);
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            transition: all 0.3s ease;
            font-size: 18px;
            color: var(--text-secondary);
        }
        
        .theme-toggle:hover {
            background: var(--input-border);
            transform: rotate(180deg);
        }
        
        /* Lock Icon */
        .icon-container {
            width: 100px;
            height: 100px;
            margin: 0 auto 30px;
            position: relative;
        }
        
        .lock-icon {
            width: 100%;
            height: 100%;
            background: var(--gradient-2);
            border-radius: 24px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 44px;
            color: white;
            filter: drop-shadow(0 10px 30px rgba(14, 165, 233, 0.4));
            animation: breathe 3s ease-in-out infinite;
        }
        
        .lock-icon.unlocked {
            background: linear-gradient(135deg, #10B981 0%, #059669 100%);
            animation: unlock 0.8s cubic-bezier(0.16, 1, 0.3, 1);
        }
        
        @keyframes breathe {
            0%, 100% { transform: scale(1); }
            50% { transform: scale(1.05); }
        }
        
        @keyframes unlock {
            0% { transform: scale(1) rotate(0deg); }
            25% { transform: scale(1.2) rotate(-10deg); }
            50% { transform: scale(0.9) rotate(10deg); }
            75% { transform: scale(1.1) rotate(-5deg); }
            100% { transform: scale(1) rotate(0deg); }
        }
        
        /* Header */
        .form-header {
            text-align: center;
            margin-bottom: 40px;
        }
        
        .form-title {
            font-size: 32px;
            font-weight: 700;
            color: var(--text-primary);
            margin-bottom: 12px;
            letter-spacing: -0.5px;
        }
        
        .form-subtitle {
            font-size: 15px;
            color: var(--text-muted);
            line-height: 1.6;
        }
        
        /* Error Alert */
        .alert {
            border-radius: 14px;
            padding: 16px 20px;
            margin-bottom: 24px;
            display: flex;
            align-items: center;
            gap: 12px;
            animation: slideIn 0.5s cubic-bezier(0.16, 1, 0.3, 1);
        }
        
        @keyframes slideIn {
            from { opacity: 0; transform: translateY(-10px); }
            to { opacity: 1; transform: translateY(0); }
        }
        
        .alert-error {
            background: rgba(239, 68, 68, 0.1);
            border: 1.5px solid rgba(239, 68, 68, 0.3);
            animation: shake 0.5s ease;
        }
        
        @keyframes shake {
            0%, 100% { transform: translateX(0); }
            10%, 30%, 50%, 70%, 90% { transform: translateX(-8px); }
            20%, 40%, 60%, 80% { transform: translateX(8px); }
        }
        
        .alert-error i {
            font-size: 22px;
            color: var(--error);
        }
        
        .alert-text {
            flex: 1;
            font-size: 14px;
            color: var(--text-secondary);
            margin: 0;
        }
        
        /* Form Fields */
        .form-field {
            margin-bottom: 24px;
            opacity: 0;
            animation: revealField 0.6s cubic-bezier(0.16, 1, 0.3, 1) forwards;
        }
        
        .form-field:nth-child(1) { animation-delay: 0.1s; }
        .form-field:nth-child(2) { animation-delay: 0.2s; }
        
        @keyframes revealField {
            from { opacity: 0; transform: translateY(20px); }
            to { opacity: 1; transform: translateY(0); }
        }
        
        .input-group {
            position: relative;
        }
        
        .form-input {
            width: 100%;
            height: 56px;
            background: var(--input-bg);
            border: 2px solid var(--input-border);
            border-radius: 14px;
            padding: 20px 50px 8px 18px;
            font-size: 16px;
            color: var(--text-primary);
            transition: all 0.3s cubic-bezier(0.16, 1, 0.3, 1);
            outline: none;
        }
        
        .form-input:focus {
            border-color: var(--primary);
            background: rgba(14, 165, 233, 0.05);
            box-shadow: 0 0 0 4px rgba(14, 165, 233, 0.1);
        }
        
        .form-input.valid {
            border-color: var(--success);
            background: rgba(16, 185, 129, 0.05);
        }
        
        .form-input.error {
            border-color: var(--error);
            background: rgba(239, 68, 68, 0.05);
            animation: shake 0.5s ease;
        }
        
        /* Password Strength Indicator */
        .form-input.strength-weak {
            box-shadow: 0 0 20px rgba(239, 68, 68, 0.3);
        }
        
        .form-input.strength-medium {
            box-shadow: 0 0 20px rgba(245, 158, 11, 0.3);
        }
        
        .form-input.strength-strong {
            box-shadow: 0 0 20px rgba(16, 185, 129, 0.3);
        }
        
        .floating-label {
            position: absolute;
            left: 18px;
            top: 50%;
            transform: translateY(-50%);
            font-size: 16px;
            color: var(--text-muted);
            pointer-events: none;
            transition: all 0.3s cubic-bezier(0.16, 1, 0.3, 1);
        }
        
        .form-input:focus ~ .floating-label,
        .form-input:not(:placeholder-shown) ~ .floating-label {
            top: 12px;
            font-size: 11px;
            font-weight: 600;
            color: var(--primary);
            transform: translateY(0);
        }
        
        .input-icon {
            position: absolute;
            right: 18px;
            top: 50%;
            transform: translateY(-50%);
            color: var(--text-muted);
            font-size: 20px;
            cursor: pointer;
            transition: all 0.3s ease;
        }
        
        .input-icon:hover {
            color: var(--primary);
        }
        
        .input-icon.valid-check {
            color: var(--success);
            animation: checkPop 0.4s cubic-bezier(0.16, 1, 0.3, 1);
            cursor: default;
        }
        
        @keyframes checkPop {
            0% { transform: translateY(-50%) scale(0); }
            50% { transform: translateY(-50%) scale(1.3); }
            100% { transform: translateY(-50%) scale(1); }
        }
        
        /* Password Strength Bar */
        .strength-meter {
            margin-top: 8px;
            height: 4px;
            background: var(--input-bg);
            border-radius: 2px;
            overflow: hidden;
        }
        
        .strength-bar {
            height: 100%;
            width: 0%;
            transition: all 0.3s ease;
            border-radius: 2px;
        }
        
        .strength-bar.weak {
            width: 33%;
            background: var(--error);
        }
        
        .strength-bar.medium {
            width: 66%;
            background: var(--warning);
        }
        
        .strength-bar.strong {
            width: 100%;
            background: var(--success);
        }
        
        .strength-text {
            font-size: 12px;
            margin-top: 6px;
            font-weight: 600;
        }
        
        .strength-text.weak { color: var(--error); }
        .strength-text.medium { color: var(--warning); }
        .strength-text.strong { color: var(--success); }
        
        /* Requirements List */
        .requirements {
            margin-top: 16px;
            padding: 16px;
            background: var(--input-bg);
            border-radius: 12px;
            border: 1px solid var(--input-border);
        }
        
        .requirements-title {
            font-size: 13px;
            font-weight: 700;
            color: var(--text-secondary);
            margin-bottom: 10px;
        }
        
        .requirement-item {
            display: flex;
            align-items: center;
            gap: 8px;
            padding: 6px 0;
            font-size: 13px;
            color: var(--text-muted);
            transition: color 0.3s ease;
        }
        
        .requirement-item i {
            font-size: 14px;
            transition: all 0.3s ease;
        }
        
        .requirement-item.met {
            color: var(--success);
        }
        
        .requirement-item.met i {
            color: var(--success);
        }
        
        /* Button */
        .btn-primary {
            width: 100%;
            height: 56px;
            background: var(--gradient-2);
            border: none;
            border-radius: 14px;
            font-size: 16px;
            font-weight: 700;
            color: white;
            letter-spacing: 0.5px;
            cursor: pointer;
            transition: all 0.3s cubic-bezier(0.16, 1, 0.3, 1);
            box-shadow: 0 10px 30px rgba(14, 165, 233, 0.3);
            margin-top: 24px;
            position: relative;
            overflow: hidden;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 10px;
        }
        
        .btn-primary::before {
            content: '';
            position: absolute;
            inset: 0;
            background: linear-gradient(135deg, rgba(255, 255, 255, 0.2), transparent);
            opacity: 0;
            transition: opacity 0.3s ease;
        }
        
        .btn-primary:hover:not(:disabled) {
            transform: translateY(-2px);
            box-shadow: 0 15px 40px rgba(14, 165, 233, 0.4);
        }
        
        .btn-primary:hover::before {
            opacity: 1;
        }
        
        .btn-primary:disabled {
            opacity: 0.6;
            cursor: not-allowed;
        }
        
        .spinner {
            width: 20px;
            height: 20px;
            border: 3px solid rgba(255, 255, 255, 0.3);
            border-top-color: white;
            border-radius: 50%;
            animation: spin 0.8s linear infinite;
        }
        
        @keyframes spin {
            to { transform: rotate(360deg); }
        }
        
        /* Back to Login Link */
        .back-to-login {
            text-align: center;
            margin-top: 24px;
        }
        
        .back-link {
            color: var(--primary);
            text-decoration: none;
            font-size: 14px;
            font-weight: 600;
            transition: all 0.3s ease;
            display: inline-flex;
            align-items: center;
            gap: 6px;
        }
        
        .back-link:hover {
            color: var(--primary-dark);
            gap: 10px;
        }
        
        /* Responsive */
        @media (max-width: 640px) {
            .reset-wrapper {
                padding: 40px 24px;
            }
            
            .form-title {
                font-size: 26px;
            }
            
            .icon-container {
                width: 80px;
                height: 80px;
            }
            
            .lock-icon {
                font-size: 36px;
            }
        }
    </style>
</head>
<body>
    
    <!-- Animated Background -->
    <div class="bg-gradient"></div>
    <div class="floating-shape shape-1"></div>
    <div class="floating-shape shape-2"></div>
    
    <!-- Main Container -->
    <div class="reset-wrapper">
        
        <!-- Theme Toggle -->
        <div class="theme-toggle" onclick="toggleTheme()" title="Toggle theme">
            <i class="bi bi-moon-stars" id="themeIcon"></i>
        </div>
        
        <% if (validToken) { %>
        <!-- Valid Token - Show Reset Form -->
        
        <!-- Lock Icon -->
        <div class="icon-container">
            <div class="lock-icon" id="lockIcon">
                <i class="bi bi-lock-fill"></i>
            </div>
        </div>
        
        <!-- Header -->
        <div class="form-header">
            <h1 class="form-title">Create New Password</h1>
            <p class="form-subtitle">
                Choose a strong password to secure your admin account
            </p>
        </div>
        
        <!-- Error Alert -->
        <% if (error) { %>
        <div class="alert alert-error">
            <i class="bi bi-exclamation-triangle-fill"></i>
            <p class="alert-text"><%= error %></p>
        </div>
        <% } %>
        
        <!-- Form -->
        <form id="resetPasswordForm" action="/admin/reset-password/<%= token %>" method="POST">
            
            <!-- New Password Field -->
            <div class="form-field">
                <div class="input-group">
                    <input 
                        type="password" 
                        id="passwordInput"
                        name="password"
                        class="form-input"
                        placeholder=" "
                        required
                        autocomplete="new-password"
                        autofocus>
                    <label class="floating-label">New Password</label>
                    <i class="bi bi-eye input-icon" id="passwordToggle" onclick="togglePassword('passwordInput', 'passwordToggle')"></i>
                </div>
                
                <!-- Strength Meter -->
                <div class="strength-meter">
                    <div class="strength-bar" id="strengthBar"></div>
                </div>
                <div class="strength-text" id="strengthText"></div>
            </div>
            
            <!-- Confirm Password Field -->
            <div class="form-field">
                <div class="input-group">
                    <input 
                        type="password" 
                        id="confirmPasswordInput"
                        name="confirmPassword"
                        class="form-input"
                        placeholder=" "
                        required
                        autocomplete="new-password">
                    <label class="floating-label">Confirm Password</label>
                    <i class="bi bi-eye input-icon" id="confirmToggle" onclick="togglePassword('confirmPasswordInput', 'confirmToggle')"></i>
                </div>
            </div>
            
            <!-- Password Requirements -->
            <div class="requirements">
                <div class="requirements-title">Password Requirements:</div>
                <div class="requirement-item" id="req-length">
                    <i class="bi bi-circle"></i>
                    <span>At least 8 characters long</span>
                </div>
                <div class="requirement-item" id="req-uppercase">
                    <i class="bi bi-circle"></i>
                    <span>One uppercase letter</span>
                </div>
                <div class="requirement-item" id="req-lowercase">
                    <i class="bi bi-circle"></i>
                    <span>One lowercase letter</span>
                </div>
                <div class="requirement-item" id="req-number">
                    <i class="bi bi-circle"></i>
                    <span>One number</span>
                </div>
                <div class="requirement-item" id="req-special">
                    <i class="bi bi-circle"></i>
                    <span>One special character</span>
                </div>
                <div class="requirement-item" id="req-match">
                    <i class="bi bi-circle"></i>
                    <span>Passwords match</span>
                </div>
            </div>
            
            <!-- Submit Button -->
            <button type="submit" class="btn-primary" id="submitBtn" disabled>
                <span id="btnText">Reset Password</span>
            </button>
            
        </form>
        
        <% } else { %>
        <!-- Invalid/Expired Token -->
        
        <!-- Lock Icon -->
        <div class="icon-container">
            <div class="lock-icon" style="background: linear-gradient(135deg, #EF4444 0%, #DC2626 100%);">
                <i class="bi bi-exclamation-triangle-fill"></i>
            </div>
        </div>
        
        <!-- Header -->
        <div class="form-header">
            <h1 class="form-title">Link Expired</h1>
            <p class="form-subtitle">
                This password reset link is invalid or has expired
            </p>
        </div>
        
        <!-- Error Alert -->
        <div class="alert alert-error">
            <i class="bi bi-clock-history"></i>
            <p class="alert-text"><%= error %></p>
        </div>
        
        <!-- Back to Login Button -->
        <a href="/admin/forgot-password" style="text-decoration: none; display: block;">
            <button type="button" class="btn-primary">
                <i class="bi bi-arrow-clockwise"></i>
                <span>Request New Link</span>
            </button>
        </a>
        
        <% } %>
        
        <!-- Back to Login Link -->
        <div class="back-to-login">
            <a href="/admin/login" class="back-link">
                <i class="bi bi-arrow-left"></i>
                <span>Back to Login</span>
            </a>
        </div>
        
    </div>
    
    <script>
        const passwordInput = document.getElementById('passwordInput');
        const confirmPasswordInput = document.getElementById('confirmPasswordInput');
        const strengthBar = document.getElementById('strengthBar');
        const strengthText = document.getElementById('strengthText');
        const submitBtn = document.getElementById('submitBtn');
        const lockIcon = document.getElementById('lockIcon');
        
        // Password requirements
        const requirements = {
            length: { regex: /.{8,}/, element: 'req-length' },
            uppercase: { regex: /[A-Z]/, element: 'req-uppercase' },
            lowercase: { regex: /[a-z]/, element: 'req-lowercase' },
            number: { regex: /[0-9]/, element: 'req-number' },
            special: { regex: /[^A-Za-z0-9]/, element: 'req-special' }
        };
        
        // Password strength calculation
        function calculatePasswordStrength(password) {
            let strength = 0;
            if (password.length >= 8) strength += 20;
            if (password.length >= 12) strength += 20;
            if (/[a-z]/.test(password)) strength += 15;
            if (/[A-Z]/.test(password)) strength += 15;
            if (/[0-9]/.test(password)) strength += 15;
            if (/[^A-Za-z0-9]/.test(password)) strength += 15;
            return strength;
        }
        
        // Update password requirements
        function updateRequirements() {
            const password = passwordInput.value;
            const confirmPassword = confirmPasswordInput.value;
            
            let allMet = true;
            
            // Check each requirement
            for (const [key, req] of Object.entries(requirements)) {
                const element = document.getElementById(req.element);
                const met = req.regex.test(password);
                
                if (met) {
                    element.classList.add('met');
                    element.querySelector('i').className = 'bi bi-check-circle-fill';
                } else {
                    element.classList.remove('met');
                    element.querySelector('i').className = 'bi bi-circle';
                    allMet = false;
                }
            }
            
            // Check password match
            const matchElement = document.getElementById('req-match');
            if (password && confirmPassword && password === confirmPassword) {
                matchElement.classList.add('met');
                matchElement.querySelector('i').className = 'bi bi-check-circle-fill';
                confirmPasswordInput.classList.add('valid');
                confirmPasswordInput.classList.remove('error');
            } else if (confirmPassword) {
                matchElement.classList.remove('met');
                matchElement.querySelector('i').className = 'bi bi-circle';
                confirmPasswordInput.classList.add('error');
                confirmPasswordInput.classList.remove('valid');
                allMet = false;
            } else {
                matchElement.classList.remove('met');
                matchElement.querySelector('i').className = 'bi bi-circle';
                confirmPasswordInput.classList.remove('valid', 'error');
                allMet = false;
            }
            
            // Enable/disable submit button
            submitBtn.disabled = !allMet || !confirmPassword;
            
            if (!submitBtn.disabled) {
                lockIcon.classList.add('unlocked');
                lockIcon.querySelector('i').className = 'bi bi-unlock-fill';
            } else {
                lockIcon.classList.remove('unlocked');
                lockIcon.querySelector('i').className = 'bi bi-lock-fill';
            }
            
            return allMet;
        }
        
        // Password input handler
        passwordInput?.addEventListener('input', function() {
            const password = this.value;
            const strength = calculatePasswordStrength(password);
            
            // Remove all strength classes
            this.classList.remove('strength-weak', 'strength-medium', 'strength-strong');
            strengthBar.className = 'strength-bar';
            strengthText.className = 'strength-text';
            
            if (password.length > 0) {
                if (strength < 50) {
                    this.classList.add('strength-weak');
                    strengthBar.classList.add('weak');
                    strengthText.classList.add('weak');
                    strengthText.textContent = 'Weak password';
                } else if (strength < 80) {
                    this.classList.add('strength-medium');
                    strengthBar.classList.add('medium');
                    strengthText.classList.add('medium');
                    strengthText.textContent = 'Medium strength';
                } else {
                    this.classList.add('strength-strong');
                    strengthBar.classList.add('strong');
                    strengthText.classList.add('strong');
                    strengthText.textContent = 'Strong password!';
                }
            }
            
            updateRequirements();
        });
        
        // Confirm password input handler
        confirmPasswordInput?.addEventListener('input', updateRequirements);
        
        // Toggle password visibility
        function togglePassword(inputId, iconId) {
            const input = document.getElementById(inputId);
            const icon = document.getElementById(iconId);
            
            if (input.type === 'password') {
                input.type = 'text';
                icon.classList.remove('bi-eye');
                icon.classList.add('bi-eye-slash');
            } else {
                input.type = 'password';
                icon.classList.remove('bi-eye-slash');
                icon.classList.add('bi-eye');
            }
        }
        
        // Form submission
        document.getElementById('resetPasswordForm')?.addEventListener('submit', function(e) {
            const btnText = document.getElementById('btnText');
            
            submitBtn.disabled = true;
            btnText.textContent = 'Resetting...';
            
            const spinner = document.createElement('div');
            spinner.className = 'spinner';
            btnText.insertAdjacentElement('beforebegin', spinner);
        });
        
        // Theme Toggle
        function toggleTheme() {
            const body = document.body;
            const themeIcon = document.getElementById('themeIcon');
            
            if (body.hasAttribute('data-theme')) {
                body.removeAttribute('data-theme');
                themeIcon.classList.remove('bi-sun');
                themeIcon.classList.add('bi-moon-stars');
                localStorage.setItem('theme', 'dark');
            } else {
                body.setAttribute('data-theme', 'light');
                themeIcon.classList.remove('bi-moon-stars');
                themeIcon.classList.add('bi-sun');
                localStorage.setItem('theme', 'light');
            }
        }
        
        // Load Saved Theme
        window.addEventListener('DOMContentLoaded', () => {
            const savedTheme = localStorage.getItem('theme');
            const themeIcon = document.getElementById('themeIcon');
            
            if (savedTheme === 'light') {
                document.body.setAttribute('data-theme', 'light');
                themeIcon.classList.remove('bi-moon-stars');
                themeIcon.classList.add('bi-sun');
            }
        });
        
        // Mouse Movement Effect
        document.addEventListener('mousemove', function(e) {
            const shapes = document.querySelectorAll('.floating-shape');
            const x = e.clientX / window.innerWidth;
            const y = e.clientY / window.innerHeight;
            
            shapes.forEach((shape, index) => {
                const speed = (index + 1) * 20;
                const xMove = (x - 0.5) * speed;
                const yMove = (y - 0.5) * speed;
                
                shape.style.transform = `translate(${xMove}px, ${yMove}px)`;
            });
        });
    </script>
    
