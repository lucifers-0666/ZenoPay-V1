<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= pageTitle %></title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.js"></script>
    
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        
        :root {
            --bg-dark: #0F172A;
            --bg-darker: #020617;
            --card-bg: rgba(255, 255, 255, 0.06);
            --card-border: rgba(255, 255, 255, 0.1);
            --text-primary: #F8FAFC;
            --text-secondary: #CBD5E1;
            --text-muted: #64748B;
            --input-bg: rgba(255, 255, 255, 0.04);
            --input-border: rgba(255, 255, 255, 0.08);
            --primary: #0EA5E9;
            --primary-dark: #0284C7;
            --success: #10B981;
            --error: #EF4444;
            --warning: #F59E0B;
            --gradient-1: linear-gradient(135deg, #667EEA 0%, #764BA2 100%);
            --gradient-2: linear-gradient(135deg, #0EA5E9 0%, #06B6D4 100%);
        }
        
        [data-theme="light"] {
            --bg-dark: #F1F5F9;
            --bg-darker: #E2E8F0;
            --card-bg: rgba(255, 255, 255, 0.9);
            --card-border: rgba(15, 23, 42, 0.1);
            --text-primary: #0F172A;
            --text-secondary: #475569;
            --text-muted: #94A3B8;
            --input-bg: rgba(15, 23, 42, 0.04);
            --input-border: rgba(15, 23, 42, 0.1);
        }
        
        body {
            font-family: 'Inter', sans-serif;
            background: var(--bg-dark);
            color: var(--text-primary);
            transition: background 0.4s ease;
        }
        
        /* Layout */
        .dashboard-container {
            max-width: 1400px;
            margin: 0 auto;
            padding: 30px 20px;
        }
        
        /* Top Header */
        .dashboard-header {
            background: var(--card-bg);
            backdrop-filter: blur(20px);
            border: 1px solid var(--card-border);
            border-radius: 20px;
            padding: 30px;
            margin-bottom: 30px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            flex-wrap: wrap;
            gap: 20px;
        }
        
        .header-left {
            flex: 1;
            min-width: 300px;
        }
        
        .welcome-title {
            font-size: 32px;
            font-weight: 800;
            color: var(--text-primary);
            margin-bottom: 8px;
            background: var(--gradient-2);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }
        
        .current-date {
            font-size: 14px;
            color: var(--text-muted);
            display: flex;
            align-items: center;
            gap: 6px;
        }
        
        .header-right {
            display: flex;
            align-items: center;
            gap: 12px;
        }
        
        .quick-action-btn {
            padding: 12px 20px;
            background: var(--gradient-2);
            border: none;
            border-radius: 12px;
            color: white;
            font-weight: 600;
            font-size: 14px;
            cursor: pointer;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            gap: 8px;
            box-shadow: 0 4px 12px rgba(14, 165, 233, 0.3);
        }
        
        .quick-action-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 16px rgba(14, 165, 233, 0.4);
        }
        
        .quick-action-btn.secondary {
            background: var(--input-bg);
            border: 1px solid var(--input-border);
            color: var(--text-primary);
            box-shadow: none;
        }
        
        .quick-action-btn.secondary:hover {
            background: rgba(14, 165, 233, 0.1);
            border-color: var(--primary);
        }
        
        .notification-bell {
            position: relative;
            width: 48px;
            height: 48px;
            background: var(--input-bg);
            border: 1px solid var(--input-border);
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            transition: all 0.3s ease;
        }
        
        .notification-bell:hover {
            background: rgba(14, 165, 233, 0.1);
            border-color: var(--primary);
        }
        
        .notification-bell i {
            font-size: 20px;
            color: var(--text-primary);
        }
        
        .notification-badge {
            position: absolute;
            top: -5px;
            right: -5px;
            width: 22px;
            height: 22px;
            background: var(--error);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 11px;
            font-weight: 700;
            color: white;
            border: 2px solid var(--bg-dark);
        }
        
        .theme-toggle {
            width: 48px;
            height: 48px;
            background: var(--input-bg);
            border: 1px solid var(--input-border);
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            transition: all 0.3s ease;
            font-size: 18px;
            color: var(--text-secondary);
        }
        
        .theme-toggle:hover {
            background: var(--input-border);
            transform: rotate(180deg);
        }
        
        /* Metrics Cards Grid */
        .metrics-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
            gap: 20px;
            margin-bottom: 30px;
        }
        
        .metric-card {
            background: var(--card-bg);
            backdrop-filter: blur(20px);
            border: 1px solid var(--card-border);
            border-radius: 20px;
            padding: 24px;
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
        }
        
        .metric-card:hover {
            transform: translateY(-4px);
            box-shadow: 0 12px 40px rgba(0, 0, 0, 0.2);
            border-color: var(--primary);
        }
        
        .metric-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 3px;
            background: var(--gradient-2);
            transform: scaleX(0);
            transition: transform 0.3s ease;
        }
        
        .metric-card:hover::before {
            transform: scaleX(1);
        }
        
        .metric-header {
            display: flex;
            justify-content: space-between;
            align-items: flex-start;
            margin-bottom: 16px;
        }
        
        .metric-icon {
            width: 48px;
            height: 48px;
            background: var(--gradient-2);
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 24px;
            color: white;
        }
        
        .metric-icon.success {
            background: linear-gradient(135deg, #10B981 0%, #059669 100%);
        }
        
        .metric-icon.warning {
            background: linear-gradient(135deg, #F59E0B 0%, #D97706 100%);
        }
        
        .metric-icon.error {
            background: linear-gradient(135deg, #EF4444 0%, #DC2626 100%);
        }
        
        .metric-trend {
            display: flex;
            align-items: center;
            gap: 4px;
            font-size: 14px;
            font-weight: 600;
            padding: 4px 8px;
            border-radius: 6px;
        }
        
        .metric-trend.up {
            color: var(--success);
            background: rgba(16, 185, 129, 0.1);
        }
        
        .metric-trend.down {
            color: var(--error);
            background: rgba(239, 68, 68, 0.1);
        }
        
        .metric-value {
            font-size: 36px;
            font-weight: 800;
            color: var(--text-primary);
            margin-bottom: 8px;
            letter-spacing: -1px;
        }
        
        .metric-label {
            font-size: 14px;
            color: var(--text-muted);
            margin-bottom: 16px;
        }
        
        .metric-sparkline {
            height: 40px;
            margin-top: 12px;
        }
        
        /* Skeleton Loader */
        .skeleton {
            background: linear-gradient(90deg, var(--input-bg) 25%, var(--input-border) 50%, var(--input-bg) 75%);
            background-size: 200% 100%;
            animation: shimmer 1.5s infinite;
            border-radius: 8px;
        }
        
        @keyframes shimmer {
            0% { background-position: 200% 0; }
            100% { background-position: -200% 0; }
        }
        
        .skeleton-text {
            height: 20px;
            margin-bottom: 8px;
        }
        
        .skeleton-value {
            height: 40px;
            width: 60%;
            margin-bottom: 12px;
        }
        
        /* Charts Section */
        .charts-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(500px, 1fr));
            gap: 20px;
            margin-bottom: 30px;
        }
        
        .chart-card {
            background: var(--card-bg);
            backdrop-filter: blur(20px);
            border: 1px solid var(--card-border);
            border-radius: 20px;
            padding: 24px;
        }
        
        .chart-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
        }
        
        .chart-title {
            font-size: 18px;
            font-weight: 700;
            color: var(--text-primary);
        }
        
        .chart-controls {
            display: flex;
            gap: 8px;
        }
        
        .chart-btn {
            padding: 6px 12px;
            background: var(--input-bg);
            border: 1px solid var(--input-border);
            border-radius: 8px;
            font-size: 12px;
            color: var(--text-secondary);
            cursor: pointer;
            transition: all 0.3s ease;
        }
        
        .chart-btn:hover, .chart-btn.active {
            background: var(--primary);
            color: white;
            border-color: var(--primary);
        }
        
        .chart-container {
            position: relative;
            height: 300px;
        }
        
        /* Activity Feed & Stats Grid */
        .bottom-grid {
            display: grid;
            grid-template-columns: 2fr 1fr;
            gap: 20px;
            margin-bottom: 30px;
        }
        
        /* Quick Stats Table */
        .stats-card {
            background: var(--card-bg);
            backdrop-filter: blur(20px);
            border: 1px solid var(--card-border);
            border-radius: 20px;
            padding: 24px;
        }
        
        .stats-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
        }
        
        .stats-title {
            font-size: 18px;
            font-weight: 700;
            color: var(--text-primary);
        }
        
        .refresh-btn {
            padding: 8px 12px;
            background: var(--input-bg);
            border: 1px solid var(--input-border);
            border-radius: 8px;
            font-size: 12px;
            color: var(--text-secondary);
            cursor: pointer;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            gap: 6px;
        }
        
        .refresh-btn:hover {
            background: rgba(14, 165, 233, 0.1);
            border-color: var(--primary);
            color: var(--primary);
        }
        
        .refresh-btn i {
            transition: transform 0.5s ease;
        }
        
        .refresh-btn.spinning i {
            animation: spin 1s linear infinite;
        }
        
        @keyframes spin {
            to { transform: rotate(360deg); }
        }
        
        .stats-table {
            width: 100%;
            border-collapse: separate;
            border-spacing: 0 8px;
        }
        
        .stats-table thead th {
            text-align: left;
            font-size: 12px;
            font-weight: 700;
            color: var(--text-muted);
            text-transform: uppercase;
            padding: 12px;
            cursor: pointer;
            user-select: none;
        }
        
        .stats-table thead th:hover {
            color: var(--primary);
        }
        
        .stats-table tbody tr {
            background: var(--input-bg);
            border-radius: 12px;
            transition: all 0.3s ease;
        }
        
        .stats-table tbody tr:hover {
            background: rgba(14, 165, 233, 0.1);
            transform: translateX(4px);
        }
        
        .stats-table tbody td {
            padding: 16px 12px;
            font-size: 14px;
        }
        
        .stats-table tbody td:first-child {
            border-radius: 12px 0 0 12px;
        }
        
        .stats-table tbody td:last-child {
            border-radius: 0 12px 12px 0;
        }
        
        .merchant-info {
            display: flex;
            align-items: center;
            gap: 12px;
        }
        
        .merchant-avatar {
            width: 40px;
            height: 40px;
            background: var(--gradient-2);
            border-radius: 10px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: 700;
            color: white;
        }
        
        .merchant-name {
            font-weight: 600;
            color: var(--text-primary);
        }
        
        .status-badge {
            padding: 4px 12px;
            border-radius: 6px;
            font-size: 12px;
            font-weight: 600;
        }
        
        .status-badge.active {
            background: rgba(16, 185, 129, 0.1);
            color: var(--success);
        }
        
        .status-badge.pending {
            background: rgba(245, 158, 11, 0.1);
            color: var(--warning);
        }
        
        .status-badge.inactive {
            background: rgba(239, 68, 68, 0.1);
            color: var(--error);
        }
        
        /* Activity Feed */
        .activity-feed {
            background: var(--card-bg);
            backdrop-filter: blur(20px);
            border: 1px solid var(--card-border);
            border-radius: 20px;
            padding: 24px;
            max-height: 600px;
            overflow-y: auto;
        }
        
        .activity-feed::-webkit-scrollbar {
            width: 6px;
        }
        
        .activity-feed::-webkit-scrollbar-track {
            background: var(--input-bg);
            border-radius: 3px;
        }
        
        .activity-feed::-webkit-scrollbar-thumb {
            background: var(--primary);
            border-radius: 3px;
        }
        
        .activity-item {
            display: flex;
            gap: 16px;
            padding: 16px 0;
            border-bottom: 1px solid var(--input-border);
            transition: all 0.3s ease;
        }
        
        .activity-item:last-child {
            border-bottom: none;
        }
        
        .activity-item:hover {
            transform: translateX(4px);
        }
        
        .activity-icon {
            width: 40px;
            height: 40px;
            background: var(--gradient-2);
            border-radius: 10px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 18px;
            color: white;
            flex-shrink: 0;
        }
        
        .activity-icon.success {
            background: linear-gradient(135deg, #10B981 0%, #059669 100%);
        }
        
        .activity-icon.warning {
            background: linear-gradient(135deg, #F59E0B 0%, #D97706 100%);
        }
        
        .activity-content {
            flex: 1;
        }
        
        .activity-title {
            font-size: 14px;
            font-weight: 600;
            color: var(--text-primary);
            margin-bottom: 4px;
        }
        
        .activity-description {
            font-size: 13px;
            color: var(--text-muted);
            margin-bottom: 6px;
        }
        
        .activity-time {
            font-size: 12px;
            color: var(--text-muted);
            display: flex;
            align-items: center;
            gap: 4px;
        }
        
        .view-all-link {
            display: block;
            text-align: center;
            padding: 12px;
            margin-top: 16px;
            background: var(--input-bg);
            border-radius: 12px;
            color: var(--primary);
            font-weight: 600;
            text-decoration: none;
            transition: all 0.3s ease;
        }
        
        .view-all-link:hover {
            background: rgba(14, 165, 233, 0.1);
            transform: translateY(-2px);
        }
        
        /* Responsive */
        @media (max-width: 1200px) {
            .bottom-grid {
                grid-template-columns: 1fr;
            }
            
            .charts-grid {
                grid-template-columns: 1fr;
            }
        }
        
        @media (max-width: 768px) {
            .dashboard-header {
                flex-direction: column;
                align-items: flex-start;
            }
            
            .header-right {
                width: 100%;
                justify-content: space-between;
            }
            
            .quick-action-btn span {
                display: none;
            }
            
            .metrics-grid {
                grid-template-columns: 1fr;
            }
            
            .welcome-title {
                font-size: 24px;
            }
        }
    </style>
</head>
<body>
    
    <div class="dashboard-container">
        
        <!-- Top Header -->
        <div class="dashboard-header">
            <div class="header-left">
                <h1 class="welcome-title">Welcome back, <%= user.FullName || 'Admin' %> ðŸ‘‹</h1>
                <div class="current-date">
                    <i class="bi bi-calendar3"></i>
                    <span id="currentDate"></span>
                </div>
            </div>
            
            <div class="header-right">
                <button class="quick-action-btn" onclick="window.location.href='/admin/users/new'">
                    <i class="bi bi-person-plus-fill"></i>
                    <span>Add User</span>
                </button>
                <button class="quick-action-btn secondary" onclick="window.location.href='/admin/merchants/pending'">
                    <i class="bi bi-clock-history"></i>
                    <span>Review Pending</span>
                </button>
                <button class="quick-action-btn secondary" onclick="generateReport()">
                    <i class="bi bi-file-earmark-bar-graph"></i>
                    <span>Generate Report</span>
                </button>
                
                <div class="notification-bell" onclick="toggleNotifications()">
                    <i class="bi bi-bell-fill"></i>
                    <span class="notification-badge" id="notificationCount">5</span>
                </div>
                
                <div class="theme-toggle" onclick="toggleTheme()" title="Toggle theme">
                    <i class="bi bi-moon-stars" id="themeIcon"></i>
                </div>
            </div>
        </div>
        
        <!-- Metrics Cards -->
        <div class="metrics-grid">
            <!-- Total Users Card -->
            <div class="metric-card" id="usersCard">
                <div class="metric-header">
                    <div class="metric-icon">
                        <i class="bi bi-people-fill"></i>
                    </div>
                    <div class="metric-trend up">
                        <i class="bi bi-arrow-up"></i>
                        <span>12.5%</span>
                    </div>
                </div>
                <div class="metric-value" id="totalUsers">
                    <div class="skeleton skeleton-value"></div>
                </div>
                <div class="metric-label">Total Users</div>
                <canvas class="metric-sparkline" id="usersSparkline"></canvas>
            </div>
            
            <!-- Total Transactions Card -->
            <div class="metric-card" id="transactionsCard">
                <div class="metric-header">
                    <div class="metric-icon success">
                        <i class="bi bi-arrow-left-right"></i>
                    </div>
                    <div class="metric-trend up">
                        <i class="bi bi-arrow-up"></i>
                        <span>8.2%</span>
                    </div>
                </div>
                <div class="metric-value" id="totalTransactions">
                    <div class="skeleton skeleton-value"></div>
                </div>
                <div class="metric-label">Total Transactions</div>
                <canvas class="metric-sparkline" id="transactionsSparkline"></canvas>
            </div>
            
            <!-- Active Merchants Card -->
            <div class="metric-card" id="merchantsCard">
                <div class="metric-header">
                    <div class="metric-icon warning">
                        <i class="bi bi-shop"></i>
                    </div>
                    <div class="metric-trend up">
                        <i class="bi bi-arrow-up"></i>
                        <span>5.8%</span>
                    </div>
                </div>
                <div class="metric-value" id="activeMerchants">
                    <div class="skeleton skeleton-value"></div>
                </div>
                <div class="metric-label">Active Merchants</div>
                <canvas class="metric-sparkline" id="merchantsSparkline"></canvas>
            </div>
            
            <!-- Platform Revenue Card -->
            <div class="metric-card" id="revenueCard">
                <div class="metric-header">
                    <div class="metric-icon error">
                        <i class="bi bi-currency-dollar"></i>
                    </div>
                    <div class="metric-trend up">
                        <i class="bi bi-arrow-up"></i>
                        <span>15.3%</span>
                    </div>
                </div>
                <div class="metric-value" id="platformRevenue">
                    <div class="skeleton skeleton-value"></div>
                </div>
                <div class="metric-label">Platform Revenue</div>
                <canvas class="metric-sparkline" id="revenueSparkline"></canvas>
            </div>
        </div>
        
        <!-- Charts Section -->
        <div class="charts-grid">
            <!-- Transaction Volume Chart -->
            <div class="chart-card">
                <div class="chart-header">
                    <h2 class="chart-title">Transaction Volume</h2>
                    <div class="chart-controls">
                        <button class="chart-btn active" data-period="7d">7D</button>
                        <button class="chart-btn" data-period="30d">30D</button>
                        <button class="chart-btn" data-period="90d">90D</button>
                    </div>
                </div>
                <div class="chart-container">
                    <canvas id="transactionVolumeChart"></canvas>
                </div>
            </div>
            
            <!-- User Growth Chart -->
            <div class="chart-card">
                <div class="chart-header">
                    <h2 class="chart-title">User Growth</h2>
                    <div class="chart-controls">
                        <button class="chart-btn active" data-period="6m">6M</button>
                        <button class="chart-btn" data-period="1y">1Y</button>
                        <button class="chart-btn" data-period="all">All</button>
                    </div>
                </div>
                <div class="chart-container">
                    <canvas id="userGrowthChart"></canvas>
                </div>
            </div>
        </div>
        
        <!-- Bottom Grid: Stats Table & Activity Feed -->
        <div class="bottom-grid">
            <!-- Quick Stats Table -->
            <div class="stats-card">
                <div class="stats-header">
                    <h2 class="stats-title">Top Merchants</h2>
                    <button class="refresh-btn" onclick="refreshStats()">
                        <i class="bi bi-arrow-clockwise"></i>
                        <span id="lastUpdate">Just now</span>
                    </button>
                </div>
                
                <table class="stats-table">
                    <thead>
                        <tr>
                            <th onclick="sortTable(0)">Merchant <i class="bi bi-chevron-down"></i></th>
                            <th onclick="sortTable(1)">Transactions <i class="bi bi-chevron-down"></i></th>
                            <th onclick="sortTable(2)">Volume <i class="bi bi-chevron-down"></i></th>
                            <th onclick="sortTable(3)">Status <i class="bi bi-chevron-down"></i></th>
                        </tr>
                    </thead>
                    <tbody id="merchantsTableBody">
                        <tr>
                            <td colspan="4">
                                <div class="skeleton skeleton-text"></div>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
            
            <!-- Activity Feed -->
            <div class="activity-feed">
                <div class="stats-header">
                    <h2 class="stats-title">Recent Activities</h2>
                </div>
                
                <div id="activityList">
                    <!-- Activities will be loaded here -->
                    <div class="skeleton skeleton-text"></div>
                    <div class="skeleton skeleton-text"></div>
                    <div class="skeleton skeleton-text"></div>
                </div>
                
                <a href="/admin/activities" class="view-all-link">
                    View All Activities
                    <i class="bi bi-arrow-right"></i>
                </a>
            </div>
        </div>
        
    </div>
    
    <script>
        // Initialize
        let transactionVolumeChart, userGrowthChart;
        
        window.addEventListener('DOMContentLoaded', function() {
            // Load theme
            const savedTheme = localStorage.getItem('theme');
            if (savedTheme === 'light') {
                document.body.setAttribute('data-theme', 'light');
                document.getElementById('themeIcon').classList.remove('bi-moon-stars');
                document.getElementById('themeIcon').classList.add('bi-sun');
            }
            
            // Set current date
            updateDateTime();
            setInterval(updateDateTime, 60000); // Update every minute
            
            // Load dashboard data
            loadDashboardData();
            
            // Setup chart controls
            setupChartControls();
        });
        
        // Update Date & Time
        function updateDateTime() {
            const now = new Date();
            const options = { 
                weekday: 'long', 
                year: 'numeric', 
                month: 'long', 
                day: 'numeric',
                hour: '2-digit',
                minute: '2-digit'
            };
            document.getElementById('currentDate').textContent = now.toLocaleDateString('en-US', options);
        }
        
        // Load Dashboard Data
        async function loadDashboardData() {
            try {
                const response = await fetch('/admin/dashboard/data');
                const data = await response.json();
                
                if (data.success) {
                    // Update metrics
                    updateMetrics(data.metrics);
                    
                    // Update charts
                    updateCharts(data.charts);
                    
                    // Update merchants table
                    updateMerchantsTable(data.topMerchants);
                    
                    // Update activity feed
                    updateActivityFeed(data.recentActivities);
                }
            } catch (error) {
                console.error('Error loading dashboard data:', error);
                // Load mock data for demo
                loadMockData();
            }
        }
        
        // Load Mock Data (for demo)
        function loadMockData() {
            // Mock metrics
            const metrics = {
                totalUsers: 12547,
                totalTransactions: 45893,
                activeMerchants: 234,
                platformRevenue: 1245678
            };
            updateMetrics(metrics);
            
            // Mock charts data
            const charts = {
                transactionVolume: {
                    labels: ['Jan 20', 'Jan 21', 'Jan 22', 'Jan 23', 'Jan 24', 'Jan 25', 'Jan 26', 'Jan 27'],
                    data: [1200, 1900, 1500, 2100, 1800, 2400, 2200, 2600]
                },
                userGrowth: {
                    labels: ['Aug', 'Sep', 'Oct', 'Nov', 'Dec', 'Jan'],
                    data: [8500, 9200, 9800, 10500, 11200, 12547]
                }
            };
            updateCharts(charts);
            
            // Mock merchants
            const merchants = [
                { name: 'TechStore Inc', transactions: 1245, volume: 245670, status: 'active' },
                { name: 'Fashion Hub', transactions: 987, volume: 198450, status: 'active' },
                { name: 'Food Delivery Co', transactions: 856, volume: 156780, status: 'active' },
                { name: 'Electronics Plus', transactions: 654, volume: 134560, status: 'pending' },
                { name: 'Beauty Shop', transactions: 543, volume: 98760, status: 'active' }
            ];
            updateMerchantsTable(merchants);
            
            // Mock activities
            const activities = [
                { type: 'user', icon: 'person-plus-fill', title: 'New User Registration', description: 'John Doe registered a new account', time: '2 minutes ago', class: 'success' },
                { type: 'merchant', icon: 'shop', title: 'Merchant Approved', description: 'TechStore Inc was approved and activated', time: '15 minutes ago', class: '' },
                { type: 'transaction', icon: 'arrow-left-right', title: 'Large Transaction', description: '$12,500 transaction completed', time: '1 hour ago', class: 'warning' },
                { type: 'user', icon: 'person-check-fill', title: 'User Verified', description: 'Sarah Smith completed KYC verification', time: '2 hours ago', class: 'success' },
                { type: 'alert', icon: 'exclamation-triangle-fill', title: 'Security Alert', description: 'Multiple failed login attempts detected', time: '3 hours ago', class: 'warning' }
            ];
            updateActivityFeed(activities);
        }
        
        // Update Metrics
        function updateMetrics(metrics) {
            document.getElementById('totalUsers').innerHTML = formatNumber(metrics.totalUsers);
            document.getElementById('totalTransactions').innerHTML = formatNumber(metrics.totalTransactions);
            document.getElementById('activeMerchants').innerHTML = formatNumber(metrics.activeMerchants);
            document.getElementById('platformRevenue').innerHTML = '$' + formatNumber(metrics.platformRevenue);
            
            // Create sparklines
            createSparkline('usersSparkline', [4500, 5200, 4800, 6100, 5900, 7200, 6800]);
            createSparkline('transactionsSparkline', [28000, 32000, 29000, 38000, 36000, 42000, 45893]);
            createSparkline('merchantsSparkline', [180, 195, 188, 210, 205, 225, 234]);
            createSparkline('revenueSparkline', [980000, 1050000, 1020000, 1120000, 1080000, 1180000, 1245678]);
        }
        
        // Create Sparkline
        function createSparkline(canvasId, data) {
            const canvas = document.getElementById(canvasId);
            new Chart(canvas, {
                type: 'line',
                data: {
                    labels: data,
                    datasets: [{
                        data: data,
                        borderColor: '#0EA5E9',
                        borderWidth: 2,
                        fill: false,
                        tension: 0.4,
                        pointRadius: 0
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: { legend: { display: false } },
                    scales: {
                        x: { display: false },
                        y: { display: false }
                    }
                }
            });
        }
        
        // Update Charts
        function updateCharts(charts) {
            // Transaction Volume Chart
            const txCtx = document.getElementById('transactionVolumeChart').getContext('2d');
            transactionVolumeChart = new Chart(txCtx, {
                type: 'line',
                data: {
                    labels: charts.transactionVolume.labels,
                    datasets: [{
                        label: 'Transactions',
                        data: charts.transactionVolume.data,
                        borderColor: '#0EA5E9',
                        backgroundColor: 'rgba(14, 165, 233, 0.1)',
                        borderWidth: 3,
                        fill: true,
                        tension: 0.4,
                        pointRadius: 5,
                        pointHoverRadius: 7
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: { display: false }
                    },
                    scales: {
                        y: {
                            beginAtZero: true,
                            grid: { color: 'rgba(255, 255, 255, 0.05)' },
                            ticks: { color: '#64748B' }
                        },
                        x: {
                            grid: { display: false },
                            ticks: { color: '#64748B' }
                        }
                    }
                }
            });
            
            // User Growth Chart
            const userCtx = document.getElementById('userGrowthChart').getContext('2d');
            userGrowthChart = new Chart(userCtx, {
                type: 'line',
                data: {
                    labels: charts.userGrowth.labels,
                    datasets: [{
                        label: 'Users',
                        data: charts.userGrowth.data,
                        borderColor: '#10B981',
                        backgroundColor: 'rgba(16, 185, 129, 0.2)',
                        borderWidth: 3,
                        fill: true,
                        tension: 0.4,
                        pointRadius: 6,
                        pointHoverRadius: 8
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: { display: false }
                    },
                    scales: {
                        y: {
                            beginAtZero: true,
                            grid: { color: 'rgba(255, 255, 255, 0.05)' },
                            ticks: { color: '#64748B' }
                        },
                        x: {
                            grid: { display: false },
                            ticks: { color: '#64748B' }
                        }
                    }
                }
            });
        }
        
        // Update Merchants Table
        function updateMerchantsTable(merchants) {
            const tbody = document.getElementById('merchantsTableBody');
            tbody.innerHTML = merchants.map(m => `
                <tr>
                    <td>
                        <div class="merchant-info">
                            <div class="merchant-avatar">${m.name.charAt(0)}</div>
                            <span class="merchant-name">${m.name}</span>
                        </div>
                    </td>
                    <td>${formatNumber(m.transactions)}</td>
                    <td>$${formatNumber(m.volume)}</td>
                    <td><span class="status-badge ${m.status}">${m.status}</span></td>
                </tr>
            `).join('');
        }
        
        // Update Activity Feed
        function updateActivityFeed(activities) {
            const list = document.getElementById('activityList');
            list.innerHTML = activities.map(a => `
                <div class="activity-item">
                    <div class="activity-icon ${a.class}">
                        <i class="bi bi-${a.icon}"></i>
                    </div>
                    <div class="activity-content">
                        <div class="activity-title">${a.title}</div>
                        <div class="activity-description">${a.description}</div>
                        <div class="activity-time">
                            <i class="bi bi-clock"></i>
                            ${a.time}
                        </div>
                    </div>
                </div>
            `).join('');
        }
        
        // Utility Functions
        function formatNumber(num) {
            return num.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
        }
        
        function sortTable(column) {
            // Table sorting logic
            console.log('Sorting column:', column);
        }
        
        function refreshStats() {
            const btn = document.querySelector('.refresh-btn');
            btn.classList.add('spinning');
            loadDashboardData();
            setTimeout(() => {
                btn.classList.remove('spinning');
                document.getElementById('lastUpdate').textContent = 'Just now';
            }, 1000);
        }
        
        function toggleNotifications() {
            alert('Notifications panel coming soon!');
        }
        
        function generateReport() {
            alert('Report generation feature coming soon!');
        }
        
        function setupChartControls() {
            document.querySelectorAll('.chart-btn').forEach(btn => {
                btn.addEventListener('click', function() {
                    this.parentElement.querySelectorAll('.chart-btn').forEach(b => b.classList.remove('active'));
                    this.classList.add('active');
                });
            });
        }
        
        // Theme Toggle
        function toggleTheme() {
            const body = document.body;
            const themeIcon = document.getElementById('themeIcon');
            
            if (body.hasAttribute('data-theme')) {
                body.removeAttribute('data-theme');
                themeIcon.classList.remove('bi-sun');
                themeIcon.classList.add('bi-moon-stars');
                localStorage.setItem('theme', 'dark');
            } else {
                body.setAttribute('data-theme', 'light');
                themeIcon.classList.remove('bi-moon-stars');
                themeIcon.classList.add('bi-sun');
                localStorage.setItem('theme', 'light');
            }
        }
    </script>
    
</body>
</html>
