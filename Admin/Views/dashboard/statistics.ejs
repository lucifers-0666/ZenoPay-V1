<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= pageTitle %></title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.js"></script>
    
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        
        :root {
            --bg-dark: #0F172A;
            --bg-darker: #020617;
            --card-bg: rgba(255, 255, 255, 0.06);
            --card-border: rgba(255, 255, 255, 0.1);
            --text-primary: #F8FAFC;
            --text-secondary: #CBD5E1;
            --text-muted: #64748B;
            --input-bg: rgba(255, 255, 255, 0.04);
            --input-border: rgba(255, 255, 255, 0.08);
            --primary: #0EA5E9;
            --primary-dark: #0284C7;
            --success: #10B981;
            --error: #EF4444;
            --warning: #F59E0B;
            --info: #3B82F6;
            --gradient-1: linear-gradient(135deg, #667EEA 0%, #764BA2 100%);
            --gradient-2: linear-gradient(135deg, #0EA5E9 0%, #06B6D4 100%);
        }
        
        [data-theme="light"] {
            --bg-dark: #F1F5F9;
            --bg-darker: #E2E8F0;
            --card-bg: rgba(255, 255, 255, 0.9);
            --card-border: rgba(15, 23, 42, 0.1);
            --text-primary: #0F172A;
            --text-secondary: #475569;
            --text-muted: #94A3B8;
            --input-bg: rgba(15, 23, 42, 0.04);
            --input-border: rgba(15, 23, 42, 0.1);
        }
        
        body {
            font-family: 'Inter', sans-serif;
            background: var(--bg-dark);
            color: var(--text-primary);
            padding-top: 80px;
        }
        
        /* Sticky Filter Bar */
        .filter-bar {
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            background: var(--card-bg);
            backdrop-filter: blur(20px);
            border-bottom: 1px solid var(--card-border);
            padding: 16px 20px;
            z-index: 100;
            display: flex;
            align-items: center;
            gap: 16px;
            flex-wrap: wrap;
        }
        
        .filter-section {
            display: flex;
            align-items: center;
            gap: 12px;
            flex-wrap: wrap;
        }
        
        .filter-group {
            display: flex;
            align-items: center;
            gap: 8px;
        }
        
        .filter-label {
            font-size: 14px;
            font-weight: 600;
            color: var(--text-secondary);
        }
        
        .date-picker {
            padding: 10px 16px;
            background: var(--input-bg);
            border: 1px solid var(--input-border);
            border-radius: 10px;
            color: var(--text-primary);
            font-size: 14px;
            cursor: pointer;
            transition: all 0.3s ease;
        }
        
        .date-picker:hover {
            border-color: var(--primary);
            background: rgba(14, 165, 233, 0.1);
        }
        
        .preset-btn {
            padding: 8px 16px;
            background: var(--input-bg);
            border: 1px solid var(--input-border);
            border-radius: 8px;
            color: var(--text-secondary);
            font-size: 13px;
            cursor: pointer;
            transition: all 0.3s ease;
        }
        
        .preset-btn:hover, .preset-btn.active {
            background: var(--primary);
            color: white;
            border-color: var(--primary);
        }
        
        .export-dropdown {
            position: relative;
            display: inline-block;
        }
        
        .export-btn {
            padding: 10px 20px;
            background: var(--gradient-2);
            border: none;
            border-radius: 10px;
            color: white;
            font-weight: 600;
            font-size: 14px;
            cursor: pointer;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            gap: 8px;
        }
        
        .export-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 16px rgba(14, 165, 233, 0.4);
        }
        
        .export-menu {
            display: none;
            position: absolute;
            top: 100%;
            right: 0;
            margin-top: 8px;
            background: var(--card-bg);
            backdrop-filter: blur(20px);
            border: 1px solid var(--card-border);
            border-radius: 10px;
            box-shadow: 0 8px 24px rgba(0, 0, 0, 0.3);
            z-index: 101;
        }
        
        .export-menu.show {
            display: block;
        }
        
        .export-option {
            padding: 12px 20px;
            display: flex;
            align-items: center;
            gap: 10px;
            cursor: pointer;
            transition: all 0.3s ease;
            border-bottom: 1px solid var(--input-border);
        }
        
        .export-option:last-child {
            border-bottom: none;
        }
        
        .export-option:hover {
            background: rgba(14, 165, 233, 0.1);
        }
        
        .refresh-btn {
            padding: 10px 16px;
            background: var(--input-bg);
            border: 1px solid var(--input-border);
            border-radius: 10px;
            color: var(--text-secondary);
            font-size: 14px;
            cursor: pointer;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            gap: 8px;
            margin-left: auto;
        }
        
        .refresh-btn:hover {
            border-color: var(--primary);
            color: var(--primary);
        }
        
        .refresh-btn.spinning i {
            animation: spin 1s linear infinite;
        }
        
        @keyframes spin {
            to { transform: rotate(360deg); }
        }
        
        .last-updated {
            font-size: 12px;
            color: var(--text-muted);
        }
        
        /* Main Container */
        .statistics-container {
            max-width: 1400px;
            margin: 0 auto;
            padding: 30px 20px;
        }
        
        /* Section Headers */
        .section-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
        }
        
        .section-title {
            font-size: 24px;
            font-weight: 800;
            color: var(--text-primary);
            display: flex;
            align-items: center;
            gap: 12px;
        }
        
        .section-icon {
            width: 40px;
            height: 40px;
            background: var(--gradient-2);
            border-radius: 10px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 20px;
            color: white;
        }
        
        .section-divider {
            height: 1px;
            background: var(--card-border);
            margin: 40px 0;
        }
        
        /* Stats Grid */
        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 20px;
            margin-bottom: 30px;
        }
        
        .stat-card {
            background: var(--card-bg);
            backdrop-filter: blur(20px);
            border: 1px solid var(--card-border);
            border-radius: 16px;
            padding: 24px;
            transition: all 0.3s ease;
        }
        
        .stat-card:hover {
            transform: translateY(-4px);
            box-shadow: 0 12px 40px rgba(0, 0, 0, 0.2);
            border-color: var(--primary);
        }
        
        .stat-header {
            display: flex;
            justify-content: space-between;
            align-items: flex-start;
            margin-bottom: 16px;
        }
        
        .stat-icon {
            width: 48px;
            height: 48px;
            background: var(--gradient-2);
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 24px;
            color: white;
        }
        
        .stat-icon.success {
            background: linear-gradient(135deg, #10B981 0%, #059669 100%);
        }
        
        .stat-icon.warning {
            background: linear-gradient(135deg, #F59E0B 0%, #D97706 100%);
        }
        
        .stat-icon.error {
            background: linear-gradient(135deg, #EF4444 0%, #DC2626 100%);
        }
        
        .stat-icon.info {
            background: linear-gradient(135deg, #3B82F6 0%, #2563EB 100%);
        }
        
        .stat-trend {
            display: flex;
            align-items: center;
            gap: 4px;
            font-size: 13px;
            font-weight: 600;
            padding: 4px 8px;
            border-radius: 6px;
        }
        
        .stat-trend.up {
            color: var(--success);
            background: rgba(16, 185, 129, 0.1);
        }
        
        .stat-trend.down {
            color: var(--error);
            background: rgba(239, 68, 68, 0.1);
        }
        
        .stat-value {
            font-size: 32px;
            font-weight: 800;
            color: var(--text-primary);
            margin-bottom: 8px;
            letter-spacing: -1px;
        }
        
        .stat-label {
            font-size: 14px;
            color: var(--text-muted);
        }
        
        .stat-footer {
            margin-top: 12px;
            padding-top: 12px;
            border-top: 1px solid var(--input-border);
            font-size: 12px;
            color: var(--text-muted);
        }
        
        /* Charts Grid */
        .charts-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(450px, 1fr));
            gap: 20px;
            margin-bottom: 30px;
        }
        
        .chart-card {
            background: var(--card-bg);
            backdrop-filter: blur(20px);
            border: 1px solid var(--card-border);
            border-radius: 16px;
            padding: 24px;
        }
        
        .chart-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
        }
        
        .chart-title {
            font-size: 18px;
            font-weight: 700;
            color: var(--text-primary);
        }
        
        .chart-container {
            position: relative;
            height: 300px;
        }
        
        /* Tables */
        .data-table {
            background: var(--card-bg);
            backdrop-filter: blur(20px);
            border: 1px solid var(--card-border);
            border-radius: 16px;
            padding: 24px;
            margin-bottom: 30px;
        }
        
        .table-responsive {
            overflow-x: auto;
        }
        
        table {
            width: 100%;
            border-collapse: separate;
            border-spacing: 0 8px;
        }
        
        thead th {
            text-align: left;
            font-size: 12px;
            font-weight: 700;
            color: var(--text-muted);
            text-transform: uppercase;
            padding: 12px;
        }
        
        tbody tr {
            background: var(--input-bg);
            transition: all 0.3s ease;
        }
        
        tbody tr:hover {
            background: rgba(14, 165, 233, 0.1);
            transform: translateX(4px);
        }
        
        tbody td {
            padding: 16px 12px;
            font-size: 14px;
        }
        
        tbody td:first-child {
            border-radius: 12px 0 0 12px;
        }
        
        tbody td:last-child {
            border-radius: 0 12px 12px 0;
        }
        
        .merchant-badge {
            display: inline-flex;
            align-items: center;
            gap: 8px;
            padding: 6px 12px;
            background: var(--gradient-2);
            border-radius: 8px;
            font-weight: 600;
            color: white;
            font-size: 13px;
        }
        
        .status-badge {
            padding: 4px 12px;
            border-radius: 6px;
            font-size: 12px;
            font-weight: 600;
        }
        
        .status-badge.success {
            background: rgba(16, 185, 129, 0.1);
            color: var(--success);
        }
        
        .status-badge.warning {
            background: rgba(245, 158, 11, 0.1);
            color: var(--warning);
        }
        
        .status-badge.error {
            background: rgba(239, 68, 68, 0.1);
            color: var(--error);
        }
        
        /* Skeleton Loader */
        .skeleton {
            background: linear-gradient(90deg, var(--input-bg) 25%, var(--input-border) 50%, var(--input-bg) 75%);
            background-size: 200% 100%;
            animation: shimmer 1.5s infinite;
            border-radius: 8px;
        }
        
        @keyframes shimmer {
            0% { background-position: 200% 0; }
            100% { background-position: -200% 0; }
        }
        
        /* Empty State */
        .empty-state {
            text-align: center;
            padding: 60px 20px;
        }
        
        .empty-icon {
            font-size: 64px;
            color: var(--text-muted);
            margin-bottom: 20px;
        }
        
        .empty-title {
            font-size: 20px;
            font-weight: 700;
            color: var(--text-primary);
            margin-bottom: 8px;
        }
        
        .empty-description {
            font-size: 14px;
            color: var(--text-muted);
        }
        
        /* Print Styles */
        @media print {
            body {
                background: white;
                color: black;
            }
            
            .filter-bar, .export-btn, .refresh-btn {
                display: none;
            }
            
            .stat-card, .chart-card, .data-table {
                break-inside: avoid;
                page-break-inside: avoid;
            }
        }
        
        /* Responsive */
        @media (max-width: 768px) {
            .filter-bar {
                padding: 12px 16px;
            }
            
            .filter-section {
                width: 100%;
            }
            
            .charts-grid {
                grid-template-columns: 1fr;
            }
            
            .stats-grid {
                grid-template-columns: 1fr;
            }
        }
    </style>
</head>
<body>
    
    <!-- Sticky Filter Bar -->
    <div class="filter-bar">
        <div class="filter-section">
            <div class="filter-group">
                <span class="filter-label">Period:</span>
                <button class="preset-btn active" data-period="today">Today</button>
                <button class="preset-btn" data-period="week">This Week</button>
                <button class="preset-btn" data-period="month">This Month</button>
                <button class="preset-btn" data-period="custom">Custom</button>
            </div>
            
            <input type="date" class="date-picker" id="startDate" style="display: none;">
            <input type="date" class="date-picker" id="endDate" style="display: none;">
        </div>
        
        <div class="export-dropdown">
            <button class="export-btn" onclick="toggleExportMenu()">
                <i class="bi bi-download"></i>
                Export
            </button>
            <div class="export-menu" id="exportMenu">
                <div class="export-option" onclick="exportData('csv')">
                    <i class="bi bi-file-earmark-spreadsheet"></i>
                    Export as CSV
                </div>
                <div class="export-option" onclick="exportData('pdf')">
                    <i class="bi bi-file-earmark-pdf"></i>
                    Export as PDF
                </div>
                <div class="export-option" onclick="exportData('excel')">
                    <i class="bi bi-file-earmark-excel"></i>
                    Export as Excel
                </div>
            </div>
        </div>
        
        <button class="refresh-btn" onclick="refreshData()">
            <i class="bi bi-arrow-clockwise"></i>
            <span class="last-updated">Updated just now</span>
        </button>
    </div>
    
    <div class="statistics-container">
        
        <!-- Section 1: USER STATISTICS -->
        <div class="section-header">
            <div class="section-title">
                <div class="section-icon"><i class="bi bi-people-fill"></i></div>
                User Statistics
            </div>
        </div>
        
        <div class="stats-grid">
            <div class="stat-card">
                <div class="stat-header">
                    <div class="stat-icon"><i class="bi bi-person-fill"></i></div>
                    <div class="stat-trend up"><i class="bi bi-arrow-up"></i> 12.5%</div>
                </div>
                <div class="stat-value" id="totalUsers">0</div>
                <div class="stat-label">Total Registered Users</div>
                <div class="stat-footer">Since platform launch</div>
            </div>
            
            <div class="stat-card">
                <div class="stat-header">
                    <div class="stat-icon success"><i class="bi bi-person-check"></i></div>
                    <div class="stat-trend up"><i class="bi bi-arrow-up"></i> 8.3%</div>
                </div>
                <div class="stat-value" id="activeUsers">0</div>
                <div class="stat-label">Active Users</div>
                <div class="stat-footer">Last 30 days</div>
            </div>
            
            <div class="stat-card">
                <div class="stat-header">
                    <div class="stat-icon info"><i class="bi bi-person-plus"></i></div>
                    <div class="stat-trend up"><i class="bi bi-arrow-up"></i> 15.2%</div>
                </div>
                <div class="stat-value" id="newUsers">0</div>
                <div class="stat-label">New Users</div>
                <div class="stat-footer">This period</div>
            </div>
            
            <div class="stat-card">
                <div class="stat-header">
                    <div class="stat-icon warning"><i class="bi bi-graph-up"></i></div>
                    <div class="stat-trend up"><i class="bi bi-arrow-up"></i> 2.1%</div>
                </div>
                <div class="stat-value" id="retentionRate">0%</div>
                <div class="stat-label">User Retention Rate</div>
                <div class="stat-footer">Monthly average</div>
            </div>
        </div>
        
        <div class="charts-grid">
            <div class="chart-card">
                <div class="chart-header">
                    <h3 class="chart-title">Users by Verification Status</h3>
                </div>
                <div class="chart-container">
                    <canvas id="verificationChart"></canvas>
                </div>
            </div>
        </div>
        
        <div class="section-divider"></div>
        
        <!-- Section 2: TRANSACTION STATISTICS -->
        <div class="section-header">
            <div class="section-title">
                <div class="section-icon success"><i class="bi bi-arrow-left-right"></i></div>
                Transaction Statistics
            </div>
        </div>
        
        <div class="stats-grid">
            <div class="stat-card">
                <div class="stat-header">
                    <div class="stat-icon success"><i class="bi bi-check-circle"></i></div>
                    <div class="stat-trend up"><i class="bi bi-arrow-up"></i> 18.7%</div>
                </div>
                <div class="stat-value" id="totalTransactions">0</div>
                <div class="stat-label">Total Transactions</div>
                <div class="stat-footer">All time</div>
            </div>
            
            <div class="stat-card">
                <div class="stat-header">
                    <div class="stat-icon success"><i class="bi bi-percent"></i></div>
                    <div class="stat-trend up"><i class="bi bi-arrow-up"></i> 0.5%</div>
                </div>
                <div class="stat-value" id="successRate">0%</div>
                <div class="stat-label">Success Rate</div>
                <div class="stat-footer">Last 30 days</div>
            </div>
            
            <div class="stat-card">
                <div class="stat-header">
                    <div class="stat-icon error"><i class="bi bi-x-circle"></i></div>
                    <div class="stat-trend down"><i class="bi bi-arrow-down"></i> 3.2%</div>
                </div>
                <div class="stat-value" id="failedTransactions">0</div>
                <div class="stat-label">Failed Transactions</div>
                <div class="stat-footer">This period</div>
            </div>
            
            <div class="stat-card">
                <div class="stat-header">
                    <div class="stat-icon info"><i class="bi bi-currency-dollar"></i></div>
                    <div class="stat-trend up"><i class="bi bi-arrow-up"></i> 7.8%</div>
                </div>
                <div class="stat-value" id="avgTransactionValue">$0</div>
                <div class="stat-label">Average Transaction Value</div>
                <div class="stat-footer">Mean per transaction</div>
            </div>
        </div>
        
        <div class="charts-grid">
            <div class="chart-card">
                <div class="chart-header">
                    <h3 class="chart-title">Peak Transaction Times</h3>
                </div>
                <div class="chart-container">
                    <canvas id="transactionTimesChart"></canvas>
                </div>
            </div>
        </div>
        
        <div class="section-divider"></div>
        
        <!-- Section 3: FINANCIAL STATISTICS -->
        <div class="section-header">
            <div class="section-title">
                <div class="section-icon warning"><i class="bi bi-cash-stack"></i></div>
                Financial Statistics
            </div>
        </div>
        
        <div class="stats-grid">
            <div class="stat-card">
                <div class="stat-header">
                    <div class="stat-icon warning"><i class="bi bi-currency-dollar"></i></div>
                    <div class="stat-trend up"><i class="bi bi-arrow-up"></i> 22.4%</div>
                </div>
                <div class="stat-value" id="platformRevenue">$0</div>
                <div class="stat-label">Total Platform Revenue</div>
                <div class="stat-footer">All time earnings</div>
            </div>
            
            <div class="stat-card">
                <div class="stat-header">
                    <div class="stat-icon success"><i class="bi bi-piggy-bank"></i></div>
                    <div class="stat-trend up"><i class="bi bi-arrow-up"></i> 19.1%</div>
                </div>
                <div class="stat-value" id="commissionEarned">$0</div>
                <div class="stat-label">Commission Earned</div>
                <div class="stat-footer">This period</div>
            </div>
            
            <div class="stat-card">
                <div class="stat-header">
                    <div class="stat-icon info"><i class="bi bi-clock-history"></i></div>
                    <div class="stat-trend up"><i class="bi bi-arrow-up"></i> 5.3%</div>
                </div>
                <div class="stat-value" id="pendingSettlements">$0</div>
                <div class="stat-label">Pending Settlements</div>
                <div class="stat-footer">Awaiting processing</div>
            </div>
            
            <div class="stat-card">
                <div class="stat-header">
                    <div class="stat-icon success"><i class="bi bi-check2-circle"></i></div>
                    <div class="stat-trend up"><i class="bi bi-arrow-up"></i> 12.8%</div>
                </div>
                <div class="stat-value" id="completedPayouts">$0</div>
                <div class="stat-label">Completed Payouts</div>
                <div class="stat-footer">This period</div>
            </div>
        </div>
        
        <div class="charts-grid">
            <div class="chart-card">
                <div class="chart-header">
                    <h3 class="chart-title">Revenue by Payment Method</h3>
                </div>
                <div class="chart-container">
                    <canvas id="paymentMethodChart"></canvas>
                </div>
            </div>
        </div>
        
        <div class="section-divider"></div>
        
        <!-- Section 4: MERCHANT STATISTICS -->
        <div class="section-header">
            <div class="section-title">
                <div class="section-icon info"><i class="bi bi-shop"></i></div>
                Merchant Statistics
            </div>
        </div>
        
        <div class="stats-grid">
            <div class="stat-card">
                <div class="stat-header">
                    <div class="stat-icon info"><i class="bi bi-shop-window"></i></div>
                    <div class="stat-trend up"><i class="bi bi-arrow-up"></i> 9.4%</div>
                </div>
                <div class="stat-value" id="activeMerchants">0</div>
                <div class="stat-label">Active Merchants</div>
                <div class="stat-footer">Currently active</div>
            </div>
            
            <div class="stat-card">
                <div class="stat-header">
                    <div class="stat-icon warning"><i class="bi bi-hourglass-split"></i></div>
                    <div class="stat-trend down"><i class="bi bi-arrow-down"></i> 4.2%</div>
                </div>
                <div class="stat-value" id="pendingApprovals">0</div>
                <div class="stat-label">Pending Approvals</div>
                <div class="stat-footer">Awaiting review</div>
            </div>
        </div>
        
        <div class="data-table">
            <div class="chart-header">
                <h3 class="chart-title">Top Performing Merchants</h3>
            </div>
            <div class="table-responsive">
                <table>
                    <thead>
                        <tr>
                            <th>Merchant</th>
                            <th>Transactions</th>
                            <th>Volume</th>
                            <th>Success Rate</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody id="topMerchantsTable">
                        <tr>
                            <td colspan="5">
                                <div class="empty-state">
                                    <div class="empty-icon"><i class="bi bi-inbox"></i></div>
                                    <div class="empty-title">No Data Available</div>
                                    <div class="empty-description">Merchant data will appear here</div>
                                </div>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
        
        <div class="charts-grid">
            <div class="chart-card">
                <div class="chart-header">
                    <h3 class="chart-title">Merchant Categories Distribution</h3>
                </div>
                <div class="chart-container">
                    <canvas id="merchantCategoriesChart"></canvas>
                </div>
            </div>
        </div>
        
        <div class="section-divider"></div>
        
        <!-- Section 5: BANK STATISTICS -->
        <div class="section-header">
            <div class="section-title">
                <div class="section-icon error"><i class="bi bi-bank"></i></div>
                Bank Statistics
            </div>
        </div>
        
        <div class="stats-grid">
            <div class="stat-card">
                <div class="stat-header">
                    <div class="stat-icon error"><i class="bi bi-bank2"></i></div>
                    <div class="stat-trend up"><i class="bi bi-arrow-up"></i> 3.1%</div>
                </div>
                <div class="stat-value" id="connectedBanks">0</div>
                <div class="stat-label">Connected Banks</div>
                <div class="stat-footer">Integration partners</div>
            </div>
        </div>
        
        <div class="data-table">
            <div class="chart-header">
                <h3 class="chart-title">Bank Transaction Volume & Success Rates</h3>
            </div>
            <div class="table-responsive">
                <table>
                    <thead>
                        <tr>
                            <th>Bank Name</th>
                            <th>Transactions</th>
                            <th>Volume</th>
                            <th>Success Rate</th>
                            <th>Avg. Processing Time</th>
                        </tr>
                    </thead>
                    <tbody id="bankStatsTable">
                        <tr>
                            <td colspan="5">
                                <div class="empty-state">
                                    <div class="empty-icon"><i class="bi bi-inbox"></i></div>
                                    <div class="empty-title">No Bank Data</div>
                                    <div class="empty-description">Bank statistics will appear here</div>
                                </div>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
        
    </div>
    
    <script>
        let selectedPeriod = 'today';
        
        // Initialize
        window.addEventListener('DOMContentLoaded', function() {
            loadStatistics();
            setupPresetButtons();
        });
        
        // Load Statistics Data
        async function loadStatistics() {
            try {
                const response = await fetch(`/admin/statistics/data?period=${selectedPeriod}`);
                const data = await response.json();
                
                if (data.success) {
                    updateStatistics(data);
                }
            } catch (error) {
                console.error('Error loading statistics:', error);
                loadMockData();
            }
        }
        
        // Update Statistics
        function updateStatistics(data) {
            // User Statistics
            document.getElementById('totalUsers').textContent = formatNumber(data.users.total);
            document.getElementById('activeUsers').textContent = formatNumber(data.users.active);
            document.getElementById('newUsers').textContent = formatNumber(data.users.new);
            document.getElementById('retentionRate').textContent = data.users.retention + '%';
            
            // Transaction Statistics
            document.getElementById('totalTransactions').textContent = formatNumber(data.transactions.total);
            document.getElementById('successRate').textContent = data.transactions.successRate + '%';
            document.getElementById('failedTransactions').textContent = formatNumber(data.transactions.failed);
            document.getElementById('avgTransactionValue').textContent = '$' + formatNumber(data.transactions.avgValue);
            
            // Financial Statistics
            document.getElementById('platformRevenue').textContent = '$' + formatNumber(data.financial.revenue);
            document.getElementById('commissionEarned').textContent = '$' + formatNumber(data.financial.commission);
            document.getElementById('pendingSettlements').textContent = '$' + formatNumber(data.financial.pending);
            document.getElementById('completedPayouts').textContent = '$' + formatNumber(data.financial.payouts);
            
            // Merchant Statistics
            document.getElementById('activeMerchants').textContent = formatNumber(data.merchants.active);
            document.getElementById('pendingApprovals').textContent = formatNumber(data.merchants.pending);
            
            // Bank Statistics
            document.getElementById('connectedBanks').textContent = formatNumber(data.banks.connected);
            
            // Update Charts
            createVerificationChart(data.charts.verification);
            createTransactionTimesChart(data.charts.transactionTimes);
            createPaymentMethodChart(data.charts.paymentMethods);
            createMerchantCategoriesChart(data.charts.merchantCategories);
            
            // Update Tables
            updateTopMerchantsTable(data.tables.topMerchants);
            updateBankStatsTable(data.tables.bankStats);
        }
        
        // Load Mock Data
        function loadMockData() {
            const mockData = {
                success: true,
                users: { total: 12547, active: 8932, new: 456, retention: 78.5 },
                transactions: { total: 45893, successRate: 97.8, failed: 156, avgValue: 1245.67 },
                financial: { revenue: 1245678, commission: 234567, pending: 45678, payouts: 189012 },
                merchants: { active: 234, pending: 12 },
                banks: { connected: 8 },
                charts: {
                    verification: { verified: 8234, unverified: 3245, pending: 1068 },
                    transactionTimes: [120, 450, 890, 1200, 1800, 2100, 2400, 2800, 3200, 2900, 2400, 1800, 1200, 950, 680, 520, 780, 1100, 1650, 2100, 2600, 2200, 1500, 800],
                    paymentMethods: { bank: 25600, card: 15200, wallet: 5093 },
                    merchantCategories: { retail: 45, food: 32, tech: 28, services: 25, other: 20 }
                },
                tables: {
                    topMerchants: [
                        { name: 'TechStore Inc', transactions: 1245, volume: 245670, successRate: 98.5, status: 'active' },
                        { name: 'Fashion Hub', transactions: 987, volume: 198450, successRate: 97.2, status: 'active' },
                        { name: 'Food Delivery', transactions: 856, volume: 156780, successRate: 99.1, status: 'active' },
                        { name: 'Electronics Plus', transactions: 654, volume: 134560, successRate: 96.8, status: 'active' },
                        { name: 'Beauty Shop', transactions: 543, volume: 98760, successRate: 98.2, status: 'active' }
                    ],
                    bankStats: [
                        { name: 'First National Bank', transactions: 12450, volume: 2456700, successRate: 98.5, avgTime: '1.2s' },
                        { name: 'Global Bank Corp', transactions: 10230, volume: 2045600, successRate: 97.8, avgTime: '1.5s' },
                        { name: 'Metro Bank', transactions: 8945, volume: 1789200, successRate: 99.1, avgTime: '0.9s' }
                    ]
                }
            };
            updateStatistics(mockData);
        }
        
        // Create Charts
        function createVerificationChart(data) {
            const ctx = document.getElementById('verificationChart').getContext('2d');
            new Chart(ctx, {
                type: 'pie',
                data: {
                    labels: ['Verified', 'Unverified', 'Pending'],
                    datasets: [{
                        data: [data.verified, data.unverified, data.pending],
                        backgroundColor: ['#10B981', '#EF4444', '#F59E0B'],
                        borderWidth: 0
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: { position: 'bottom' }
                    }
                }
            });
        }
        
        function createTransactionTimesChart(data) {
            const ctx = document.getElementById('transactionTimesChart').getContext('2d');
            const hours = Array.from({length: 24}, (_, i) => i + ':00');
            new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: hours,
                    datasets: [{
                        label: 'Transactions',
                        data: data,
                        backgroundColor: 'rgba(14, 165, 233, 0.6)',
                        borderColor: '#0EA5E9',
                        borderWidth: 2
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: { legend: { display: false } },
                    scales: {
                        y: { beginAtZero: true, grid: { color: 'rgba(255, 255, 255, 0.05)' } },
                        x: { grid: { display: false } }
                    }
                }
            });
        }
        
        function createPaymentMethodChart(data) {
            const ctx = document.getElementById('paymentMethodChart').getContext('2d');
            new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: ['Bank Transfer', 'Credit Card', 'E-Wallet'],
                    datasets: [{
                        label: 'Revenue',
                        data: [data.bank, data.card, data.wallet],
                        backgroundColor: ['#0EA5E9', '#10B981', '#F59E0B'],
                        borderWidth: 0
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: { legend: { display: false } },
                    scales: {
                        y: { beginAtZero: true, grid: { color: 'rgba(255, 255, 255, 0.05)' } },
                        x: { grid: { display: false } }
                    }
                }
            });
        }
        
        function createMerchantCategoriesChart(data) {
            const ctx = document.getElementById('merchantCategoriesChart').getContext('2d');
            new Chart(ctx, {
                type: 'doughnut',
                data: {
                    labels: ['Retail', 'Food & Beverage', 'Technology', 'Services', 'Other'],
                    datasets: [{
                        data: [data.retail, data.food, data.tech, data.services, data.other],
                        backgroundColor: ['#0EA5E9', '#10B981', '#F59E0B', '#EF4444', '#8B5CF6'],
                        borderWidth: 0
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: { position: 'bottom' }
                    }
                }
            });
        }
        
        // Update Tables
        function updateTopMerchantsTable(merchants) {
            const tbody = document.getElementById('topMerchantsTable');
            tbody.innerHTML = merchants.map((m, i) => `
                <tr>
                    <td>
                        <div class="merchant-badge">
                            <span>#${i + 1}</span>
                            ${m.name}
                        </div>
                    </td>
                    <td>${formatNumber(m.transactions)}</td>
                    <td>$${formatNumber(m.volume)}</td>
                    <td>${m.successRate}%</td>
                    <td><span class="status-badge success">${m.status}</span></td>
                </tr>
            `).join('');
        }
        
        function updateBankStatsTable(banks) {
            const tbody = document.getElementById('bankStatsTable');
            tbody.innerHTML = banks.map(b => `
                <tr>
                    <td><strong>${b.name}</strong></td>
                    <td>${formatNumber(b.transactions)}</td>
                    <td>$${formatNumber(b.volume)}</td>
                    <td>
                        <span class="status-badge ${b.successRate >= 98 ? 'success' : 'warning'}">
                            ${b.successRate}%
                        </span>
                    </td>
                    <td>${b.avgTime}</td>
                </tr>
            `).join('');
        }
        
        // Preset Buttons
        function setupPresetButtons() {
            document.querySelectorAll('.preset-btn').forEach(btn => {
                btn.addEventListener('click', function() {
                    document.querySelectorAll('.preset-btn').forEach(b => b.classList.remove('active'));
                    this.classList.add('active');
                    selectedPeriod = this.dataset.period;
                    
                    if (selectedPeriod === 'custom') {
                        document.getElementById('startDate').style.display = 'inline-block';
                        document.getElementById('endDate').style.display = 'inline-block';
                    } else {
                        document.getElementById('startDate').style.display = 'none';
                        document.getElementById('endDate').style.display = 'none';
                        loadStatistics();
                    }
                });
            });
        }
        
        // Export Functions
        function toggleExportMenu() {
            document.getElementById('exportMenu').classList.toggle('show');
        }
        
        function exportData(format) {
            alert(`Exporting data as ${format.toUpperCase()}...`);
            toggleExportMenu();
        }
        
        // Refresh Data
        function refreshData() {
            const btn = document.querySelector('.refresh-btn');
            btn.classList.add('spinning');
            loadStatistics();
            setTimeout(() => {
                btn.classList.remove('spinning');
                document.querySelector('.last-updated').textContent = 'Updated just now';
            }, 1000);
        }
        
        // Utility
        function formatNumber(num) {
            return num.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
        }
        
        // Close export menu when clicking outside
        window.addEventListener('click', function(e) {
            if (!e.target.closest('.export-dropdown')) {
                document.getElementById('exportMenu').classList.remove('show');
            }
        });
    </script>
    
</body>
</html>
