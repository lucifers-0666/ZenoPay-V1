<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gadget World | Demo Store</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />
    <style>
        .product-card:hover { transform: translateY(-5px); }
        .config-bar { background: #111827; color: white; }
    </style>
</head>
<body class="bg-gray-50 min-h-screen flex flex-col">

    <!-- Config Bar -->
    <div class="config-bar p-4 sticky top-0 z-40 shadow-lg">
        <div class="container mx-auto flex flex-col lg:flex-row items-center justify-between gap-4">
            <div class="flex items-center gap-2 text-yellow-400">
                <i class="fas fa-server"></i>
                <span class="font-bold text-sm tracking-wide">MERCHANT BACKEND SIMULATOR</span>
            </div>
            
            <div class="flex flex-col sm:flex-row gap-3 w-full lg:w-auto">
                <div class="flex items-center gap-2 bg-gray-800 p-2 rounded-lg border border-gray-700 flex-1">
                    <label class="text-[10px] text-gray-400 uppercase font-bold whitespace-nowrap">API Key</label>
                    <input type="text" id="merchantKey" value="<%= prefillKey %>" placeholder="Public Key" 
                        class="bg-transparent text-white text-xs w-full focus:outline-none font-mono">
                </div>
                <div class="flex items-center gap-2 bg-gray-800 p-2 rounded-lg border border-gray-700 flex-1">
                    <label class="text-[10px] text-red-400 uppercase font-bold whitespace-nowrap">Secret</label>
                    <input type="password" id="merchantSecret" placeholder="Secret Key" 
                        class="bg-transparent text-white text-xs w-full focus:outline-none font-mono">
                </div>
            </div>
        </div>
    </div>

    <!-- Navigation -->
    <nav class="bg-white shadow-sm border-b border-gray-200">
        <div class="container mx-auto px-4 py-4 flex justify-between items-center">
            <div class="flex items-center gap-2">
                <div class="bg-indigo-600 text-white w-8 h-8 rounded flex items-center justify-center font-bold shadow">G</div>
                <h1 class="text-xl font-bold text-gray-800 tracking-tight">Gadget World</h1>
            </div>
            <div class="flex items-center gap-6">
                <a href="#" class="text-gray-400 hover:text-indigo-600"><i class="fas fa-search"></i></a>
                <a href="#" class="text-gray-400 hover:text-indigo-600 relative">
                    <i class="fas fa-shopping-bag"></i>
                    <span class="absolute -top-1 -right-1 bg-red-500 text-white text-[9px] w-4 h-4 rounded-full flex items-center justify-center">2</span>
                </a>
            </div>
        </div>
    </nav>

    <!-- Products Grid -->
    <div class="container mx-auto px-4 py-12 flex-grow">
        <h3 class="text-2xl font-bold text-gray-800 mb-8 border-l-4 border-indigo-600 pl-4">Latest Arrivals</h3>
        
        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-8">
            <!-- Product 1 -->
            <div class="product-card bg-white rounded-xl shadow-sm hover:shadow-xl overflow-hidden transition-all duration-300 border border-gray-100 group">
                <div class="h-56 bg-gray-50 flex items-center justify-center p-6 relative">
                    <img src="https://placehold.co/300x300/e0e7ff/3730a3?text=Headphones" alt="Headphones" class="h-full object-contain mix-blend-multiply group-hover:scale-110 transition-transform duration-500">
                    <span class="absolute top-4 right-4 bg-white text-indigo-600 text-xs font-bold px-2 py-1 rounded shadow-sm">NEW</span>
                </div>
                <div class="p-5">
                    <p class="text-xs text-indigo-500 font-bold uppercase mb-1">Audio</p>
                    <h4 class="text-lg font-bold text-gray-800 mb-1">Sonic Pro Wireless</h4>
                    <p class="text-gray-500 text-xs mb-4">Active Noise Cancelling</p>
                    <div class="flex items-center justify-between mt-auto">
                        <span class="text-xl font-bold text-gray-900">₹2,499</span>
                        <button onclick="buyProduct(2499, 'Sonic Pro Wireless')" class="bg-indigo-600 hover:bg-indigo-700 text-white px-4 py-2 rounded-lg text-sm font-semibold transition-colors shadow-lg shadow-indigo-200">
                            Buy Now
                        </button>
                    </div>
                </div>
            </div>

            <!-- Product 2 -->
            <div class="product-card bg-white rounded-xl shadow-sm hover:shadow-xl overflow-hidden transition-all duration-300 border border-gray-100 group">
                <div class="h-56 bg-gray-50 flex items-center justify-center p-6 relative">
                    <img src="https://placehold.co/300x300/e0e7ff/3730a3?text=Watch" alt="Watch" class="h-full object-contain mix-blend-multiply group-hover:scale-110 transition-transform duration-500">
                </div>
                <div class="p-5">
                    <p class="text-xs text-indigo-500 font-bold uppercase mb-1">Wearables</p>
                    <h4 class="text-lg font-bold text-gray-800 mb-1">FitPulse X1</h4>
                    <p class="text-gray-500 text-xs mb-4">AMOLED Display & GPS</p>
                    <div class="flex items-center justify-between mt-auto">
                        <span class="text-xl font-bold text-gray-900">₹4,999</span>
                        <button onclick="buyProduct(4999, 'FitPulse X1')" class="bg-indigo-600 hover:bg-indigo-700 text-white px-4 py-2 rounded-lg text-sm font-semibold transition-colors shadow-lg shadow-indigo-200">
                            Buy Now
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- GovBank SDK Script -->
    <script src="/js/checkout.js"></script>

    <script>
        async function buyProduct(amount, product) {
            // 1. Get Credentials (Developer Mode)
            const key = document.getElementById('merchantKey').value.trim();
            const secret = document.getElementById('merchantSecret').value.trim();

            if (!key || !secret) {
                alert("Developer Error: Please enter API Key & Secret to simulate backend.");
                window.scrollTo(0,0);
                return;
            }

            // 2. Initialize SDK
            const govBank = new GovBank({
                key: key,
                secret: secret // In production, secret stays on backend
            });

            // 3. Create Order (Calls SDK -> Backend)
            const orderData = await govBank.createOrder(amount);
            
            if(orderData.error || !orderData.success) {
                alert("Order Creation Failed: " + (orderData.message || "Unknown Error"));
                return;
            }

            // 4. Open Checkout
            govBank.open({
                orderId: orderData.order_id,
                amount: orderData.amount,
                productName: product,
                merchantName: orderData.merchant_name,
                
                onSuccess: function(response) {
                    console.log("Transaction Complete:", response);
                    // Example: You can trigger a refund test here if needed
                    // govBank.refundTransaction(response.transactionId, "Test Refund");
                },
                onError: function(err) {
                    console.error("Checkout Error:", err);
                },
                onDismiss: function() {
                    console.log("Checkout Closed");
                }
            });
        }
    </script>
</body>
</html>