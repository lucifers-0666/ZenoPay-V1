<script>
    // --- Toggle Notifications (Simple version for this page) ---
    function toggleNotifications() {
        const dropdown = document.getElementById("notificationDropdown");
        dropdown.classList.toggle("hidden");
    }

    document.addEventListener('click', function(event) {
        const dropdown = document.getElementById("notificationDropdown");
        // Check if dropdown exists before trying to access properties
        if (dropdown) {
            const button = event.target.closest('button');
            const isButton = button && button.querySelector('.fa-bell');
            
            if (!isButton && !dropdown.contains(event.target) && !dropdown.classList.contains('hidden')) {
                dropdown.classList.add("hidden");
            }
        }
    });

    // --- Mark All Read Logic ---
    function markAllRead() {
        const unreadItems = document.querySelectorAll('.notification-card.unread');
        unreadItems.forEach(item => {
            item.classList.remove('unread');
            item.classList.add('read');
            
            // Remove 'New' badge
            const badge = item.querySelector('.bg-blue-50');
            if(badge) badge.remove();
            
            // Standardize background color
            item.style.backgroundColor = "#ffffff";
        });
        // Optional: showToast is not defined in this snippet, so I commented it out to prevent errors
        // showToast("All notifications marked as read", "success");
    }
</script>
