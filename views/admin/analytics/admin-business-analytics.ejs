<div class="page-header">
  <h1 class="page-title">
    <i class="fas fa-chart-bar" style="color: var(--primary); margin-right: var(--spacing-base);"></i>
    Analytics Dashboard
  </h1>
  <p class="page-subtitle">Platform analytics and performance metrics</p>
</div>

<!-- Date Range Selector -->
<div style="margin-bottom: var(--spacing-2xl);">
  <div class="page-actions">
    <button class="btn btn-outline" style="background-color: white;">Last 7 Days</button>
    <button class="btn btn-outline" style="background-color: white;">Last 30 Days</button>
    <button class="btn btn-primary">This Month</button>
  </div>
</div>

<!-- Charts Section -->
<div style="display: grid; gap: var(--spacing-2xl);">
  <!-- Revenue Chart -->
  <div class="card">
    <div class="card-header">
      <h2 class="card-title">Revenue Trends</h2>
    </div>
    <div class="card-body" style="height: 300px; display: flex; align-items: center; justify-content: center; background-color: var(--slate-50);">
      <p style="color: var(--text-light);">Chart placeholder</p>
    </div>
  </div>
  
  <!-- User Growth -->
  <div class="card">
    <div class="card-header">
      <h2 class="card-title">User Growth</h2>
    </div>
    <div class="card-body" style="height: 300px; display: flex; align-items: center; justify-content: center; background-color: var(--slate-50);">
      <p style="color: var(--text-light);">Chart placeholder</p>
    </div>
  </div>
  
  <!-- Key Metrics -->
  <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: var(--spacing-lg);">
    <div class="card">
      <div class="card-body">
        <div class="stat-label">Total Revenue</div>
        <div class="stat-value">₦125.5M</div>
        <small class="form-help">↑ 15% from previous month</small>
      </div>
    </div>
    
    <div class="card">
      <div class="card-body">
        <div class="stat-label">Active Users</div>
        <div class="stat-value">15,234</div>
        <small class="form-help">↑ 8% from previous month</small>
      </div>
    </div>
    
    <div class="card">
      <div class="card-body">
        <div class="stat-label">Transaction Volume</div>
        <div class="stat-value">45,678</div>
        <small class="form-help">↑ 12% from previous month</small>
      </div>
    </div>
    
    <div class="card">
      <div class="card-body">
        <div class="stat-label">Avg. Transaction</div>
        <div class="stat-value">₦2,745</div>
        <small class="form-help">↓ 2% from previous month</small>
      </div>
    </div>
  </div>
</div>
