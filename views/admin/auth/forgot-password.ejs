<div class="auth-container">
  <div class="auth-card">
    <h1 style="text-align: center; margin-bottom: var(--spacing-base); color: var(--text-dark);">
      Forgot Password?
    </h1>
    <p style="text-align: center; color: var(--text-light); margin-bottom: var(--spacing-xl);">
      Enter your email to receive a password reset link
    </p>
    
    <% if (typeof message !== 'undefined' && message) { %>
      <div class="alert alert-success">
        <%= message %>
      </div>
    <% } %>
    
    <% if (typeof errors !== 'undefined' && errors) { %>
      <div class="alert alert-error">
        <%= errors %>
      </div>
    <% } %>
    
    <form method="POST" action="/admin/auth/forgot-password">
      <div class="form-group">
        <label for="email" class="form-label">Email Address</label>
        <input type="email" id="email" name="email" class="form-input" required placeholder="admin@zenopay.com">
      </div>
      
      <button type="submit" class="btn btn-primary" style="width: 100%; justify-content: center;">
        <i class="fas fa-envelope"></i> Send Reset Link
      </button>
      
      <a href="/admin/auth/login" style="display: block; text-align: center; margin-top: var(--spacing-lg); color: var(--primary); text-decoration: none;">
        Back to Login
      </a>
    </form>
  </div>
</div>
