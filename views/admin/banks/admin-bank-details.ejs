<div class="page-header">
  <h1 class="page-title">
    <i class="fas fa-university" style="color: var(--primary); margin-right: var(--spacing-base);"></i>
    Bank Details
  </h1>
</div>

<div class="card">
  <div class="card-header">
    <h2 class="card-title">Bank Information</h2>
  </div>
  <div class="card-body">
    <div style="display: grid; grid-template-columns: 1fr 1fr; gap: var(--spacing-2xl);">
      <div>
        <div class="form-group">
          <label class="form-label">Bank Name</label>
          <p style="margin: 0;">First Bank</p>
        </div>
        
        <div class="form-group">
          <label class="form-label">Bank Code</label>
          <p style="margin: 0;">011</p>
        </div>
        
        <div class="form-group">
          <label class="form-label">Bank Account</label>
          <p style="margin: 0;">1234567890</p>
        </div>
      </div>
      
      <div>
        <div class="form-group">
          <label class="form-label">Account Holder</label>
          <p style="margin: 0;">ZenoPay Limited</p>
        </div>
        
        <div class="form-group">
          <label class="form-label">Status</label>
          <span class="badge badge-success">Active</span>
        </div>
        
        <div class="form-group">
          <label class="form-label">Added Date</label>
          <p style="margin: 0;">January 10, 2024</p>
        </div>
      </div>
    </div>
  </div>
  
  <div class="card-footer">
    <a href="/admin/banks/<%= id %>/edit" class="btn btn-primary">
      <i class="fas fa-edit"></i> Edit Bank
    </a>
  </div>
</div>
