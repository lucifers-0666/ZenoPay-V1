<div class="page-header">
  <h1 class="page-title">
    <i class="fas fa-edit" style="color: var(--primary); margin-right: var(--spacing-base);"></i>
    Edit Bank
  </h1>
</div>

<div class="card">
  <div class="card-body">
    <form method="POST" action="/admin/banks/<%= id %>/update">
      
      <div class="form-group">
        <label for="bankName" class="form-label">Bank Name</label>
        <input type="text" id="bankName" name="bankName" class="form-input" value="First Bank" required>
      </div>
      
      <div class="form-group">
        <label for="bankCode" class="form-label">Bank Code</label>
        <input type="text" id="bankCode" name="bankCode" class="form-input" value="011" required>
      </div>
      
      <div class="form-group">
        <label for="accountNumber" class="form-label">Account Number</label>
        <input type="text" id="accountNumber" name="accountNumber" class="form-input" value="1234567890" required>
      </div>
      
      <div class="form-group">
        <label for="accountHolder" class="form-label">Account Holder</label>
        <input type="text" id="accountHolder" name="accountHolder" class="form-input" value="ZenoPay Limited" required>
      </div>
      
      <div class="form-group">
        <label for="status" class="form-label">Status</label>
        <select id="status" name="status" class="form-input">
          <option selected>Active</option>
          <option>Inactive</option>
        </select>
      </div>
      
      <div class="card-footer" style="margin-top: var(--spacing-2xl); padding: 0;">
        <a href="/admin/banks/<%= id %>" class="btn btn-outline">Cancel</a>
        <button type="submit" class="btn btn-primary">
          <i class="fas fa-save"></i> Save Changes
        </button>
      </div>
    </form>
  </div>
</div>
