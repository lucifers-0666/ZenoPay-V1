<%- include('../layouts/admin-layout', { 
    title: 'Edit Bank - ZenoPay Admin',
    breadcrumb: [
        { name: 'Banks', url: '/admin/banks' },
        { name: 'Edit', url: '' }
    ],
    content: `
        <div class="page-header-admin">
            <div>
                <h1 class="page-title-admin">Edit Bank Configuration</h1>
                <p class="page-subtitle">Update bank settings and parameters</p>
            </div>
        </div>

        <form class="card-modern form-section-vertical" onsubmit="handleSaveBank(event)">
            <!-- Basic Information -->
            <div class="form-section">
                <div class="section-title">Basic Information</div>
                
                <div class="form-group-vertical">
                    <label class="form-label">Bank Name *</label>
                    <input type="text" class="form-input-edit" value="Federal Bank" readonly>
                </div>

                <div class="form-group-vertical">
                    <label class="form-label">IFSC Code *</label>
                    <input type="text" class="form-input-edit" value="FDRL0000001" readonly>
                </div>

                <div class="form-group-vertical">
                    <label class="form-label">SWIFT Code</label>
                    <input type="text" class="form-input-edit" value="FBININD21">
                </div>

                <div class="form-group-vertical">
                    <label class="form-label">Registration Number</label>
                    <input type="text" class="form-input-edit" value="RBI/2025/01234">
                </div>
            </div>

            <div class="form-divider"></div>

            <!-- Contact Information -->
            <div class="form-section">
                <div class="section-title">Contact Information</div>
                
                <div class="form-group-vertical">
                    <label class="form-label">Primary Contact Name *</label>
                    <input type="text" class="form-input-edit" value="Rajesh Kumar">
                </div>

                <div class="form-group-vertical">
                    <label class="form-label">Primary Email *</label>
                    <input type="email" class="form-input-edit" value="rajesh@federalbank.com">
                </div>

                <div class="form-group-vertical">
                    <label class="form-label">Primary Phone *</label>
                    <input type="tel" class="form-input-edit" value="+91 9876 543 210">
                </div>

                <div class="form-group-vertical">
                    <label class="form-label">Support Email</label>
                    <input type="email" class="form-input-edit" value="support@federalbank.com">
                </div>

                <div class="form-group-vertical">
                    <label class="form-label">Support Phone</label>
                    <input type="tel" class="form-input-edit" value="+91 1234 567 890">
                </div>
            </div>

            <div class="form-divider"></div>

            <!-- Settlement Settings -->
            <div class="form-section">
                <div class="section-title">Settlement Configuration</div>
                
                <div class="form-group-vertical">
                    <label class="form-label">Settlement Cycle *</label>
                    <select class="form-input-edit">
                        <option selected>Daily</option>
                        <option>Weekly</option>
                        <option>Bi-weekly</option>
                        <option>Monthly</option>
                    </select>
                </div>

                <div class="form-group-vertical">
                    <label class="form-label">Settlement Time *</label>
                    <input type="time" class="form-input-edit" value="15:00">
                </div>

                <div class="form-group-vertical">
                    <label class="form-label">Commission Rate (%) *</label>
                    <input type="number" class="form-input-edit" value="2.5" step="0.1" min="0" max="100">
                </div>

                <div class="form-group-vertical">
                    <label class="form-label">Minimum Transaction Amount (₹) *</label>
                    <input type="number" class="form-input-edit" value="100" min="0">
                </div>

                <div class="form-group-vertical">
                    <label class="form-label">Maximum Transaction Amount (₹) *</label>
                    <input type="number" class="form-input-edit" value="5000000" min="0">
                </div>
            </div>

            <div class="form-divider"></div>

            <!-- Capabilities -->
            <div class="form-section">
                <div class="section-title">Payment Capabilities</div>
                
                <div style="display: flex; flex-direction: column; gap: 12px;">
                    <label style="display: flex; align-items: center; gap: 12px; cursor: pointer; padding: 12px; border-radius: 8px; border: 1px solid var(--slate-200); transition: all 0.2s;">
                        <input type="checkbox" checked style="width: 18px; height: 18px; cursor: pointer;">
                        <span style="font-weight: 500;">Money Transfer</span>
                    </label>

                    <label style="display: flex; align-items: center; gap: 12px; cursor: pointer; padding: 12px; border-radius: 8px; border: 1px solid var(--slate-200); transition: all 0.2s;">
                        <input type="checkbox" checked style="width: 18px; height: 18px; cursor: pointer;">
                        <span style="font-weight: 500;">Card Payments</span>
                    </label>

                    <label style="display: flex; align-items: center; gap: 12px; cursor: pointer; padding: 12px; border-radius: 8px; border: 1px solid var(--slate-200); transition: all 0.2s;">
                        <input type="checkbox" checked style="width: 18px; height: 18px; cursor: pointer;">
                        <span style="font-weight: 500;">Mobile Wallet</span>
                    </label>

                    <label style="display: flex; align-items: center; gap: 12px; cursor: pointer; padding: 12px; border-radius: 8px; border: 1px solid var(--slate-200); transition: all 0.2s;">
                        <input type="checkbox" checked style="width: 18px; height: 18px; cursor: pointer;">
                        <span style="font-weight: 500;">QR Payments</span>
                    </label>

                    <label style="display: flex; align-items: center; gap: 12px; cursor: pointer; padding: 12px; border-radius: 8px; border: 1px solid var(--slate-200); transition: all 0.2s;">
                        <input type="checkbox" style="width: 18px; height: 18px; cursor: pointer;">
                        <span style="font-weight: 500;">Bill Payments</span>
                    </label>
                </div>
            </div>

            <div class="form-divider"></div>

            <!-- Status -->
            <div class="form-section">
                <div class="section-title">Status</div>
                
                <div class="form-group-vertical">
                    <label class="form-label">Bank Status *</label>
                    <select class="form-input-edit">
                        <option selected>Active</option>
                        <option>Inactive</option>
                        <option>Suspended</option>
                        <option>Under Review</option>
                    </select>
                </div>

                <div class="form-group-vertical">
                    <label class="form-label">Notes</label>
                    <textarea class="form-input-edit" rows="4" placeholder="Add any notes about this bank..."></textarea>
                </div>
            </div>

            <!-- Action Buttons -->
            <div style="display: flex; gap: 12px; margin-top: 24px;">
                <a href="/admin/banks" class="btn-secondary" style="flex: 0;">Cancel</a>
                <button type="submit" class="btn-primary" style="flex: 1;">
                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <polyline points="20 6 9 17 4 12"></polyline>
                    </svg>
                    Save Changes
                </button>
            </div>
        </form>

        <style>
            .form-section {
                padding: 20px 0;
            }

            .section-title {
                font-weight: 700;
                font-size: 14px;
                text-transform: uppercase;
                color: var(--slate-600);
                letter-spacing: 0.5px;
                margin-bottom: 16px;
            }

            .form-section-vertical {
                display: flex;
                flex-direction: column;
            }

            .form-group-vertical {
                display: flex;
                flex-direction: column;
                gap: 8px;
                margin-bottom: 16px;
            }

            .form-divider {
                height: 1px;
                background: var(--slate-200);
                margin: 20px 0;
            }
        </style>
    `
}) %>
