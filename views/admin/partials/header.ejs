<!-- Admin Header -->
<header class="admin-header">
  
  <div class="header-left">
    
    <!-- Mobile Menu Toggle -->
    <button class="mobile-menu-toggle" id="mobileMenuToggle">
      <svg class="icon" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
      </svg>
    </button>
    
    <!-- Search Bar -->
    <div class="header-search">
      <svg class="search-icon" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" d="M21 21l-5.197-5.197m0 0A7.5 7.5 0 105.196 5.196a7.5 7.5 0 0010.607 10.607z" />
      </svg>
      <input type="text" placeholder="Search users, merchants, transactions..." class="search-input" id="headerSearch">
    </div>
    
  </div>
  
  <div class="header-right">
    
    <!-- Quick Actions -->
    <button class="header-action-btn" title="Refresh" id="refreshBtn">
      <svg class="icon" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" d="M16.023 9.348h4.992v-.001M2.985 19.644v-4.992m0 0h4.992m-4.993 0l3.181 3.183a8.25 8.25 0 0013.803-3.7M4.031 9.865a8.25 8.25 0 0113.803-3.7l3.181 3.182m0-4.991v4.99" />
      </svg>
    </button>
    
    <!-- Notifications -->
    <div class="header-notifications">
      <button class="notification-btn" id="notificationBtn">
        <svg class="icon" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" d="M14.857 17.082a23.848 23.848 0 005.454-1.31A8.967 8.967 0 0118 9.75v-.7V9A6 6 0 006 9v.75a8.967 8.967 0 01-2.312 6.022c1.733.64 3.56 1.085 5.455 1.31m5.714 0a24.255 24.255 0 01-5.714 0m5.714 0a3 3 0 11-5.714 0" />
        </svg>
        <span class="notification-badge">3</span>
      </button>
      
      <div class="notification-dropdown">
        <div class="notification-header">
          <h3>Notifications</h3>
          <button class="mark-all-read">Mark all read</button>
        </div>
        
        <div class="notification-list">
          
          <a href="/admin/merchants/pending" class="notification-item unread">
            <div class="notification-icon merchant">
              <svg fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 21v-7.5a.75.75 0 01.75-.75h3a.75.75 0 01.75.75V21m-4.5 0H2.36m11.14 0H18m0 0h3.64m-1.39 0V9.349m-16.5 11.65V9.35m0 0a3.001 3.001 0 003.75-.615A2.993 2.993 0 009.75 9.75c.896 0 1.7-.393 2.25-1.016a2.993 2.993 0 002.25 1.016c.896 0 1.7-.393 2.25-1.016a3.001 3.001 0 003.75.614m-16.5 0a3.004 3.004 0 01-.621-4.72L4.318 3.44A1.5 1.5 0 015.378 3h13.243a1.5 1.5 0 011.06.44l1.19 1.189a3 3 0 01-.621 4.72m-13.5 8.65h3.75a.75.75 0 00.75-.75V13.5a.75.75 0 00-.75-.75H6.75a.75.75 0 00-.75.75v3.75c0 .415.336.75.75.75z" />
              </svg>
            </div>
            <div class="notification-content">
              <p class="notification-text">New merchant pending approval</p>
              <span class="notification-time">5 minutes ago</span>
            </div>
          </a>
          
          <a href="/admin/transactions/flagged" class="notification-item unread">
            <div class="notification-icon warning">
              <svg fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v3.75m-9.303 3.376c-.866 1.5.217 3.374 1.948 3.374h14.71c1.73 0 2.813-1.874 1.948-3.374L13.949 3.378c-.866-1.5-3.032-1.5-3.898 0L2.697 16.126zM12 15.75h.007v.008H12v-.008z" />
              </svg>
            </div>
            <div class="notification-content">
              <p class="notification-text">Transaction flagged for review</p>
              <span class="notification-time">12 minutes ago</span>
            </div>
          </a>
          
          <a href="/admin/users" class="notification-item">
            <div class="notification-icon success">
              <svg fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" d="M19 7.5v3m0 0v3m0-3h3m-3 0h-3m-2.25-4.125a3.375 3.375 0 11-6.75 0 3.375 3.375 0 016.75 0zM4 19.235v-.11a6.375 6.375 0 0112.75 0v.109A12.318 12.318 0 0110.374 21c-2.331 0-4.512-.645-6.374-1.766z" />
              </svg>
            </div>
            <div class="notification-content">
              <p class="notification-text">5 new users registered today</p>
              <span class="notification-time">1 hour ago</span>
            </div>
          </a>
          
        </div>
        
        <div class="notification-footer">
          <a href="/admin/notifications">View all notifications</a>
        </div>
      </div>
    </div>
    
    <!-- Admin Profile -->
    <div class="header-profile">
      <button class="profile-btn" id="profileBtn">
        <img src="/Images/admin-avatar.jpg" alt="Admin" class="profile-avatar" onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';">
        <div class="profile-avatar" style="display: none; background: var(--primary); color: white; font-weight: 700; align-items: center; justify-content: center; width: 38px; height: 38px; border-radius: 8px;">
          <%= user && user.name ? user.name.charAt(0).toUpperCase() : 'A' %>
        </div>
        <div class="profile-info">
          <span class="profile-name"><%= user && user.name ? user.name : 'Admin User' %></span>
          <span class="profile-role">Super Admin</span>
        </div>
        <svg class="profile-arrow" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 8.25l-7.5 7.5-7.5-7.5" />
        </svg>
      </button>
      
      <div class="profile-dropdown">
        
        <div class="profile-dropdown-header">
          <img src="/Images/admin-avatar.jpg" alt="Admin" class="dropdown-avatar" onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';">
          <div class="dropdown-avatar" style="display: none; background: var(--primary); color: white; font-weight: 700; align-items: center; justify-content: center; width: 48px; height: 48px; border-radius: 10px;">
            <%= user && user.name ? user.name.charAt(0).toUpperCase() : 'A' %>
          </div>
          <div>
            <div class="dropdown-name"><%= user && user.name ? user.name : 'Admin User' %></div>
            <div class="dropdown-email"><%= user && user.email ? user.email : 'admin@zenopay.com' %></div>
          </div>
        </div>
        
        <div class="profile-dropdown-menu">
          
          <a href="/admin/profile" class="dropdown-item">
            <svg class="item-icon" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" d="M17.982 18.725A7.488 7.488 0 0012 15.75a7.488 7.488 0 00-5.982 2.975m11.963 0a9 9 0 10-11.963 0m11.963 0A8.966 8.966 0 0112 21a8.966 8.966 0 01-5.982-2.275M15 9.75a3 3 0 11-6 0 3 3 0 016 0z" />
            </svg>
            <span>My Profile</span>
          </a>
          
          <a href="/admin/settings" class="dropdown-item">
            <svg class="item-icon" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" d="M9.594 3.94c.09-.542.56-.94 1.11-.94h2.593c.55 0 1.02.398 1.11.94l.213 1.281c.063.374.313.686.645.87.074.04.147.083.22.127.324.196.72.257 1.075.124l1.217-.456a1.125 1.125 0 011.37.49l1.296 2.247a1.125 1.125 0 01-.26 1.431l-1.003.827c-.293.24-.438.613-.431.992a6.759 6.759 0 010 .255c-.007.378.138.75.43.99l1.005.828c.424.35.534.954.26 1.43l-1.298 2.247a1.125 1.125 0 01-1.369.491l-1.217-.456c-.355-.133-.75-.072-1.076.124a6.57 6.57 0 01-.22.128c-.331.183-.581.495-.644.869l-.213 1.28c-.09.543-.56.941-1.11.941h-2.594c-.55 0-1.02-.398-1.11-.94l-.213-1.281c-.062-.374-.312-.686-.644-.87a6.52 6.52 0 01-.22-.127c-.325-.196-.72-.257-1.076-.124l-1.217.456a1.125 1.125 0 01-1.369-.49l-1.297-2.247a1.125 1.125 0 01.26-1.431l1.004-.827c.292-.24.437-.613.43-.992a6.932 6.932 0 010-.255c.007-.378-.138-.75-.43-.99l-1.004-.828a1.125 1.125 0 01-.26-1.43l1.297-2.247a1.125 1.125 0 011.37-.491l1.216.456c.356.133.751.072 1.076-.124.072-.044.146-.087.22-.128.332-.183.582-.495.644-.869l.214-1.281z" />
              <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
            </svg>
            <span>Settings</span>
          </a>
          
          <a href="/admin/activity" class="dropdown-item">
            <svg class="item-icon" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" d="M12 6v6h4.5m4.5 0a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <span>Activity Log</span>
          </a>
          
          <div class="dropdown-divider"></div>
          
          <a href="/admin/auth/logout" class="dropdown-item logout">
            <svg class="item-icon" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 9V5.25A2.25 2.25 0 0013.5 3h-6a2.25 2.25 0 00-2.25 2.25v13.5A2.25 2.25 0 007.5 21h6a2.25 2.25 0 002.25-2.25V15M12 9l-3 3m0 0l3 3m-3-3h12.75" />
            </svg>
            <span>Logout</span>
          </a>
          
        </div>
      </div>
    </div>
    
  </div>
  
</header>
      </div>
    </div>
    
  </div>
  
</header>

<script>
  // Notification dropdown toggle
  document.getElementById('notificationBtn')?.addEventListener('click', function(e) {
    e.stopPropagation();
    const dropdown = document.getElementById('notificationDropdown');
    dropdown.style.display = dropdown.style.display === 'none' ? 'block' : 'none';
  });
  
  // User menu dropdown toggle
  document.getElementById('userMenuBtn')?.addEventListener('click', function(e) {
    e.stopPropagation();
    const dropdown = document.getElementById('userDropdown');
    dropdown.style.display = dropdown.style.display === 'none' ? 'block' : 'none';
  });
  
  // Close dropdowns when clicking outside
  document.addEventListener('click', function() {
    document.getElementById('notificationDropdown').style.display = 'none';
    document.getElementById('userDropdown').style.display = 'none';
  });
</script>
