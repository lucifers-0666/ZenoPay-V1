<%- include('../layouts/admin-layout', { 
    title: 'System Configuration - ZenoPay Admin',
    breadcrumb: [
        { name: 'Settings', url: '/admin/settings' },
        { name: 'System Configuration', url: '' }
    ],
    content: `
        <div class="page-header-admin">
            <div>
                <h1 class="page-title-admin">System Configuration</h1>
                <p class="page-subtitle">Configure system-level settings and maintenance</p>
            </div>
        </div>

        <form class="card-modern form-section-vertical" onsubmit="handleSaveConfiguration(event)">
            <!-- System Status -->
            <div class="form-section">
                <div class="section-title">System Status</div>
                
                <div class="form-group-vertical">
                    <label class="form-label">System Status *</label>
                    <select class="form-input-edit">
                        <option selected>Operational</option>
                        <option>Maintenance Mode</option>
                        <option>Limited Availability</option>
                        <option>Down for Maintenance</option>
                    </select>
                </div>

                <div class="form-group-vertical">
                    <label class="form-label">Maintenance Message</label>
                    <textarea class="form-input-edit" rows="3" placeholder="Message shown to users during maintenance..."></textarea>
                </div>

                <div class="form-group-vertical">
                    <label class="form-label">Scheduled Maintenance Window</label>
                    <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 12px;">
                        <input type="datetime-local" class="form-input-edit" placeholder="Start time">
                        <input type="datetime-local" class="form-input-edit" placeholder="End time">
                    </div>
                </div>
            </div>

            <div class="form-divider"></div>

            <!-- Database Settings -->
            <div class="form-section">
                <div class="section-title">Database Management</div>
                
                <div class="form-group-vertical">
                    <label class="form-label">Database Status</label>
                    <div style="padding: 12px; background: var(--success-light); border-radius: 8px; display: flex; align-items: center; gap: 12px;">
                        <div style="width: 12px; height: 12px; background: var(--success); border-radius: 50%;"></div>
                        <span style="font-weight: 600; color: var(--success);">Connected & Healthy</span>
                    </div>
                </div>

                <div class="form-group-vertical">
                    <label class="form-label">Database Size: 2.4 GB / 10 GB</label>
                    <div style="width: 100%; height: 8px; background: var(--slate-200); border-radius: 4px; overflow: hidden;">
                        <div style="width: 24%; height: 100%; background: var(--success); border-radius: 4px;"></div>
                    </div>
                </div>

                <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 12px; margin-top: 16px;">
                    <button type="button" class="btn-secondary" onclick="optimizeDatabase()">
                        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M12 2v20M2 12h20M7 7l10 10M17 7L7 17"></path>
                        </svg>
                        Optimize Database
                    </button>
                    <button type="button" class="btn-secondary" onclick="backupDatabase()">
                        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M19 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h11l5 5v11a2 2 0 0 1-2 2z"></path>
                        </svg>
                        Create Backup
                    </button>
                </div>
            </div>

            <div class="form-divider"></div>

            <!-- Cache Settings -->
            <div class="form-section">
                <div class="section-title">Cache Management</div>
                
                <div class="form-group-vertical">
                    <label class="form-label">Redis Cache Status</label>
                    <div style="padding: 12px; background: var(--success-light); border-radius: 8px; display: flex; align-items: center; gap: 12px;">
                        <div style="width: 12px; height: 12px; background: var(--success); border-radius: 50%;"></div>
                        <span style="font-weight: 600; color: var(--success);">Connected</span>
                    </div>
                </div>

                <div style="grid-template-columns: 1fr 1fr; gap: 12px; margin-top: 16px; display: grid;">
                    <button type="button" class="btn-secondary" onclick="clearCache()">
                        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <polyline points="3 6 5 4 7 6"></polyline>
                            <line x1="5" y1="4" x2="5" y2="12"></line>
                        </svg>
                        Clear Cache
                    </button>
                    <button type="button" class="btn-secondary" onclick="viewCacheStats()">
                        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M21 8a2 2 0 0 0-1-1.73l-7-4a2 2 0 0 0-2 0l-7 4A2 2 0 0 0 3 8v8a2 2 0 0 0 1 1.73l7 4a2 2 0 0 0 2 0l7-4A2 2 0 0 0 21 16Z"></path>
                        </svg>
                        View Stats
                    </button>
                </div>
            </div>

            <div class="form-divider"></div>

            <!-- API Settings -->
            <div class="form-section">
                <div class="section-title">API Configuration</div>
                
                <div class="form-group-vertical">
                    <label style="display: flex; align-items: center; gap: 12px; cursor: pointer; padding: 12px; border-radius: 8px; border: 1px solid var(--slate-200);">
                        <input type="checkbox" checked style="width: 18px; height: 18px; cursor: pointer;">
                        <span style="font-weight: 500;">Enable API v1</span>
                    </label>
                </div>

                <div class="form-group-vertical">
                    <label style="display: flex; align-items: center; gap: 12px; cursor: pointer; padding: 12px; border-radius: 8px; border: 1px solid var(--slate-200);">
                        <input type="checkbox" checked style="width: 18px; height: 18px; cursor: pointer;">
                        <span style="font-weight: 500;">Enable API v2</span>
                    </label>
                </div>

                <div class="form-group-vertical">
                    <label class="form-label">API Rate Limiting (req/min)</label>
                    <input type="number" class="form-input-edit" value="1000" min="100">
                </div>

                <div class="form-group-vertical">
                    <label class="form-label">Request Timeout (seconds)</label>
                    <input type="number" class="form-input-edit" value="30" min="5" max="120">
                </div>
            </div>

            <div class="form-divider"></div>

            <!-- Logging & Monitoring -->
            <div class="form-section">
                <div class="section-title">Logging & Monitoring</div>
                
                <div class="form-group-vertical">
                    <label class="form-label">Log Level *</label>
                    <select class="form-input-edit">
                        <option>INFO</option>
                        <option selected>WARNING</option>
                        <option>ERROR</option>
                        <option>DEBUG</option>
                    </select>
                </div>

                <div class="form-group-vertical">
                    <label class="form-label">Retention Period (days)</label>
                    <input type="number" class="form-input-edit" value="30" min="7" max="365">
                </div>

                <div class="form-group-vertical">
                    <label style="display: flex; align-items: center; gap: 12px; cursor: pointer; padding: 12px; border-radius: 8px; border: 1px solid var(--slate-200);">
                        <input type="checkbox" checked style="width: 18px; height: 18px; cursor: pointer;">
                        <span style="font-weight: 500;">Enable Error Tracking</span>
                    </label>
                </div>

                <div class="form-group-vertical">
                    <label style="display: flex; align-items: center; gap: 12px; cursor: pointer; padding: 12px; border-radius: 8px; border: 1px solid var(--slate-200);">
                        <input type="checkbox" checked style="width: 18px; height: 18px; cursor: pointer;">
                        <span style="font-weight: 500;">Enable Performance Monitoring</span>
                    </label>
                </div>
            </div>

            <!-- Action Buttons -->
            <div style="display: flex; gap: 12px; margin-top: 24px;">
                <a href="/admin/settings" class="btn-secondary" style="flex: 0;">Cancel</a>
                <button type="submit" class="btn-primary" style="flex: 1;">
                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <polyline points="20 6 9 17 4 12"></polyline>
                    </svg>
                    Save Configuration
                </button>
            </div>
        </form>

        <style>
            .form-section { padding: 20px 0; }
            .section-title {
                font-weight: 700;
                font-size: 14px;
                text-transform: uppercase;
                color: var(--slate-600);
                letter-spacing: 0.5px;
                margin-bottom: 16px;
            }
            .form-divider {
                height: 1px;
                background: var(--slate-200);
                margin: 20px 0;
            }
            .form-section-vertical { display: flex; flex-direction: column; }
            .form-group-vertical {
                display: flex;
                flex-direction: column;
                gap: 8px;
                margin-bottom: 16px;
            }
        </style>
    `
}) %>
