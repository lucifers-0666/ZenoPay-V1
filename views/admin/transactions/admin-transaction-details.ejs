<div class="page-header">
  <h1 class="page-title">
    <i class="fas fa-exchange-alt" style="color: var(--primary); margin-right: var(--spacing-base);"></i>
    Transaction Details
  </h1>
</div>

<div style="display: grid; grid-template-columns: 2fr 1fr; gap: var(--spacing-2xl);">
  <div>
    <!-- Transaction Info -->
    <div class="card" style="margin-bottom: var(--spacing-2xl);">
      <div class="card-header">
        <h2 class="card-title">Transaction Information</h2>
      </div>
      <div class="card-body">
        <div class="form-group">
          <label class="form-label">Transaction ID</label>
          <p style="margin: 0;">TXN-2024-001</p>
        </div>
        
        <div class="form-group">
          <label class="form-label">Type</label>
          <p style="margin: 0;">Transfer</p>
        </div>
        
        <div class="form-group">
          <label class="form-label">Amount</label>
          <p style="margin: 0; font-size: var(--text-lg); font-weight: bold;">â‚¦50,000</p>
        </div>
        
        <div class="form-group">
          <label class="form-label">From Account</label>
          <p style="margin: 0;">John Doe (john@example.com)</p>
        </div>
        
        <div class="form-group">
          <label class="form-label">To Account</label>
          <p style="margin: 0;">Jane Smith (jane@example.com)</p>
        </div>
        
        <div class="form-group">
          <label class="form-label">Date & Time</label>
          <p style="margin: 0;">February 4, 2024 at 10:30 AM</p>
        </div>
        
        <div class="form-group">
          <label class="form-label">Reference</label>
          <p style="margin: 0;">Payment for goods</p>
        </div>
      </div>
    </div>
    
    <!-- Recipient Details -->
    <div class="card">
      <div class="card-header">
        <h2 class="card-title">Recipient Details</h2>
      </div>
      <div class="card-body">
        <div class="form-group">
          <label class="form-label">Bank Name</label>
          <p style="margin: 0;">First Bank</p>
        </div>
        
        <div class="form-group">
          <label class="form-label">Account Number</label>
          <p style="margin: 0;">0987654321</p>
        </div>
        
        <div class="form-group">
          <label class="form-label">Account Name</label>
          <p style="margin: 0;">JANE SMITH</p>
        </div>
      </div>
    </div>
  </div>
  
  <!-- Sidebar -->
  <div>
    <div class="card" style="margin-bottom: var(--spacing-2xl);">
      <div class="card-header">
        <h2 class="card-title">Status</h2>
      </div>
      <div class="card-body">
        <div style="margin-bottom: var(--spacing-lg);">
          <p style="margin: 0 0 var(--spacing-sm) 0; color: var(--text-light); font-size: var(--text-sm);">Transaction Status</p>
          <span class="badge badge-success">Complete</span>
        </div>
        
        <div>
          <p style="margin: 0 0 var(--spacing-sm) 0; color: var(--text-light); font-size: var(--text-sm);">Settlement Status</p>
          <span class="badge badge-success">Settled</span>
        </div>
      </div>
    </div>
    
    <!-- Quick Actions -->
    <div class="card">
      <div class="card-header">
        <h2 class="card-title">Actions</h2>
      </div>
      <div class="card-body" style="display: flex; flex-direction: column; gap: var(--spacing-base);">
        <button class="btn btn-primary btn-sm" style="justify-content: center;">
          <i class="fas fa-print"></i> Print
        </button>
        <button class="btn btn-primary btn-sm" style="justify-content: center;">
          <i class="fas fa-download"></i> Download
        </button>
        <button class="btn btn-error btn-sm" style="justify-content: center;">
          <i class="fas fa-undo"></i> Refund
        </button>
      </div>
    </div>
  </div>
</div>
