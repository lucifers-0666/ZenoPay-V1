<div class="page-header" style="display: flex; justify-content: space-between; align-items: center; flex-wrap: wrap;">
  <div>
    <h1 class="page-title">
      <i class="fas fa-exchange-alt" style="color: var(--primary); margin-right: var(--spacing-base);"></i>
      All Transactions
    </h1>
    <p class="page-subtitle">View and manage all transactions</p>
  </div>
  <a href="/admin/transactions/export" class="btn btn-outline">
    <i class="fas fa-download"></i> Export
  </a>
</div>

<!-- Filters -->
<div class="filters" style="margin-bottom: var(--spacing-2xl);">
  <div class="filter-group">
    <label>Type:</label>
    <select class="form-input" style="max-width: 150px;">
      <option>All</option>
      <option>Transfer</option>
      <option>Payment</option>
      <option>Withdrawal</option>
    </select>
  </div>
  
  <div class="filter-group">
    <label>Status:</label>
    <select class="form-input" style="max-width: 150px;">
      <option>All</option>
      <option>Complete</option>
      <option>Pending</option>
      <option>Failed</option>
    </select>
  </div>
  
  <div class="filter-group" style="flex: 1;">
    <input type="text" class="form-input" placeholder="Search by TXN ID, user...">
  </div>
  
  <button class="btn btn-primary">
    <i class="fas fa-search"></i> Search
  </button>
</div>

<!-- Transactions Table -->
