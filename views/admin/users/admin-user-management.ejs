<div class="page-header" style="display: flex; justify-content: space-between; align-items: center; flex-wrap: wrap;">
  <div>
    <h1 class="page-title">
      <i class="fas fa-users" style="color: var(--primary); margin-right: var(--spacing-base);"></i>
      Users Management
    </h1>
    <p class="page-subtitle">Manage all system users</p>
  </div>
  <a href="/admin/users/create" class="btn btn-primary">
    <i class="fas fa-plus"></i> Add New User
  </a>
</div>

<!-- Filters -->
<div class="filters" style="margin-bottom: var(--spacing-2xl);">
  <div class="filter-group">
    <label>Status:</label>
    <select class="form-input" style="max-width: 150px;">
      <option>All</option>
      <option>Active</option>
      <option>Suspended</option>
      <option>Inactive</option>
    </select>
  </div>
  
  <div class="filter-group">
    <label>Role:</label>
    <select class="form-input" style="max-width: 150px;">
      <option>All</option>
      <option>User</option>
      <option>Merchant</option>
      <option>Premium</option>
    </select>
  </div>
  
  <div class="filter-group" style="flex: 1;">
    <input type="text" class="form-input" placeholder="Search by name, email...">
  </div>
  
  <button class="btn btn-primary">
    <i class="fas fa-search"></i> Search
  </button>
</div>

<!-- Users Table -->
<div class="card">
  <div class="table-responsive">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Name</th>
          <th>Email</th>
          <th>Role</th>
          <th>Status</th>
          <th>Joined</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td>John Doe</td>
          <td>john@example.com</td>
          <td>Premium User</td>
          <td><span class="badge badge-success">Active</span></td>
          <td>Jan 15, 2024</td>
          <td>
            <a href="/admin/users/1" class="btn btn-sm btn-primary">View</a>
            <button class="btn btn-sm btn-outline">Edit</button>
          </td>
        </tr>
        <tr>
          <td>Jane Smith</td>
          <td>jane@example.com</td>
          <td>User</td>
          <td><span class="badge badge-success">Active</span></td>
          <td>Feb 20, 2024</td>
          <td>
            <a href="/admin/users/2" class="btn btn-sm btn-primary">View</a>
            <button class="btn btn-sm btn-outline">Edit</button>
          </td>
        </tr>
        <tr>
          <td>Bob Wilson</td>
          <td>bob@example.com</td>
          <td>Merchant</td>
          <td><span class="badge badge-error">Suspended</span></td>
          <td>Mar 10, 2024</td>
          <td>
            <a href="/admin/users/3" class="btn btn-sm btn-primary">View</a>
            <button class="btn btn-sm btn-outline">Edit</button>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
  
  <div style="padding: var(--spacing-lg); border-top: 1px solid var(--slate-200); display: flex; justify-content: space-between; align-items: center;">
    <small style="color: var(--text-light);">Showing 1 to 10 of 100 results</small>
    <div style="display: flex; gap: var(--spacing-sm);">
      <button class="btn btn-outline btn-sm" disabled>&lt; Previous</button>
      <button class="btn btn-primary btn-sm">1</button>
      <button class="btn btn-outline btn-sm">2</button>
      <button class="btn btn-outline btn-sm">3</button>
      <button class="btn btn-outline btn-sm">Next &gt;</button>
    </div>
  </div>
</div>
