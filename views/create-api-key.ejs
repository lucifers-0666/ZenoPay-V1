<%-include ('partials/header')%>

    <!-- Main Content -->
    <div class="container mx-auto px-4 py-12 max-w-3xl">
      
      <!-- Header -->
      <div class="text-center mb-10">
        <div class="inline-flex items-center justify-center w-20 h-20 bg-blue-500/20 rounded-full mb-4 ring-2 ring-blue-400">
          <i class="fas fa-key text-blue-400 text-4xl"></i>
        </div>
        <h1 class="text-3xl font-bold text-white mb-2">Developer API Settings</h1>
        <p class="text-gray-400">Link an account to generate settlement credentials.</p>
      </div>

      <!-- Main Card -->
      <div class="bg-white/5 border border-white/10 backdrop-blur-sm rounded-2xl p-8 shadow-2xl mb-8">
        
        <!-- Step 1: Business Details & Account Selection -->
        <div id="setupSection" class="<%= existingKey ? 'hidden' : '' %>">
            <h2 class="text-xl font-semibold text-white mb-6 flex items-center">
                <span class="bg-blue-600 text-xs w-6 h-6 rounded-full flex items-center justify-center mr-3">1</span>
                Business Registration
            </h2>
            
            <form onsubmit="handleGenerate(event)">
                <div class="mb-6">
                    <label class="block text-sm font-medium text-gray-300 mb-2">Business / Merchant Name</label>
                    <input type="text" id="txtBusinessName" class="w-full bg-gray-800 border border-gray-700 text-white text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block pl-4 p-3" placeholder="e.g. Acme Corp Solutions" required value="<%= existingBusiness || '' %>">
                </div>

                <div class="mb-6">
                    <label class="block text-sm font-medium text-gray-300 mb-2">Settlement Bank Account</label>
                    <div class="relative">
                        <select id="ddlAccount" class="w-full bg-gray-800 border border-gray-700 text-white text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block pl-4 p-3 appearance-none" required>
                            <option value="">-- Select Account --</option>
                            <% if(accounts && accounts.length > 0) { %>
                                <% accounts.forEach(acc => { %>
                                    <option value="<%= acc.AccountNumber %>">
                                        <%= acc.BankName %> - <%= acc.AccountNumber %> (IFSC: <%= acc.IFSC %>)
                                    </option>
                                <% }); %>
                            <% } else { %>
                                <option disabled>No accounts found</option>
                            <% } %>
                        </select>
                        <div class="absolute inset-y-0 right-0 flex items-center px-2 pointer-events-none">
                            <i class="fas fa-chevron-down text-gray-400 text-xs"></i>
                        </div>
                    </div>
                    <p class="mt-2 text-xs text-blue-300"><i class="fas fa-info-circle mr-1"></i> Funds will settle to this account. API Key will start with the bank's IFSC.</p>
                </div>

                <button type="submit" id="btnGenerate" class="w-full bg-gradient-to-r from-blue-600 to-indigo-600 hover:from-blue-700 hover:to-indigo-700 text-white font-bold py-4 rounded-xl shadow-lg transform transition hover:-translate-y-1">
                    <i class="fas fa-cogs mr-2"></i> Generate API Credentials
                </button>
            </form>
        </div>

        <!-- Step 2: Credentials Display -->
        <div id="keysSection" class="<%= existingKey ? '' : 'hidden' %> space-y-6">
            <div class="flex justify-between items-center mb-6">
                <h2 class="text-xl font-semibold text-white flex items-center">
                    <span class="bg-green-600 text-xs w-6 h-6 rounded-full flex items-center justify-center mr-3"><i class="fas fa-check"></i></span>
                    Active Credentials
                </h2>
                <span class="px-3 py-1 bg-green-500/20 text-green-400 text-xs font-bold rounded-full border border-green-500/30 animate-pulse">LIVE MODE</span>
            </div>

            <div class="bg-gray-800/50 rounded-lg p-4 border border-gray-700">
                <div class="grid grid-cols-2 gap-4">
                    <div>
                        <p class="text-xs text-gray-500 uppercase font-bold mb-1">Registered Business</p>
                        <p class="text-lg text-white font-semibold" id="displayBusinessName"><%= existingBusiness %></p>
                    </div>
                    <div class="text-right">
                        <p class="text-xs text-gray-500 uppercase font-bold mb-1">Settlement IFSC</p>
                        <p class="text-sm text-blue-300 font-mono" id="displayIFSC"><%= linkedAccount || 'Hidden' %></p>
                    </div>
                </div>
            </div>

            <div>
                <label class="block text-sm font-medium text-gray-400 mb-2">API Key (Public)</label>
                <div class="flex">
                    <input type="text" id="txtApiKey" readonly class="flex-1 bg-gray-900 border border-gray-700 text-green-400 font-mono text-sm rounded-l-lg p-4" value="<%= existingKey || '' %>">
                    <button onclick="copyToClipboard('txtApiKey')" class="bg-gray-700 hover:bg-gray-600 text-white px-5 rounded-r-lg border border-l-0 border-gray-700 transition-colors">
                        <i class="far fa-copy"></i>
                    </button>
                </div>
                <p class="text-[10px] text-gray-500 mt-1">Format: [IFSC][RandomKey]</p>
            </div>

            <div>
                <label class="block text-sm font-medium text-gray-400 mb-2">API Secret (Private)</label>
                <div class="flex">
                    <input type="text" id="txtApiSecret" readonly class="flex-1 bg-gray-900 border border-gray-700 text-red-400 font-mono text-sm rounded-l-lg p-4" value="<%= existingSecret || '*************************' %>">
                    <button onclick="copyToClipboard('txtApiSecret')" class="bg-gray-700 hover:bg-gray-600 text-white px-5 rounded-r-lg border border-l-0 border-gray-700 transition-colors">
                        <i class="far fa-copy"></i>
                    </button>
                </div>
            </div>
            
            <div class="pt-6 border-t border-gray-700 flex justify-center">
                 <button onclick="document.getElementById('keysSection').classList.add('hidden'); document.getElementById('setupSection').classList.remove('hidden');" class="text-sm text-blue-400 hover:text-blue-300 underline">
                    Generate New Key (For another account or Replace)
                 </button>
            </div>
        </div>
      </div>

      <!-- Testing Tools Card -->
      <div id="testTools" class="bg-gradient-to-r from-gray-800 to-gray-900 border border-white/10 rounded-2xl p-8 shadow-xl <%= existingKey ? '' : 'hidden' %>">
          <h2 class="text-xl font-bold text-white mb-4 flex items-center">
              <i class="fas fa-flask text-purple-400 mr-2"></i> Payment Link Generator
          </h2>
          <p class="text-sm text-gray-400 mb-4">Create a test link to verify payments are settling to your account.</p>
          
          <div class="flex gap-4 items-end">
              <div class="flex-1">
                  <label class="block text-xs font-medium text-gray-500 mb-1">Amount (INR)</label>
                  <input type="number" id="testAmount" class="w-full bg-gray-900 border border-gray-600 rounded p-2 text-white" value="500">
              </div>
              <button onclick="generateLink()" class="bg-purple-600 hover:bg-purple-700 text-white px-4 py-2 rounded font-bold transition-colors h-[42px]">
                  Create Link
              </button>
          </div>

          <div id="linkResult" class="mt-4 hidden p-4 bg-black/30 rounded border border-purple-500/30">
              <p class="text-xs text-gray-400 mb-2">Share this link:</p>
              <a id="generatedLinkAnchor" href="#" target="_blank" class="text-purple-400 text-sm font-mono break-all hover:underline"></a>
          </div>
      </div>

    </div>

    <script>
        async function handleGenerate(e) {
            e.preventDefault();
            const btn = document.getElementById('btnGenerate');
            const originalText = btn.innerHTML;
            const businessName = document.getElementById('txtBusinessName').value;
            const accountNumber = document.getElementById('ddlAccount').value;

            if(!accountNumber) return showToast("Please select a settlement account", "error");

            btn.disabled = true;
            btn.innerHTML = '<i class="fas fa-spinner fa-spin mr-2"></i> Generating...';

            try {
                const response = await fetch('/merchant/generate-keys', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ businessName, accountNumber })
                });

                const data = await response.json();

                if (response.ok && data.success) {
                    showToast(data.message, 'success');
                    
                    document.getElementById('displayBusinessName').textContent = businessName;
                    document.getElementById('displayIFSC').textContent = data.data.linkedIFSC;
                    document.getElementById('txtApiKey').value = data.data.apiKey;
                    document.getElementById('txtApiSecret').value = data.data.apiSecret;

                    document.getElementById('setupSection').classList.add('hidden');
                    document.getElementById('keysSection').classList.remove('hidden');
                    document.getElementById('testTools').classList.remove('hidden');
                } else {
                    showToast(data.message || 'Generation failed', 'error');
                }
            } catch (error) {
                console.error(error);
                showToast('Server error occurred', 'error');
            } finally {
                btn.disabled = false;
                btn.innerHTML = originalText;
            }
        }

        function generateLink() {
            const key = document.getElementById('txtApiKey').value;
            const amount = document.getElementById('testAmount').value;
            if(!key || !amount) return showToast("Missing details", "error");

            const url = `${window.location.origin}/pay?key=${key}&amount=${amount}`;
            
            const linkBox = document.getElementById('linkResult');
            const anchor = document.getElementById('generatedLinkAnchor');
            
            anchor.href = url;
            anchor.textContent = url;
            linkBox.classList.remove('hidden');
            showToast("Test Link Generated!", "success");
        }

        function copyToClipboard(elementId) {
            const copyText = document.getElementById(elementId);
            copyText.select();
            navigator.clipboard.writeText(copyText.value);
            showToast("Copied!", "success");
        }

     
    </script>
  </body>
</html>