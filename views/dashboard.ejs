<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>ZenoPay Dashboard</title>
    <link rel="stylesheet" href="/css/dashboard.css" />
    <link rel="stylesheet" href="/css/header.css" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
    />
  </head>
  <body>
    <!-- Sidebar -->
    <%- include('partials/header') %>

    <!-- Main Content -->
    <main class="main-content">
      <!-- Navigation Bar -->
      <%- include('partials/navbar') %>

      <% if (isLoggedIn) { %>
        <!-- Logged In User Hero Section -->
        <section class="hero-section">
          <div class="video-container">
            <video autoplay muted loop playsinline class="hero-video">
              <source src="/Video/zeno1.mp4" type="video/mp4" />
              Your browser does not support the video tag.
            </video>
            <div class="video-overlay"></div>
          </div>
          <div class="hero-content">
            <h1 class="hero-title">Welcome back, <%= user.Name || 'User' %>!</h1>
            <p class="hero-subtitle">
              Manage your payments seamlessly with ZenoPay
            </p>
          </div>
        </section>
      <% } else { %>
        <!-- Guest User Hero Section -->
        <section class="hero-section guest-hero">
          <div class="video-container">
            <video autoplay muted loop playsinline class="hero-video">
              <source src="/Video/zeno1.mp4" type="video/mp4" />
              Your browser does not support the video tag.
            </video>
            <div class="video-overlay"></div>
          </div>
          <div class="hero-content guest-content">
            <div class="guest-welcome">
              <h1 class="hero-title animated-title">Your Financial Freedom Starts Here </h1>
              <p class="hero-subtitle animated-subtitle">
                Experience seamless payments, secure transactions, and complete financial control
              </p>
              <div class="cta-buttons">
                <a href="/register-zenopay" class="btn-primary pulse">
                  <i class="fas fa-user-plus"></i> Join ZenoPay Now
                </a>
                <a href="/login" class="btn-secondary">
                  <i class="fas fa-sign-in-alt"></i> Login
                </a>
              </div>
            </div>
            
            <!-- Guest Stats -->
            <div class="hero-stats guest-stats">
              <div class="stat-card">
                <i class="fas fa-users"></i>
                <div class="stat-info">
                  <h3>10,000+</h3>
                  <p>Active Users</p>
                </div>
              </div>
              <div class="stat-card">
                <i class="fas fa-shield-alt"></i>
                <div class="stat-info">
                  <h3>100%</h3>
                  <p>Secure</p>
                </div>
              </div>
              <div class="stat-card">
                <i class="fas fa-bolt"></i>
                <div class="stat-info">
                  <h3>Instant</h3>
                  <p>Transfers</p>
                </div>
              </div>
            </div>
          </div>
        </section>
      <% } %>

      <!-- Dashboard Cards -->
      <section class="dashboard-content">
        <% if (isLoggedIn) { %>
          <!-- Logged In User Dashboard -->
          <div class="content-header">
            <h2>Overview</h2>
          </div>

          <div class="cards-grid">
            <div class="card">
              <div class="card-header">
                <h3>Recent Transactions</h3>
                <a href="/Transaction-History" class="btn-link">View All</a>
              </div>
              <div class="card-body">
                <div class="transaction-item">
                <div class="transaction-icon success">
                  <i class="fas fa-arrow-down"></i>
                </div>
                <div class="transaction-details">
                  <p class="transaction-name">Payment from Client A</p>
                  <span class="transaction-id">ID: TXN2025120601</span>
                  <span class="transaction-date">Dec 6, 2025</span>
                </div>
                <div class="transaction-amount success">+$1,200</div>
              </div>
              <div class="transaction-item">
                <div class="transaction-icon danger">
                  <i class="fas fa-arrow-up"></i>
                </div>
                <div class="transaction-details">
                  <p class="transaction-name">Subscription Payment</p>
                  <span class="transaction-id">ID: TXN2025120502</span>
                  <span class="transaction-date">Dec 5, 2025</span>
                </div>
                <div class="transaction-amount danger">-$99</div>
              </div>
              <div class="transaction-item">
                <div class="transaction-icon success">
                  <i class="fas fa-arrow-down"></i>
                </div>
                <div class="transaction-details">
                  <p class="transaction-name">Refund Received</p>
                  <span class="transaction-id">ID: TXN2025120403</span>
                  <span class="transaction-date">Dec 4, 2025</span>
                </div>
                <div class="transaction-amount success">+$450</div>
              </div>
              <div class="transaction-item">
                <div class="transaction-icon danger">
                  <i class="fas fa-arrow-up"></i>
                </div>
                <div class="transaction-details">
                  <p class="transaction-name">Online Shopping</p>
                  <span class="transaction-id">ID: TXN2025120304</span>
                  <span class="transaction-date">Dec 3, 2025</span>
                </div>
                <div class="transaction-amount danger">-$250</div>
              </div>
              <div class="transaction-item">
                <div class="transaction-icon success">
                  <i class="fas fa-arrow-down"></i>
                </div>
                <div class="transaction-details">
                  <p class="transaction-name">Freelance Payment</p>
                  <span class="transaction-id">ID: TXN2025120205</span>
                  <span class="transaction-date">Dec 2, 2025</span>
                </div>
                <div class="transaction-amount success">+$800</div>
              </div>
              <div class="transaction-item">
                <div class="transaction-icon danger">
                  <i class="fas fa-arrow-up"></i>
                </div>
                <div class="transaction-details">
                  <p class="transaction-name">Restaurant Bill</p>
                  <span class="transaction-id">ID: TXN2025120106</span>
                  <span class="transaction-date">Dec 1, 2025</span>
                </div>
                <div class="transaction-amount danger">-$75</div>
              </div>
            </div>
          </div>

          <div class="card">
            <div class="card-header">
              <h3>Quick Actions</h3>
            </div>
            <div class="card-body">
              <div class="quick-actions">
                <a href="/Transfer-Money" class="action-btn">
                  <i class="fas fa-paper-plane"></i>
                  <span>Send Money</span>
                </a>
                <a href="/profile" class="action-btn">
                  <i class="fas fa-qrcode"></i>
                  <span>Request</span>
                </a>
                <a href="/Transaction-History" class="action-btn">
                  <i class="fas fa-history"></i>
                  <span>History</span>
                </a>
                <a href="/Banks" class="action-btn">
                  <i class="fas fa-university"></i>
                  <span>Banks</span>
                </a>
              </div>
            </div>
          </div>
        </div>
        <% } else { %>
          <!-- Guest User Features Section -->
          <div class="guest-features">
            <div class="features-header">
              <h2>Why Choose ZenoPay?</h2>
              <p>Join thousands who trust us for their financial needs</p>
            </div>

            <div class="features-grid">
              <div class="feature-card">
                <div class="feature-icon">
                  <i class="fas fa-bolt"></i>
                </div>
                <h3>Instant Transfers</h3>
                <p>Send and receive money instantly with zero delays. Your transactions are processed in real-time.</p>
              </div>

              <div class="feature-card">
                <div class="feature-icon">
                  <i class="fas fa-shield-alt"></i>
                </div>
                <h3>Bank-Level Security</h3>
                <p>Your money and data are protected with military-grade encryption and advanced security protocols.</p>
              </div>

              <div class="feature-card">
                <div class="feature-icon">
                  <i class="fas fa-mobile-alt"></i>
                </div>
                <h3>Mobile First</h3>
                <p>Access your account anywhere, anytime. Our mobile-optimized platform works seamlessly on all devices.</p>
              </div>

              <div class="feature-card">
                <div class="feature-icon">
                  <i class="fas fa-percent"></i>
                </div>
                <h3>Zero Fees</h3>
                <p>No hidden charges, no monthly fees. Keep more of your money with our transparent pricing.</p>
              </div>

              <div class="feature-card">
                <div class="feature-icon">
                  <i class="fas fa-qrcode"></i>
                </div>
                <h3>QR Payments</h3>
                <p>Pay anyone instantly by scanning their QR code. Simple, fast, and secure.</p>
              </div>

              <div class="feature-card">
                <div class="feature-icon">
                  <i class="fas fa-headset"></i>
                </div>
                <h3>24/7 Support</h3>
                <p>Our dedicated support team is always here to help you with any questions or concerns.</p>
              </div>
            </div>
          </div>

          <!-- How It Works Section -->
          <div class="how-it-works">
            <div class="section-title">
              <h2>Get Started in 3 Simple Steps</h2>
            </div>
            <div class="steps-container">
              <div class="step-card">
                <div class="step-number">1</div>
                <div class="step-icon">
                  <i class="fas fa-user-plus"></i>
                </div>
                <h3>Create Account</h3>
                <p>Sign up in minutes with just your basic details. No paperwork required.</p>
              </div>

              <div class="step-arrow">
                <i class="fas fa-arrow-right"></i>
              </div>

              <div class="step-card">
                <div class="step-number">2</div>
                <div class="step-icon">
                  <i class="fas fa-university"></i>
                </div>
                <h3>Link Your Bank</h3>
                <p>Securely connect your bank account or add money to your ZenoPay wallet.</p>
              </div>

              <div class="step-arrow">
                <i class="fas fa-arrow-right"></i>
              </div>

              <div class="step-card">
                <div class="step-number">3</div>
                <div class="step-icon">
                  <i class="fas fa-rocket"></i>
                </div>
                <h3>Start Transacting</h3>
                <p>Send money, pay bills, and manage your finances with ease.</p>
              </div>
            </div>
          </div>

          <!-- Testimonials Section -->
          <div class="testimonials-section">
            <div class="section-title">
              <h2>What Our Users Say</h2>
            </div>
            <div class="testimonials-grid">
              <div class="testimonial-card">
                <div class="stars">
                  <i class="fas fa-star"></i>
                  <i class="fas fa-star"></i>
                  <i class="fas fa-star"></i>
                  <i class="fas fa-star"></i>
                  <i class="fas fa-star"></i>
                </div>
                <p>"ZenoPay has made managing my finances so much easier. The instant transfers are a game-changer!"</p>
                <div class="testimonial-author">
                  <strong>Priya Sharma</strong>
                  <span>Freelancer</span>
                </div>
              </div>

              <div class="testimonial-card">
                <div class="stars">
                  <i class="fas fa-star"></i>
                  <i class="fas fa-star"></i>
                  <i class="fas fa-star"></i>
                  <i class="fas fa-star"></i>
                  <i class="fas fa-star"></i>
                </div>
                <p>"The security features give me peace of mind. I trust ZenoPay with all my transactions."</p>
                <div class="testimonial-author">
                  <strong>Rahul Patel</strong>
                  <span>Business Owner</span>
                </div>
              </div>

              <div class="testimonial-card">
                <div class="stars">
                  <i class="fas fa-star"></i>
                  <i class="fas fa-star"></i>
                  <i class="fas fa-star"></i>
                  <i class="fas fa-star"></i>
                  <i class="fas fa-star"></i>
                </div>
                <p>"Simple, fast, and reliable. ZenoPay is exactly what I needed for my daily transactions."</p>
                <div class="testimonial-author">
                  <strong>Anjali Verma</strong>
                  <span>Student</span>
                </div>
              </div>
            </div>
          </div>

          <!-- CTA Section -->
          <div class="cta-section">
            <div class="cta-content">
              <h2>Ready to Experience Financial Freedom?</h2>
              <p>Join ZenoPay today and take control of your finances</p>
              <div class="cta-buttons">
                <a href="/register-zenopay" class="btn-primary large">
                  <i class="fas fa-rocket"></i> Get Started Free
                </a>
              </div>
            </div>
          </div>
        <% } %>

        <% if (isLoggedIn) { %>
        <!-- Additional Banking Features (Logged In Only) -->
        <div class="section-title">
          <h2>Banking Services</h2>
        </div>

        <div class="cards-grid">
          <div class="card">
            <div class="card-header">
              <h3>Bill Payments</h3>
              <button class="btn-link">Pay Now</button>
            </div>
            <div class="card-body">
              <div class="service-grid">
                <div class="service-item">
                  <i class="fas fa-bolt"></i>
                  <span>Electricity</span>
                </div>
                <div class="service-item">
                  <i class="fas fa-mobile-alt"></i>
                  <span>Mobile</span>
                </div>
                <div class="service-item">
                  <i class="fas fa-wifi"></i>
                  <span>Internet</span>
                </div>
                <div class="service-item">
                  <i class="fas fa-tint"></i>
                  <span>Water</span>
                </div>
                <div class="service-item">
                  <i class="fas fa-tv"></i>
                  <span>Cable TV</span>
                </div>
                <div class="service-item">
                  <i class="fas fa-fire"></i>
                  <span>Gas</span>
                </div>
              </div>
            </div>
          </div>

          <div class="card">
            <div class="card-header">
              <h3>Rewards & Loyalty</h3>
              <button class="btn-link">Redeem</button>
            </div>
            <div class="card-body">
              <div class="rewards-summary">
                <div class="rewards-circle">
                  <div class="points-display">
                    <h3>2,450</h3>
                    <p>Points</p>
                  </div>
                </div>
                <div class="rewards-info">
                  <div class="reward-stat">
                    <i class="fas fa-coins"></i>
                    <div>
                      <strong>$24.50</strong>
                      <span>Cash Value</span>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Loans & Insurance Section (Logged In Only) -->
        <div class="section-title">
          <h2>Financial Products</h2>
        </div>

        <div class="cards-grid">
          <div class="card">
            <div class="card-header">
              <h3>Loan Options</h3>
              <button class="btn-link">Apply</button>
            </div>
            <div class="card-body">
              <div class="loan-item">
                <i class="fas fa-home"></i>
                <div class="loan-details">
                  <h4>Home Loan</h4>
                  <p>Starting from 6.5% p.a.</p>
                </div>
                <button class="btn-small">Apply</button>
              </div>
              <div class="loan-item">
                <i class="fas fa-car"></i>
                <div class="loan-details">
                  <h4>Auto Loan</h4>
                  <p>Starting from 7.2% p.a.</p>
                </div>
                <button class="btn-small">Apply</button>
              </div>
              <div class="loan-item">
                <i class="fas fa-user-graduate"></i>
                <div class="loan-details">
                  <h4>Education Loan</h4>
                  <p>Starting from 5.8% p.a.</p>
                </div>
                <button class="btn-small">Apply</button>
              </div>
            </div>
          </div>

          <div class="card">
            <div class="card-header">
              <h3>Insurance Plans</h3>
              <button class="btn-link">Get Quote</button>
            </div>
            <div class="card-body">
              <div class="insurance-grid">
                <div class="insurance-card">
                  <i class="fas fa-heart"></i>
                  <h4>Health</h4>
                  <p>Coverage up to $100K</p>
                </div>
                <div class="insurance-card">
                  <i class="fas fa-shield-alt"></i>
                  <h4>Life</h4>
                  <p>Secure your family</p>
                </div>
                <div class="insurance-card">
                  <i class="fas fa-car-crash"></i>
                  <h4>Vehicle</h4>
                  <p>Comprehensive plans</p>
                </div>
              </div>
            </div>
          </div>

          <div class="card">
            <div class="card-header">
              <h3>Money Transfer</h3>
              <button class="btn-link">Send</button>
            </div>
            <div class="card-body">
              <div class="transfer-options">
                <div class="transfer-item">
                  <i class="fas fa-university"></i>
                  <div class="transfer-details">
                    <h4>Bank Transfer</h4>
                    <p>Free, within 24 hours</p>
                  </div>
                </div>
                <div class="transfer-item">
                  <i class="fas fa-globe"></i>
                  <div class="transfer-details">
                    <h4>International</h4>
                    <p>150+ countries supported</p>
                  </div>
                </div>
                <div class="transfer-item">
                  <i class="fas fa-qrcode"></i>
                  <div class="transfer-details">
                    <h4>QR Payment</h4>
                    <p>Instant transfer via QR</p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <% } %>
      </section>
    </main>

<%- include('partials/MobileNav') %>

    <script src="/js/dashboard.js"></script>
  </body>
</html>
