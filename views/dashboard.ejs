<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>ZenoPay Dashboard</title>
    <link rel="stylesheet" href="/css/dashboard.css" />
    <link rel="stylesheet" href="/css/header.css" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
    />
  </head>
  <body>
    <!-- Sidebar -->
    <%- include('partials/header') %>

    <!-- Main Content -->
    <main class="main-content">
      <!-- Navigation Bar -->
      <%- include('partials/navbar') %>

      <!-- Hero Section with Video -->
      <section class="hero-section">
        <div class="video-container">
          <video autoplay muted loop playsinline class="hero-video">
            <source src="/Video/zeno1.mp4" type="video/mp4" />
            Your browser does not support the video tag.
          </video>
          <div class="video-overlay"></div>
        </div>
        <div class="hero-content">
          <h1 class="hero-title">Your Financial Dashboard</h1>
          <p class="hero-subtitle">
            Manage your payments seamlessly with ZenoPay
          </p>
          <div class="hero-stats">
            <div class="stat-card">
              <i class="fas fa-dollar-sign"></i>
              <div class="stat-info">
                <h3>$45,231</h3>
                <p>Total Balance</p>
              </div>
            </div>
            <div class="stat-card">
              <i class="fas fa-arrow-up"></i>
              <div class="stat-info">
                <h3>+23%</h3>
                <p>This Month</p>
              </div>
            </div>
            <div class="stat-card">
              <i class="fas fa-users"></i>
              <div class="stat-info">
                <h3>1,234</h3>
                <p>Active Users</p>
              </div>
            </div>
          </div>
        </div>
      </section>

      <!-- Dashboard Cards -->
      <section class="dashboard-content">
        <div class="content-header">
          <h2>Overview</h2>
        </div>

        <div class="cards-grid">
          <div class="card">
            <div class="card-header">
              <h3>Recent Transactions</h3>
              <button class="btn-link">View All</button>
            </div>
            <div class="card-body">
              <div class="transaction-item">
                <div class="transaction-icon success">
                  <i class="fas fa-arrow-down"></i>
                </div>
                <div class="transaction-details">
                  <p class="transaction-name">Payment from Client A</p>
                  <span class="transaction-id">ID: TXN2025120601</span>
                  <span class="transaction-date">Dec 6, 2025</span>
                </div>
                <div class="transaction-amount success">+$1,200</div>
              </div>
              <div class="transaction-item">
                <div class="transaction-icon danger">
                  <i class="fas fa-arrow-up"></i>
                </div>
                <div class="transaction-details">
                  <p class="transaction-name">Subscription Payment</p>
                  <span class="transaction-id">ID: TXN2025120502</span>
                  <span class="transaction-date">Dec 5, 2025</span>
                </div>
                <div class="transaction-amount danger">-$99</div>
              </div>
              <div class="transaction-item">
                <div class="transaction-icon success">
                  <i class="fas fa-arrow-down"></i>
                </div>
                <div class="transaction-details">
                  <p class="transaction-name">Refund Received</p>
                  <span class="transaction-id">ID: TXN2025120403</span>
                  <span class="transaction-date">Dec 4, 2025</span>
                </div>
                <div class="transaction-amount success">+$450</div>
              </div>
              <div class="transaction-item">
                <div class="transaction-icon danger">
                  <i class="fas fa-arrow-up"></i>
                </div>
                <div class="transaction-details">
                  <p class="transaction-name">Online Shopping</p>
                  <span class="transaction-id">ID: TXN2025120304</span>
                  <span class="transaction-date">Dec 3, 2025</span>
                </div>
                <div class="transaction-amount danger">-$250</div>
              </div>
              <div class="transaction-item">
                <div class="transaction-icon success">
                  <i class="fas fa-arrow-down"></i>
                </div>
                <div class="transaction-details">
                  <p class="transaction-name">Freelance Payment</p>
                  <span class="transaction-id">ID: TXN2025120205</span>
                  <span class="transaction-date">Dec 2, 2025</span>
                </div>
                <div class="transaction-amount success">+$800</div>
              </div>
              <div class="transaction-item">
                <div class="transaction-icon danger">
                  <i class="fas fa-arrow-up"></i>
                </div>
                <div class="transaction-details">
                  <p class="transaction-name">Restaurant Bill</p>
                  <span class="transaction-id">ID: TXN2025120106</span>
                  <span class="transaction-date">Dec 1, 2025</span>
                </div>
                <div class="transaction-amount danger">-$75</div>
              </div>
            </div>
          </div>

          <div class="card">
            <div class="card-header">
              <h3>Quick Actions</h3>
            </div>
            <div class="card-body">
              <div class="quick-actions">
                <button class="action-btn">
                  <i class="fas fa-paper-plane"></i>
                  <span>Send Money</span>
                </button>
                <button class="action-btn">
                  <i class="fas fa-download"></i>
                  <span>Request</span>
                </button>
                <button class="action-btn">
                  <i class="fas fa-file-invoice"></i>
                  <span>Invoice</span>
                </button>
                <button class="action-btn">
                  <i class="fas fa-history"></i>
                  <span>History</span>
                </button>
              </div>
            </div>
          </div>
        </div>

        <!-- Additional Banking Features -->
        <div class="section-title">
          <h2>Banking Services</h2>
        </div>

        <div class="cards-grid">
          <div class="card">
            <div class="card-header">
              <h3>Bill Payments</h3>
              <button class="btn-link">Pay Now</button>
            </div>
            <div class="card-body">
              <div class="service-grid">
                <div class="service-item">
                  <i class="fas fa-bolt"></i>
                  <span>Electricity</span>
                </div>
                <div class="service-item">
                  <i class="fas fa-mobile-alt"></i>
                  <span>Mobile</span>
                </div>
                <div class="service-item">
                  <i class="fas fa-wifi"></i>
                  <span>Internet</span>
                </div>
                <div class="service-item">
                  <i class="fas fa-tint"></i>
                  <span>Water</span>
                </div>
                <div class="service-item">
                  <i class="fas fa-tv"></i>
                  <span>Cable TV</span>
                </div>
                <div class="service-item">
                  <i class="fas fa-fire"></i>
                  <span>Gas</span>
                </div>
              </div>
            </div>
          </div>

          <div class="card">
            <div class="card-header">
              <h3>Rewards & Loyalty</h3>
              <button class="btn-link">Redeem</button>
            </div>
            <div class="card-body">
              <div class="rewards-summary">
                <div class="rewards-circle">
                  <div class="points-display">
                    <h3>2,450</h3>
                    <p>Points</p>
                  </div>
                </div>
                <div class="rewards-info">
                  <div class="reward-stat">
                    <i class="fas fa-coins"></i>
                    <div>
                      <strong>$24.50</strong>
                      <span>Cash Value</span>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Loans & Insurance Section -->
        <div class="section-title">
          <h2>Financial Products</h2>
        </div>

        <div class="cards-grid">
          <div class="card">
            <div class="card-header">
              <h3>Loan Options</h3>
              <button class="btn-link">Apply</button>
            </div>
            <div class="card-body">
              <div class="loan-item">
                <i class="fas fa-home"></i>
                <div class="loan-details">
                  <h4>Home Loan</h4>
                  <p>Starting from 6.5% p.a.</p>
                </div>
                <button class="btn-small">Apply</button>
              </div>
              <div class="loan-item">
                <i class="fas fa-car"></i>
                <div class="loan-details">
                  <h4>Auto Loan</h4>
                  <p>Starting from 7.2% p.a.</p>
                </div>
                <button class="btn-small">Apply</button>
              </div>
              <div class="loan-item">
                <i class="fas fa-user-graduate"></i>
                <div class="loan-details">
                  <h4>Education Loan</h4>
                  <p>Starting from 5.8% p.a.</p>
                </div>
                <button class="btn-small">Apply</button>
              </div>
            </div>
          </div>

          <div class="card">
            <div class="card-header">
              <h3>Insurance Plans</h3>
              <button class="btn-link">Get Quote</button>
            </div>
            <div class="card-body">
              <div class="insurance-grid">
                <div class="insurance-card">
                  <i class="fas fa-heart"></i>
                  <h4>Health</h4>
                  <p>Coverage up to $100K</p>
                </div>
                <div class="insurance-card">
                  <i class="fas fa-shield-alt"></i>
                  <h4>Life</h4>
                  <p>Secure your family</p>
                </div>
                <div class="insurance-card">
                  <i class="fas fa-car-crash"></i>
                  <h4>Vehicle</h4>
                  <p>Comprehensive plans</p>
                </div>
              </div>
            </div>
          </div>

          <div class="card">
            <div class="card-header">
              <h3>Money Transfer</h3>
              <button class="btn-link">Send</button>
            </div>
            <div class="card-body">
              <div class="transfer-options">
                <div class="transfer-item">
                  <i class="fas fa-university"></i>
                  <div class="transfer-details">
                    <h4>Bank Transfer</h4>
                    <p>Free, within 24 hours</p>
                  </div>
                </div>
                <div class="transfer-item">
                  <i class="fas fa-globe"></i>
                  <div class="transfer-details">
                    <h4>International</h4>
                    <p>150+ countries supported</p>
                  </div>
                </div>
                <div class="transfer-item">
                  <i class="fas fa-qrcode"></i>
                  <div class="transfer-details">
                    <h4>QR Payment</h4>
                    <p>Instant transfer via QR</p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>
    </main>

    <!-- Mobile Footer Navigation -->
    <footer class="mobile-footer">
      <nav class="footer-nav">
        <a href="#dashboard" class="footer-nav-item active">
          <i class="fas fa-home"></i>
          <span>Home</span>
        </a>
        <a href="#transactions" class="footer-nav-item">
          <i class="fas fa-exchange-alt"></i>
          <span>Transactions</span>
        </a>
        <a href="#payments" class="footer-nav-item">
          <i class="fas fa-credit-card"></i>
          <span>Payments</span>
        </a>
        <a href="#analytics" class="footer-nav-item">
          <i class="fas fa-chart-line"></i>
          <span>Analytics</span>
        </a>
        <a href="#settings" class="footer-nav-item">
          <i class="fas fa-cog"></i>
          <span>Settings</span>
        </a>
      </nav>
    </footer>

    <script src="/js/dashboard.js"></script>
  </body>
</html>
