<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Forgot Password - ZenoPay</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/forgot-password.css">
</head>
<body>
    <div class="forgot-password-container">
        <!-- Back Button -->
        <a href="/login" class="back-button" aria-label="Back to login">
            <i class="fas fa-arrow-left"></i>
        </a>

        <!-- Main Card -->
        <div class="forgot-password-card">
            <!-- Icon -->
            <div class="icon-wrapper">
                <div class="icon-circle">
                    <i class="fas fa-lock"></i>
                </div>
            </div>

            <!-- Form Section (Initial State) -->
            <div id="form-section" class="form-section active">
                <h1 class="heading">Forgot Password?</h1>
                <p class="subtext">Enter your email and we'll send reset instructions</p>

                <form id="forgot-password-form" class="forgot-form">
                    <!-- Email Input -->
                    <div class="form-group">
                        <label for="email" class="form-label">Email Address</label>
                        <div class="input-wrapper">
                            <i class="fas fa-envelope input-icon"></i>
                            <input 
                                type="email" 
                                id="email" 
                                name="email" 
                                class="form-input" 
                                placeholder="Enter your email address"
                                required
                            >
                            <span class="input-error-icon">
                                <i class="fas fa-exclamation-circle"></i>
                            </span>
                        </div>
                        <span class="error-message" id="email-error"></span>
                    </div>

                    <!-- Submit Button -->
                    <button type="submit" class="btn btn-primary btn-submit">
                        <span class="btn-text">Send Reset Link</span>
                        <span class="btn-loader">
                            <i class="fas fa-spinner fa-spin"></i>
                        </span>
                    </button>
                </form>

                <!-- Back to Login Link -->
                <p class="back-link">
                    Remember your password? 
                    <a href="/login">Back to Login</a>
                </p>
            </div>

            <!-- Success Section -->
            <div id="success-section" class="success-section">
                <div class="success-icon-wrapper">
                    <div class="success-icon-circle">
                        <i class="fas fa-envelope"></i>
                        <span class="checkmark-overlay">
                            <i class="fas fa-check"></i>
                        </span>
                    </div>
                </div>

                <h2 class="success-heading">Check Your Email</h2>
                <p class="success-message">
                    We've sent password reset instructions to <span id="display-email" class="email-highlight"></span>
                </p>

                <p class="success-note">
                    <i class="fas fa-info-circle"></i>
                    The link will expire in 24 hours. Make sure to check your spam folder if you don't see it.
                </p>

                <!-- Resend Link -->
                <div class="success-actions">
                    <button id="resend-btn" class="btn btn-secondary">
                        <span class="btn-text">Didn't receive? Resend</span>
                        <span class="btn-loader">
                            <i class="fas fa-spinner fa-spin"></i>
                        </span>
                    </button>

                    <a href="/login" class="btn btn-link">
                        <i class="fas fa-arrow-left"></i>
                        Back to Login
                    </a>
                </div>

                <!-- Resend Countdown -->
                <div id="resend-countdown" class="resend-countdown hidden">
                    <p>Resend available in <span id="countdown-timer">60</span>s</p>
                </div>
            </div>
        </div>

        <!-- Help Section -->
        <div class="help-section">
            <p>Still having trouble? <a href="mailto:support@zenopay.com">Contact support</a></p>
        </div>
    </div>

    <!-- Toast Notification -->
    <div id="toast-container" class="toast-container"></div>

    <script src="/js/forgot-password.js"></script>
</body>
</html>
