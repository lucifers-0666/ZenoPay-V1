<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>ZenoPay Dashboard</title>
    <link rel="stylesheet" href="/css/dashboard.css" />
    <link rel="stylesheet" href="/css/header.css" />
    <link rel="stylesheet" href="/css/login.css" />

    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
    />
    <script src="/js/Loader.js"></script>
    <script src="/js/dashboard.js"></script>
  </head>
  <body>
    <!-- Sidebar -->
    <aside class="sidebar">
      <div class="logo">
        <img src="/Images/bgFavicon.png" alt="ZenoPay Logo" class="logo-img" />
        <h2>ZenoPay</h2>
      </div>
      <hr class="sidebar-divider" />
      <div class="sidebar-qr-section">
        <div class="qr-code">
          <img
            src="https://api.qrserver.com/v1/create-qr-code/?size=120x120&data=upi://pay?pa=9448902474@axis&pn=ZenoPay"
            alt="QR Code"
          />
        </div>
        <div class="upi-id">
          <i class="fas fa-mobile-alt"></i>
          <span>9448902474@axis</span>
        </div>
      </div>
      <hr class="sidebar-divider" />
      <nav class="sidebar-nav">
        <ul>
          <li class="active">
            <a href="/">
              <i class="fas fa-home"></i>
              <span>Dashboard</span>
            </a>
          </li>
          <li>
            <a href="#transactions">
              <i class="fas fa-exchange-alt"></i>
              <span>Transactions</span>
            </a>
          </li>
          <li>
            <a href="#payments">
              <i class="fas fa-credit-card"></i>
              <span>Payments</span>
            </a>
          </li>
          <li>
            <a href="#analytics">
              <i class="fas fa-chart-line"></i>
              <span>Analytics</span>
            </a>
          </li>
          <li>
            <a href="/Profile">
              <i class="fas fa-user-circle"></i>
              <span>Accounts</span>
            </a>
          </li>
          <li>
            <a href="#settings">
              <i class="fas fa-cog"></i>
              <span>Settings</span>
            </a>
          </li>
        </ul>
      </nav>
      <div class="sidebar-footer">
        <a href="/logout">
          <i class="fas fa-sign-out-alt"></i>
          <span>Logout</span>
        </a>
      </div>
    </aside>
  </body>
</html>
