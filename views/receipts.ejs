<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= pageTitle %></title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800;900&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/css/receipts.css">
  <style>
    /* Inline critical styles for faster loading */
    * { margin: 0; padding: 0; box-sizing: border-box; }
    body { font-family: 'Inter', sans-serif; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); min-height: 100vh; padding: 2rem 1rem; }
    .page-container { max-width: 1400px; margin: 0 auto; }
    .loading-container { text-align: center; padding: 3rem; }
    .spinner { width: 40px; height: 40px; border: 4px solid #f3f4f6; border-top-color: #667eea; border-radius: 50%; animation: spin 0.8s linear infinite; margin: 2rem auto; }
    @keyframes spin { to { transform: rotate(360deg); } }
  </style>
</head>
<body>
  <div class="page-container">
    <!-- Header -->
    <header class="page-header">
      <div class="header-content">
        <div>
          <h1>Payment Receipts</h1>
          <p class="subtitle">View, download, and manage your transaction receipts</p>
        </div>
        <div class="header-actions">
          <button class="btn btn-secondary" onclick="exportFiltered()">
            <i class="fas fa-file-export"></i> Export
          </button>
          <button class="btn btn-primary" onclick="viewTransactions()">
            <i class="fas fa-history"></i> View Transactions
          </button>
        </div>
      </div>
    </header>

    <!-- Enhanced Stats Cards -->
    <div class="stats-grid">
      <div class="stat-card primary animated">
        <div class="stat-icon">
          <i class="fas fa-receipt"></i>
        </div>
        <div class="stat-content">
          <span class="stat-label">Total Receipts</span>
          <span class="stat-value" data-count="<%= stats.totalReceipts %>">0</span>
          <span class="stat-trend"><i class="fas fa-arrow-up"></i> +3 this week</span>
        </div>
      </div>
      
      <div class="stat-card hover-lift">
        <div class="stat-icon success">
          <i class="fas fa-wallet"></i>
        </div>
        <div class="stat-content">
          <span class="stat-label">Total Amount</span>
          <span class="stat-value">â‚¹<%= stats.totalAmount.toFixed(2) %></span>
        </div>
        <canvas class="mini-chart" id="chart-amount" width="120" height="40"></canvas>
      </div>
      
      <div class="stat-card hover-lift">
        <div class="stat-icon danger">
          <i class="fas fa-arrow-up"></i>
        </div>
        <div class="stat-content">
          <span class="stat-label">Receipts Sent</span>
          <span class="stat-value"><%= stats.sentCount %></span>
        </div>
        <canvas class="mini-chart" id="chart-sent" width="120" height="40"></canvas>
      </div>
      
      <div class="stat-card hover-lift">
        <div class="stat-icon success">
          <i class="fas fa-arrow-down"></i>
        </div>
        <div class="stat-content">
          <span class="stat-label">Receipts Received</span>
          <span class="stat-value"><%= stats.receivedCount %></span>
        </div>
        <canvas class="mini-chart" id="chart-received" width="120" height="40"></canvas>
      </div>
    </div>

    <!-- Quick Filters Pills -->
    <div class="quick-filters-section">
      <div class="quick-filters-pills">
        <button class="filter-pill active" data-filter="all" onclick="applyQuickFilter('all')">
          <i class="fas fa-list"></i> All <span class="badge"><%= stats.totalReceipts %></span>
        </button>
        <button class="filter-pill" data-filter="today" onclick="applyQuickFilter('today')">
          <i class="fas fa-calendar-day"></i> Today <span class="badge">0</span>
        </button>
        <button class="filter-pill" data-filter="week" onclick="applyQuickFilter('week')">
          <i class="fas fa-calendar-week"></i> This Week <span class="badge">0</span>
        </button>
        <button class="filter-pill" data-filter="month" onclick="applyQuickFilter('month')">
          <i class="fas fa-calendar-alt"></i> This Month <span class="badge">0</span>
        </button>
        <button class="filter-pill" data-filter="3months" onclick="applyQuickFilter('3months')">
          <i class="fas fa-calendar"></i> Last 3 Months <span class="badge">0</span>
        </button>
      </div>
      <button class="btn btn-icon" onclick="toggleAdvancedFilters()">
        <i class="fas fa-sliders-h"></i>
      </button>
    </div>

    <!-- Enhanced Filter Bar -->
      <div class="search-input-wrapper">
        <i class="fas fa-search"></i>
        <input type="text" class="search-input" id="search-input" placeholder="Search by receipt number, recipient, or amount...">
      </div>
      <div class="filter-controls">
        <div class="filter-group">
          <label>Transaction Type</label>
          <select id="filter-type">
            <option value="all">All Types</option>
            <option value="sent">Sent</option>
            <option value="received">Received</option>
          </select>
        </div>
        <div class="filter-group">
          <label>Status</label>
          <select id="filter-status">
            <option value="all">All Status</option>
            <option value="success">Success</option>
            <option value="pending">Pending</option>
            <option value="failed">Failed</option>
          </select>
        </div>
        <div class="filter-group">
          <label>From Date</label>
          <input type="date" id="filter-date-from">
        </div>
        <div class="filter-group">
          <label>To Date</label>
          <input type="date" id="filter-date-to">
        </div>
      </div>
      <div class="quick-filters">
        <button class="quick-filter-btn active" onclick="applyQuickFilter('all')">All Time</button>
        <button class="quick-filter-btn" onclick="applyQuickFilter('today')">Today</button>
        <button class="quick-filter-btn" onclick="applyQuickFilter('week')">Last 7 Days</button>
        <button class="quick-filter-btn" onclick="applyQuickFilter('month')">Last 30 Days</button>
        <button class="quick-filter-btn" onclick="applyQuickFilter('this-month')">This Month</button>
      </div>
    </div>

    <div class="view-controls">
      <div><span id="results-count" style="color: #6b7280;">Loading receipts...</span></div>
      <div class="view-toggle">
        <button class="view-toggle-btn active" id="grid-view-btn" onclick="switchView('grid')"><i class="fas fa-th-large"></i></button>
        <button class="view-toggle-btn" id="list-view-btn" onclick="switchView('list')"><i class="fas fa-list"></i></button>
      </div>
    </div>

    <div class="receipts-grid active" id="receipts-grid"></div>
    <div class="receipts-list" id="receipts-list">
      <table class="receipts-table">
        <thead>
          <tr>
            <th>Receipt #</th><th>Date & Time</th><th>Recipient</th><th>Type</th><th>Amount</th><th>Fee</th><th>Status</th><th>Actions</th>
          </tr>
        </thead>
        <tbody id="receipts-table-body"></tbody>
      </table>
    </div>

    <div class="pagination" id="pagination"></div>
    <div class="empty-state" id="empty-state" style="display: none;">
      <i class="fas fa-receipt"></i>
      <h3>No Receipts Found</h3>
      <p>You don't have any receipts yet. Start making transactions to see them here.</p>
    </div>
  </div>

  <div class="modal" id="receipt-modal">
    <div class="modal-content">
      <div class="modal-header">
        <h2 id="modal-title">Receipt Details</h2>
        <button class="close-btn" onclick="closeReceiptModal()">&times;</button>
      </div>
      <div class="modal-body" id="receipt-detail-body">
        <div class="loading-container"><div class="spinner"></div></div>
      </div>
    </div>
  </div>

  <div class="modal" id="email-modal">
    <div class="modal-content" style="max-width: 500px;">
      <div class="modal-header">
        <h2>Email Receipt</h2>
        <button class="close-btn" onclick="closeEmailModal()">&times;</button>
      </div>
      <div class="modal-body">
        <div class="filter-group">
          <label>Email Address</label>
          <input type="email" id="email-address" placeholder="Enter email address" style="width: 100%; padding: 0.75rem; border: 2px solid #e5e7eb; border-radius: 8px;">
        </div>
        <div style="margin-top: 1.5rem; display: flex; gap: 1rem;">
          <button class="btn btn-primary" style="flex: 1;" onclick="sendEmail()"><i class="fas fa-paper-plane"></i> Send Email</button>
          <button class="btn btn-secondary" style="flex: 1;" onclick="closeEmailModal()">Cancel</button>
        </div>
      </div>
    </div>
  </div>

  <div class="toast" id="toast"></div>
  <script src="/js/receipts.js"></script>
</body>
</html>
