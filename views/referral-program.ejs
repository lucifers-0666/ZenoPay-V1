<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= pageTitle %></title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/css/referral-program.css">
  <script src="https://cdn.jsdelivr.net/npm/qrcode@1.5.3/build/qrcode.min.js"></script>
</head>
<body>
  <div class="page-container">
    <!-- Hero Section -->
    <section class="hero-section">
      <div class="hero-content">
        <div class="reward-badge">
          <span class="reward-amount">$<%= referralData.rewardPerReferral.toFixed(2) %></span>
          <span class="reward-label">per referral</span>
        </div>
        <h1>Refer Friends, Earn Rewards</h1>
        <p class="subtitle">Share ZenoPay with friends and earn rewards when they sign up and verify their account.</p>
        <button class="btn btn-primary btn-lg" id="invite-now-btn">
          <i class="fas fa-user-plus"></i> Invite Friends Now
        </button>
      </div>
      <div class="hero-illustration">
        <i class="fas fa-gifts"></i>
      </div>
    </section>

    <!-- How It Works -->
    <section class="how-it-works-section">
      <h2 class="section-title">How It Works</h2>
      <div class="steps-grid">
        <div class="step-card">
          <div class="step-number">1</div>
          <div class="step-icon"><i class="fas fa-share-alt"></i></div>
          <h3>Share Your Link</h3>
          <p>Share your unique referral link with friends via email, social media, or messaging</p>
        </div>

        <div class="step-card">
          <div class="step-number">2</div>
          <div class="step-icon"><i class="fas fa-user-check"></i></div>
          <h3>Friend Signs Up & Verifies</h3>
          <p>Your friend creates an account and completes identity verification</p>
        </div>

        <div class="step-card">
          <div class="step-number">3</div>
          <div class="step-icon"><i class="fas fa-gift"></i></div>
          <h3>You Both Earn Rewards</h3>
          <p>You and your friend each get $<%= referralData.rewardPerReferral.toFixed(2) %> credited to your accounts</p>
        </div>
      </div>
    </section>

    <!-- Referral Code/Link Section -->
    <section class="referral-section">
      <h2 class="section-title">Your Referral Code</h2>
      
      <div class="referral-code-card">
        <div class="code-container">
          <div class="code-display" id="referral-code"><%= referralData.referralCode %></div>
          <button class="btn btn-icon copy-code-btn" data-copy="<%= referralData.referralCode %>" title="Copy Code">
            <i class="fas fa-copy"></i>
          </button>
        </div>

        <div class="link-container">
          <input type="text" class="link-input" id="referral-link" value="<%= referralData.referralLink %>" readonly>
          <button class="btn btn-primary copy-link-btn" data-copy="<%= referralData.referralLink %>">
            <i class="fas fa-copy"></i> Copy Link
          </button>
        </div>

        <div class="qr-code-container">
          <div class="qr-code" id="qr-code"></div>
          <p class="qr-label">Scan to refer</p>
        </div>
      </div>

      <!-- Share Options -->
      <div class="share-section">
        <h3>Share Via</h3>
        <div class="share-buttons">
          <button class="share-btn email-btn" data-method="email">
            <i class="fas fa-envelope"></i> Email
          </button>
          <button class="share-btn whatsapp-btn" data-method="whatsapp">
            <i class="fab fa-whatsapp"></i> WhatsApp
          </button>
          <button class="share-btn facebook-btn" data-method="facebook">
            <i class="fab fa-facebook"></i> Facebook
          </button>
          <button class="share-btn twitter-btn" data-method="twitter">
            <i class="fab fa-twitter"></i> Twitter
          </button>
          <button class="share-btn sms-btn" data-method="sms">
            <i class="fas fa-sms"></i> SMS
          </button>
        </div>
      </div>
    </section>

    <!-- Referral Stats Dashboard -->
    <section class="stats-section">
      <h2 class="section-title">Your Referral Stats</h2>
      <div class="stats-grid">
        <div class="stat-card">
          <div class="stat-icon"><i class="fas fa-users"></i></div>
          <div class="stat-value"><%= referralData.stats.totalReferrals %></div>
          <div class="stat-label">Total Referrals</div>
        </div>

        <div class="stat-card">
          <div class="stat-icon"><i class="fas fa-user-check"></i></div>
          <div class="stat-value"><%= referralData.stats.successfulSignups %></div>
          <div class="stat-label">Successful Sign-ups</div>
        </div>

        <div class="stat-card">
          <div class="stat-icon"><i class="fas fa-hourglass-half"></i></div>
          <div class="stat-value">$<%= referralData.stats.pendingRewards.toFixed(2) %></div>
          <div class="stat-label">Pending Rewards</div>
        </div>

        <div class="stat-card">
          <div class="stat-icon"><i class="fas fa-coins"></i></div>
          <div class="stat-value">$<%= referralData.stats.totalEarned.toFixed(2) %></div>
          <div class="stat-label">Total Earned</div>
        </div>
      </div>
    </section>

    <!-- Available Rewards -->
    <section class="rewards-section">
      <div class="rewards-card">
        <h3>Available Rewards Balance</h3>
        <div class="balance-display">${<%= referralData.stats.availableBalance.toFixed(2) %></div>
        <button class="btn btn-primary btn-lg" id="redeem-btn">
          <i class="fas fa-wallet"></i> Redeem Rewards
        </button>
      </div>
    </section>

    <!-- Referral History -->
    <section class="history-section">
      <h2 class="section-title">Referral History</h2>
      <div class="table-container">
        <table class="referral-table">
          <thead>
            <tr>
              <th>Friend</th>
              <th>Status</th>
              <th>Date Referred</th>
              <th>Reward</th>
            </tr>
          </thead>
          <tbody>
            <% referralData.referrals.forEach(referral => { %>
            <tr>
              <td><%= referral.friendName %></td>
              <td>
                <span class="status-badge status-<%= referral.status %>">
                  <%= referral.status.replace('-', ' ').toUpperCase() %>
                </span>
              </td>
              <td><%= new Date(referral.dateReferred).toLocaleDateString() %></td>
              <td class="<%= referral.rewardAmount > 0 ? 'positive' : '' %>">
                <% if (referral.rewardAmount > 0) { %>
                  +$<%= referral.rewardAmount.toFixed(2) %>
                <% } else { %>
                  -
                <% } %>
              </td>
            </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
    </section>

    <!-- Leaderboard (Optional) -->
    <section class="leaderboard-section">
      <h2 class="section-title">
        <i class="fas fa-trophy"></i> Top Referrers This Month
      </h2>
      <div class="leaderboard-list">
        <% referralData.leaderboard.forEach(entry => { %>
        <div class="leaderboard-item <%= entry.isCurrentUser ? 'current-user' : '' %>">
          <div class="rank">#<%= entry.rank %></div>
          <div class="name"><%= entry.name %></div>
          <div class="referrals"><%= entry.referrals %> referrals</div>
        </div>
        <% }); %>
      </div>
    </section>

    <!-- Terms & Conditions -->
    <section class="terms-section">
      <details>
        <summary><i class="fas fa-file-contract"></i> Terms & Conditions</summary>
        <div class="terms-content">
          <ul>
            <li>Referral rewards are credited after the referred user completes account verification</li>
            <li>Both referrer and referee must be active ZenoPay users in good standing</li>
            <li>Rewards may take up to 7 business days to be credited</li>
            <li>Maximum 50 successful referrals per month</li>
            <li>Rewards expire after 12 months of inactivity</li>
            <li>ZenoPay reserves the right to modify or terminate the program at any time</li>
            <li>Fraudulent referrals will result in account suspension</li>
          </ul>
        </div>
      </details>
    </section>
  </div>

  <!-- Redeem Modal -->
  <div class="modal" id="redeem-modal" hidden>
    <div class="modal-content">
      <div class="modal-header">
        <h2>Redeem Rewards</h2>
        <button class="close-btn" id="close-redeem-modal">&times;</button>
      </div>
      <div class="modal-body">
        <p>Available Balance: <strong>$<%= referralData.stats.availableBalance.toFixed(2) %></strong></p>
        
        <form id="redeem-form">
          <div class="form-group">
            <label class="label">Redemption Method</label>
            <select id="redeem-method" class="input select">
              <option value="wallet">Add to Wallet Balance</option>
              <option value="transaction">Use for Next Transaction</option>
              <option value="withdraw">Withdraw to Bank</option>
            </select>
          </div>
          
          <div class="form-actions">
            <button type="button" class="btn btn-secondary" id="cancel-redeem-btn">Cancel</button>
            <button type="submit" class="btn btn-primary">Confirm Redemption</button>
          </div>
        </form>
      </div>
    </div>
  </div>

  <div class="toast" id="toast" hidden></div>

  <script src="/js/referral-program.js"></script>
</body>
</html>
