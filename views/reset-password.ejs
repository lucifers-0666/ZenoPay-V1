<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Reset Password - ZenoPay</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/reset-password.css">
</head>
<body>
    <div class="reset-password-container">
        <!-- Back Button -->
        <a href="/login" class="back-button" aria-label="Back to login">
            <i class="fas fa-arrow-left"></i>
        </a>

        <!-- Main Card -->
        <div class="reset-password-card">
            <!-- Icon -->
            <div class="icon-wrapper">
                <div class="icon-circle">
                    <i class="fas fa-lock"></i>
                </div>
            </div>

            <!-- Error State (Invalid/Expired Token) -->
            <% if (!tokenValid) { %>
                <div id="error-section" class="error-section active">
                    <div class="error-icon-wrapper">
                        <div class="error-icon-circle">
                            <i class="fas fa-exclamation-circle"></i>
                        </div>
                    </div>

                    <h1 class="heading error-heading">Reset Link Expired</h1>
                    <p class="error-message">
                        <%= message || "Your password reset link has expired or is invalid." %>
                    </p>

                    <p class="error-note">
                        <i class="fas fa-info-circle"></i>
                        Password reset links expire after 30 minutes for security reasons.
                    </p>

                    <a href="/forgot-password" class="btn btn-primary">
                        <i class="fas fa-arrow-left"></i>
                        Request a New Reset Link
                    </a>

                    <a href="/login" class="btn btn-link">
                        <i class="fas fa-sign-in-alt"></i>
                        Back to Login
                    </a>
                </div>
            <% } else { %>
                <!-- Form Section -->
                <div id="form-section" class="form-section active">
                    <h1 class="heading">Create New Password</h1>
                    <p class="subtext">Your new password must be different from previous passwords</p>

                    <form id="reset-password-form" class="reset-form">
                        <!-- Hidden token field -->
                        <input type="hidden" id="token" value="<%= token %>">

                        <!-- New Password -->
                        <div class="form-group">
                            <label for="password" class="form-label">New Password</label>
                            <div class="input-wrapper">
                                <i class="fas fa-lock input-icon"></i>
                                <input 
                                    type="password" 
                                    id="password" 
                                    name="password" 
                                    class="form-input" 
                                    placeholder="Enter your new password"
                                    required
                                >
                                <button type="button" class="password-toggle" onclick="togglePasswordVisibility('password')" aria-label="Toggle password visibility">
                                    <i class="fas fa-eye"></i>
                                </button>
                                <span class="input-error-icon">
                                    <i class="fas fa-exclamation-circle"></i>
                                </span>
                            </div>
                            <span class="error-message" id="password-error"></span>

                            <!-- Password Strength Indicator -->
                            <div class="password-strength">
                                <div class="strength-bar">
                                    <div class="strength-fill" id="strength-fill"></div>
                                </div>
                                <span class="strength-label" id="strength-label">Enter a password</span>
                            </div>
                        </div>

                        <!-- Confirm Password -->
                        <div class="form-group">
                            <label for="confirm-password" class="form-label">Confirm New Password</label>
                            <div class="input-wrapper">
                                <i class="fas fa-lock input-icon"></i>
                                <input 
                                    type="password" 
                                    id="confirm-password" 
                                    name="confirmPassword" 
                                    class="form-input" 
                                    placeholder="Confirm your new password"
                                    required
                                >
                                <button type="button" class="password-toggle" onclick="togglePasswordVisibility('confirm-password')" aria-label="Toggle confirm password visibility">
                                    <i class="fas fa-eye"></i>
                                </button>
                                <span class="input-error-icon">
                                    <i class="fas fa-exclamation-circle"></i>
                                </span>
                            </div>
                            <span class="error-message" id="confirm-password-error"></span>

                            <!-- Match Indicator -->
                            <div class="match-indicator" id="match-indicator" style="display: none;">
                                <i class="fas fa-check-circle"></i>
                                <span>Passwords match</span>
                            </div>
                        </div>

                        <!-- Requirements Checklist -->
                        <div class="requirements">
                            <p class="requirements-title">Password requirements:</p>
                            <ul class="requirements-list">
                                <li class="requirement-item" id="requirement-length">
                                    <i class="fas fa-check"></i>
                                    <span>At least 8 characters</span>
                                </li>
                                <li class="requirement-item" id="requirement-uppercase">
                                    <i class="fas fa-check"></i>
                                    <span>One uppercase letter (A-Z)</span>
                                </li>
                                <li class="requirement-item" id="requirement-number">
                                    <i class="fas fa-check"></i>
                                    <span>One number (0-9)</span>
                                </li>
                                <li class="requirement-item" id="requirement-special">
                                    <i class="fas fa-check"></i>
                                    <span>One special character (!@#$%^&*)</span>
                                </li>
                            </ul>
                        </div>

                        <!-- Submit Button -->
                        <button type="submit" class="btn btn-primary btn-submit">
                            <span class="btn-text">Reset Password</span>
                            <span class="btn-loader">
                                <i class="fas fa-spinner fa-spin"></i>
                            </span>
                        </button>
                    </form>

                    <!-- Back to Login Link -->
                    <p class="back-link">
                        Remember your password? 
                        <a href="/login">Back to Login</a>
                    </p>
                </div>

                <!-- Success Section -->
                <div id="success-section" class="success-section">
                    <div class="success-icon-wrapper">
                        <div class="success-icon-circle">
                            <i class="fas fa-check"></i>
                        </div>
                        <div class="success-animation"></div>
                    </div>

                    <h2 class="success-heading">Password Reset Successful!</h2>
                    <p class="success-message">
                        Your password has been reset successfully. You can now log in with your new password.
                    </p>

                    <div class="redirect-info">
                        <p>Redirecting to login in <span id="countdown">3</span>s...</p>
                    </div>

                    <a href="/login" class="btn btn-primary">
                        <i class="fas fa-sign-in-alt"></i>
                        Go to Login
                    </a>
                </div>
            <% } %>
        </div>

        <!-- Help Section -->
        <div class="help-section">
            <p>Still having trouble? <a href="mailto:support@zenopay.com">Contact support</a></p>
        </div>
    </div>

    <!-- Toast Notification -->
    <div id="toast-container" class="toast-container"></div>

    <script src="/js/reset-password.js"></script>
</body>
</html>
